---
import { size } from '@variants'
import type { VariantProps } from 'cva'
import { cva } from 'cva'

export type ListProps = Props
type Props = VariantProps<typeof variant>

const variant = cva({
  base: 'gap-y-size4 gap-x-size5',
  variants: {
    layout: {
      row: 'flex',
      col: 'flex flex-col',
    },
    align: {
      start: 'items-start',
      center: 'items-center',
      stretch: 'items-stretch',
    },
    size: size,
  },
  defaultVariants: {
    layout: 'col',
    align: 'start',
  },
})

const slot = await Astro.slots.render('default')
---

{
  slot?.trim().length > 0 && (
    <ul
      data-component="list"
      class={variant(Astro.props)}
    >
      <slot />
    </ul>
  )
}
