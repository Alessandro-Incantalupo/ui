---
import { getEntry } from 'astro:content'
import Whatsapp from '../components/elements/Whatsapp.astro'
import Footer from '../components/elements/footer/Footer.astro'
import Header from '../components/elements/header/Header.astro'
import Layout from '../components/elements/layout/Layout.astro'
import Legal from '../components/globals/Legal.astro'

const cta = await getEntry('globals', 'cta')
const globals = await getEntry('settings', 'globals')
const merged = { ...cta.data, ...globals?.data.cta }

const { seo } = Astro.props
---

<Layout {seo}>
  <Header />
  <main>
    <slot />
    <Whatsapp />
  </main>
  <Footer />
  <Legal />
</Layout>
