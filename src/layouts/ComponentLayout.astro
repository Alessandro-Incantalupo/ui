---
import type { CollectionEntry } from 'astro:content'
import Prose from 'fulldev-ui/components/experimental/Prose.astro'
import Section from 'fulldev-ui/components/Section.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'
import NavigationButtons from '../components/NavigationButtons.astro'

type Props = CollectionEntry<'pages'>

const { render } = Astro.props
const { Content } = await render()

const currentSlug = Astro.url.pathname.replace(/^\/|\/$/g, '')
---

<Layout
  {...Astro.props}
  class:list="component-layout"
>
  <Section>
    <Prose>
      <Content />
    </Prose>
    <NavigationButtons currentSlug={currentSlug} />
  </Section>
  <slot />
</Layout>
