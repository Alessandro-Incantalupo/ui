---
import type { CollectionEntry } from 'astro:content'
import Intro from 'fulldev-ui/blocks/Intro.astro'
import PropsTable from 'fulldev-ui/components/docs/PropsTable.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Section from 'fulldev-ui/components/Section.astro'
import Layout from 'fulldev-ui/layouts/Layout.astro'

type Props = CollectionEntry<'pages'>

const { data, render, ...rest } = Astro.props
const { Content } = await render()

// const allComponents = await Astro.glob('../../components/**/*.astro')
// const foundComponent = allComponents.find(
//   (c) => c.file.split('/').pop()?.replace('.astro', '') === component
// )
---

<Layout
  {...Astro.props}
  class:list={['component-layout']}
>
  <Intro
    variant="base"
    size="sm"
    {...data}
  />
  <Section>
    <PropsTable component={data.title} />
  </Section>
  <Section>
    <Heading size="sm">Examples</Heading>
    <Content />
  </Section>
  <slot />
</Layout>
