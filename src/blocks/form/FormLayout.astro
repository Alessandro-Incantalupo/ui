---
import type { CollectionEntry } from 'astro:content'
import { Layout } from '../../components/layout'
import { FormSection } from '.'

interface Props {
  entry: CollectionEntry<'product'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <FormSection
    slug={entry.slug}
/>
  <slot />
</Layout>
