---
import { Article } from '@silveltman/fullui/components'
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'

interface Props extends ComponentProps<typeof Article> {
  slug?: CollectionEntry<'policies'>['slug']
  collection?: never
}

const { props } = Astro
---

<Article
  {...props}
  class="policies-article"
  collection="policies"
/>
