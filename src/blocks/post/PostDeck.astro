---
import type { ComponentProps } from 'astro/types'
import type { PostCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  posts?: (
    | ComponentProps<typeof PostCard>
    | ComponentProps<typeof PostCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="post-deck"
  collection="posts"
  cards={props.posts}
/>
