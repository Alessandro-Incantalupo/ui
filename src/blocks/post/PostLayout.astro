---
import type { CollectionEntry } from 'astro:content'
import { PostArticle, PostDeck } from '.'
import { Layout } from '../../components'

interface Props {
  entry: CollectionEntry<'posts'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <PostArticle
    {...entry.data}
    {...entry}
  />
  <PostDeck
    frame="panel"
    layout="masonry"
    heading="Overige artikelen"
  />
  <slot />
</Layout>
