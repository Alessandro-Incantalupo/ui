---
import type { CollectionEntry } from 'astro:content'
import { Layout } from '../../components'
import Sections from '../../components/sections/Sections.astro'

interface Props {
  entry: CollectionEntry<'services'>
  scheme: 'light' | 'dark'
}

const { entry, scheme } = Astro.props
---

<Layout
  {...entry.data}
  class="service-layout"
  class:list={['page-layout', scheme]}
>
  <Sections {...entry.data} />
  <slot />
</Layout>
