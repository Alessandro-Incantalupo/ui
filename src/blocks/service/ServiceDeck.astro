---
import type { ComponentProps } from 'astro/types'
import type { ServiceCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  services?: (
    | ComponentProps<typeof ServiceCard>
    | ComponentProps<typeof ServiceCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="service-deck"
  collection="services"
  cards={props.services}
/>
