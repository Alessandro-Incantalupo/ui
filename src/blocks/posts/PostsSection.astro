---
import { Section } from '@silveltman/fullui/components'
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'

interface Props extends ComponentProps<typeof Section> {
  slug?: CollectionEntry<'posts'>['slug']
  collection?: never
}

const { props } = Astro
---

<Section
  {...props}
  align="center"
  collection="posts"
  class="posts-section"
/>
