---
import { Deck } from '@silveltman/fullui/components'
import type { ComponentProps } from 'astro/types'
import type { PostsCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  posts?: (
    | ComponentProps<typeof PostsCard>
    | ComponentProps<typeof PostsCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="posts-deck"
  collection="posts"
  cards={props.posts}
/>
