---
import type { CollectionEntry } from 'astro:content'
import { Layout } from 'src/components'
import { PostsArticle } from '.'

interface Props {
  entry: CollectionEntry<'posts'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <PostsArticle
    {...entry.data}
    {...entry}
  />
  <slot />
</Layout>
