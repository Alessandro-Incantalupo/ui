---
import type { CollectionEntry } from 'astro:content'
import { Layout } from 'src/components'
import PostsArticle from './PostsArticle.astro'

interface Props {
  entry: CollectionEntry<'posts'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <PostsArticle {...entry.data} />
  <slot />
</Layout>
