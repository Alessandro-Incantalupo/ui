---
import { Layout } from '@silveltman/fullui/src/components'
import type { CollectionEntry } from 'astro:content'
import { PostsArticle, PostsDeck } from '.'

interface Props {
  entry: CollectionEntry<'posts'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <PostsArticle
    {...entry.data}
    {...entry}
  />
  <PostsDeck
    frame="panel"
    layout="masonry"
    heading="Overige artikelen"
  />
  <slot />
</Layout>
