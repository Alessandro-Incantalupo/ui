---
import type { CollectionEntry } from 'astro:content'
import Article from '../../components/article/Article.astro'
import Layout from '../../components/layout/Layout.astro'
import BlocksRenderer from '../BlocksRenderer.astro'

interface Props {
  entry: CollectionEntry<'pages'>
  scheme: 'light' | 'dark'
}

const { entry, scheme } = Astro.props
---

<Layout
  {...entry.data}
  class="page-layout"
  class:list={['page-layout', scheme]}
>
  <!-- <Article
    {...entry}
    {...entry.data}
  /> -->
  <BlocksRenderer {...entry.data} />
  <slot />
</Layout>
