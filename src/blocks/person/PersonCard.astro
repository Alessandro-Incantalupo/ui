---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import { Card } from '../../components'

interface Props extends ComponentProps<typeof Card> {
  slug?: CollectionEntry<'persons'>['slug']
  collection?: never
}

let { props } = Astro
---

<Card
  {...props}
  class="person-card"
  collection="persons"
/>
