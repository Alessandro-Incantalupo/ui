---
import type { ComponentProps } from 'astro/types'
import type { PersonCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  persons?: (
    | ComponentProps<typeof PersonCard>
    | ComponentProps<typeof PersonCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="person-deck"
  collection="persons"
  cards={props.persons}
/>
