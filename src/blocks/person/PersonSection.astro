---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import { Section } from '../../components'

interface Props extends Omit<ComponentProps<typeof Section>, 'collection'> {
  slug?: CollectionEntry<'persons'>['slug']
}

const { props } = Astro
---

<Section
  {...props}
  class="person-section"
  collection="persons"
/>
