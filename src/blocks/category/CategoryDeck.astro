---
import type { ComponentProps } from 'astro/types'
import { Deck } from '../../components'
import CategoryCard from './CategoryCard.astro'

interface Props
  extends Omit<ComponentProps<typeof Deck>, 'collection' | 'cards'> {
  categories?: (
    | ComponentProps<typeof CategoryCard>
    | ComponentProps<typeof CategoryCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  class="category-deck"
  collection="categories"
  cards={props.categories}
  {...props}
/>
