---
import type { ComponentProps } from 'astro/types'
import { CategoryCard } from '../.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  categories?: (
    | ComponentProps<typeof CategoryCard>
    | ComponentProps<typeof CategoryCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  class="category-deck"
  collection="categories"
  cards={props.categories}
  {...props}
/>
..