---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import { Card } from '../../components'

interface Props extends Omit<ComponentProps<typeof Card>, 'collection'> {
  slug?: CollectionEntry<'categories'>['slug']
}

let { props } = Astro
---

<Card
  class="category-card"
  collection="categories"
  {...props}
/>
