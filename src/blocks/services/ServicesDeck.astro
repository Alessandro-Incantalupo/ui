---
import type { ComponentProps } from 'astro/types'
import { Deck } from 'src/components'
import type { ServicesCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  services?: (
    | ComponentProps<typeof ServicesCard>
    | ComponentProps<typeof ServicesCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="services-deck"
  collection="services"
  cards={props.services}
/>
