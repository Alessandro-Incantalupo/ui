---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import { Card } from '../../components'

interface Props extends ComponentProps<typeof Card> {
  slug?: CollectionEntry<'product'>['slug']
}

let { props } = Astro
---

<Card
  {...props}
  class="product-card"
  collection="products"
/>
