---
import type { ComponentProps } from 'astro/types'
import type { ProductCard } from '.'
import { Deck } from '../../components/deck'

interface Props extends ComponentProps<typeof Deck> {
  products?: (
    | ComponentProps<typeof ProductCard>
    | ComponentProps<typeof ProductCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="product-deck"
  collection="products"
  cards={props.products}
/>
