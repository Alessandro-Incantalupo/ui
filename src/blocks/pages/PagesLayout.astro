---
import Blocks from '@silveltman/fullui/blocks/Blocks.astro'
import { Article } from '@silveltman/fullui/components/article'
import { Layout } from '@silveltman/fullui/components/layout'
import type { CollectionEntry } from 'astro:content'

interface Props {
  entry: CollectionEntry<'pages'>
}

const { entry } = Astro.props
---

<Layout
  {...entry.data}
  class="pages-layout"
>
  <Article
    {...entry}
    {...entry.data}
  />
  <Blocks {...entry.data} />
  <slot />
</Layout>
