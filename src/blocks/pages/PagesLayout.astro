---
import type { CollectionEntry } from 'astro:content'
import { Article, Blocks, Layout } from 'src/components'

interface Props {
  entry?: CollectionEntry<'pages'>
}

const { entry } = Astro.props

console.log('entry in pages layout', entry.data)
---

<Layout
  {...entry.data}
  class="pages-layout"
>
  <Article
    {...entry}
    {...entry.data}
  />
  <Blocks {...entry.data} />
  <slot />
</Layout>
