---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import { Section } from '../../components'

interface Props extends Omit<ComponentProps<typeof Section>, 'collection'> {
  slug?: CollectionEntry<'policies'>['slug']
}

const { props } = Astro
---

<Section
  {...props}
  collection="policies"
  class="policy-section"
/>
