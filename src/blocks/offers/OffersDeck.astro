---
import type { ComponentProps } from 'astro/types'
import { Deck } from 'src/components'
import type { OffersCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  offers?: (
    | ComponentProps<typeof OffersCard>
    | ComponentProps<typeof OffersCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="offers-deck"
  cards={props.offers}
/>
