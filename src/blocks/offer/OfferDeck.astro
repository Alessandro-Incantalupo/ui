---
import type { ComponentProps } from 'astro/types'
import type { OfferCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  offers?: (
    | ComponentProps<typeof OfferCard>
    | ComponentProps<typeof OfferCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="offer-deck"
  cards={props.offers}
/>
