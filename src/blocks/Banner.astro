---
import type { ComponentProps } from 'astro/types'
import FullHeader from 'fulldev-ui/components/Header.astro'
import Icon from 'fulldev-ui/components/Icon.astro'
import Link from 'fulldev-ui/components/Link.astro'

interface Props extends ComponentProps<typeof FullHeader> {
  text?: string
  icon?: string
  href?: string
}

const { text, href, icon, ...rest } = Astro.props
---

<FullHeader
  class:list={'banner'}
  structure="row"
  align="center"
  size="sm"
  {...rest}
>
  <Link
    href={href}
    set:html={text}
  >
    <Icon name={icon} />
  </Link>
</FullHeader>
