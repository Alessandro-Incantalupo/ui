---
import type { ComponentProps } from 'astro/types'
import type { FeatureCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  features?: (
    | ComponentProps<typeof FeatureCard>
    | ComponentProps<typeof FeatureCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="feature-deck"
  cards={props.features}
/>
