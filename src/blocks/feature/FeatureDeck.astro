---
import type { ComponentProps } from 'astro/types'
import type { FeatureCard } from '.'
import { Deck } from '../../components'

interface Props
  extends Omit<ComponentProps<typeof Deck>, 'collection' | 'slug'> {
  features?: ComponentProps<typeof FeatureCard>[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="feature-deck"
  cards={props.features}
/>
