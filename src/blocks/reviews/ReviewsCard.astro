---
import { Card } from '@silveltman/fullui/components'
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'

interface Props extends ComponentProps<typeof Card> {
  slug?: CollectionEntry<'reviews'>['slug']
  collection?: never
}

let { props } = Astro
---

<Card
  {...props}
  class="reviews-card"
  collection="reviews"
/>
