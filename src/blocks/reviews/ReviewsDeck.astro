---
import { Deck } from '@silveltman/fullui/components'
import type { ComponentProps } from 'astro/types'
import type { ReviewsCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  reviews?: (
    | ComponentProps<typeof ReviewsCard>
    | ComponentProps<typeof ReviewsCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="reviews-deck"
  collection="reviews"
  cards={props.reviews}
/>
