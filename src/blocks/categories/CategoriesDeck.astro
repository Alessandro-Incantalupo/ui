---
import { CategoriesCard } from '@silveltman/fullui/src/blocks'
import { Deck } from '@silveltman/fullui/src/components'
import type { ComponentProps } from 'astro/types'

interface Props extends ComponentProps<typeof Deck> {
  categories?: (
    | ComponentProps<typeof CategoriesCard>
    | ComponentProps<typeof CategoriesCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  class="categories-deck"
  collection="categories"
  cards={props.categories}
  {...props}
/>
