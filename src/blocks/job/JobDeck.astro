---
import type { ComponentProps } from 'astro/types'
import type { JobCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  jobs?: (
    | ComponentProps<typeof JobCard>
    | ComponentProps<typeof JobCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="job-deck"
  collection="jobs"
  cards={props.jobs}
/>
