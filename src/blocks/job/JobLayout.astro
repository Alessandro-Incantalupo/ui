---
import type { CollectionEntry } from 'astro:content'
import { Layout } from '../../components'
import Sections from '../../components/sections/Sections.astro'

interface Props {
  entry: CollectionEntry<'jobs'>
}

const { entry } = Astro.props
---

<Layout
  {...entry.data}
  class="job-layout"
>
  <Sections {...entry.data} />
  <slot />
</Layout>
