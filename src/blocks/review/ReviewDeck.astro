---
import type { ComponentProps } from 'astro/types'
import type { ReviewCard } from '.'
import { Deck } from '../../components'

interface Props extends ComponentProps<typeof Deck> {
  reviews?: (
    | ComponentProps<typeof ReviewCard>
    | ComponentProps<typeof ReviewCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="review-deck"
  collection="reviews"
  cards={props.reviews}
/>
