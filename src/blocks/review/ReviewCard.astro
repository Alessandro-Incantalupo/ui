---
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import { Card } from '../../components'

interface Props extends ComponentProps<typeof Card> {
  slug?: CollectionEntry<'review'>['slug']
}

let { props } = Astro
---

<Card
  {...props}
  class="review-card"
  collection="reviews"
/>
