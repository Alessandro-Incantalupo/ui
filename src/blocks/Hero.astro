---
import Section from 'fulldev-ui/components/Section.astro'

const { ...rest } = Astro.props
---

<Section
  class="hero"
  structure="column"
  size="lg"
  level={1}
  align="center"
  {...rest}
/>

<style lang="scss" is:global>
  .hero {
    .p,
    .heading {
      text-wrap: balance;
    }
  }
</style>
