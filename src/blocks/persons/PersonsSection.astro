---
import { Section } from '@silveltman/fullui/src/components'
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'

interface Props extends ComponentProps<typeof Section> {
  slug?: CollectionEntry<'persons'>['slug']
  collection?: never
}

const { props } = Astro
---

<Section
  {...props}
  class="persons-section"
  collection="persons"
/>
