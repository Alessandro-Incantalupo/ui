---
import { Deck } from '@silveltman/fullui/src/components'
import type { ComponentProps } from 'astro/types'
import type { PersonsCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  persons?: (
    | ComponentProps<typeof PersonsCard>
    | ComponentProps<typeof PersonsCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="persons-deck"
  collection="persons"
  cards={props.persons}
/>
