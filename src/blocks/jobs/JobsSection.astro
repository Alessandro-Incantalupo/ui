---
import { Section } from '@silveltman/fullui/src/components'
import type { ComponentProps } from 'astro/types'
import type { CollectionEntry } from 'astro:content'

interface Props extends ComponentProps<typeof Section> {
  slug?: CollectionEntry<'jobs'>['slug']
  collection?: never
}

const { props } = Astro
---

<Section
  {...props}
  collection="jobs"
  class="jobs-section"
/>
