---
import type { CollectionEntry } from 'astro:content'
import { Layout } from '../../components'
import BlocksRenderer from '../BlocksRenderer.astro'

interface Props {
  entry: CollectionEntry<'jobs'>
}

const { entry } = Astro.props
---

<Layout
  {...entry.data}
  class="jobs-layout"
>
  <BlocksRenderer {...entry.data} />
  <slot />
</Layout>
