---
import type { HTMLAttributes } from 'astro/types'
import Label from 'fulldev-ui/components/Label.astro'
import Root from 'fulldev-ui/components/Root.astro'

type Props = Omit<HTMLAttributes<'input'>, 'type'> & {
  label?: string
  color?: 'base' | 'brand'
  contrast?: boolean
  icon?: string
}

const {
  label,
  contrast,
  icon,
  name,
  placeholder,
  type,
  value,
  disabled,
  checked,
  required,
  ...rest
} = Astro.props
---

<Root
  structure="row"
  class:list={['checkbox']}
  {...rest}
>
  <Root
    {disabled}
    {required}
    {checked}
    as="input"
    type="checkbox"
    id={name}
    if={name}
    {name}
    {...rest}
  />
  <Label
    for={name}
    text={label}
    {contrast}
  />
</Root>

<style>
  .checkbox {
    input {
      display: block;
      width: var(--text-1);
      height: var(--text-1);
      accent-color: var(--color-9);
    }
  }
</style>
