---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'section'> = Polymorphic<{ as: As }> & {
  scheme?: 'light' | 'dark'
  color?: 'base' | 'brand'
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  frame?: 'fill' | 'viewport' | 'contain' | 'panel'
  variant?: 'ghost' | 'subtle' | 'outline' | 'soft' | 'solid' | 'surface'
  align?: 'start' | 'center' | 'end'
  structure?: 'column' | 'split' | 'spread'
  // order?: 'reverse' | 'switch'
  space?: 'auto' | 'none'
  compact?: boolean
}

const {
  as = 'div',
  space = 'auto',
  frame = 'fill',
  structure = 'column',
  variant = 'ghost',
  align = 'start',
  ...rest
} = Astro.props
---

<Root
  class:list={['section']}
  {as}
  {frame}
  {variant}
  {align}
  {space}
  {structure}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  .section {
    --section-space-top: var(--space-7);
    --section-space-left: var(--gutter-left);
    --section-space-right: var(--gutter-right);
    --section-space-bottom: var(--space-7);

    position: relative;
    margin: var(--outer-y) var(--outer-x);
    background-color: var(--background);

    &:first-child {
      --section-space-top: var(--space-6);
      --section-space-bottom: var(--space-6);
    }

    &.frame-fill {
      padding: var(--section-space-top) var(--section-space-right)
        var(--section-space-bottom) var(--section-space-left);
    }

    &.frame-viewport {
      padding: var(--section-space-top) var(--section-space-right)
        var(--section-space-bottom) var(--section-space-left);
      min-height: 100vh;
    }

    &.frame-panel {
      margin: var(--section-space-top) var(--section-space-right)
        var(--section-space-bottom) var(--section-space-left);
      border: 1px solid var(--border);
      border-radius: var(--radius-2);
      padding: var(--space-6) min(var(--gutter), var(--space-7));
      overflow: hidden;

      & {
        @media (min-width: 1024px) {
          padding-top: var(--space-7);
          padding-bottom: var(--space-7);
        }
      }
    }

    // &.frame-contain {
