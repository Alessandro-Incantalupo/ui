---
import type { HTMLString } from 'astro/runtime/server/escape.js'
import type { HTMLAttributes } from 'astro/types'
import { getSlot } from '../../utils'

interface Props {
  html?: HTMLString
  class?: HTMLAttributes<'div'>['class']
}

const { class: className } = Astro.props
const slot = await getSlot(Astro)
---

{
  slot && (
    <div class:list={['html', className]}>
      <slot />
    </div>
  )
}

<style>
  div {
    width: 100%;
    display: flex;
    flex-direction: column;
    row-gap: var(--spacing-3);
    max-width: max(calc(var(--spacing-6) * 3.8), 500px);
  }
</style>
