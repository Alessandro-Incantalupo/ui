---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from 'src'
import Icon from './Icon.astro'
import Tag from './Tag.astro'

interface Base extends ComponentProps<typeof Icon> {
  spec: string | null
}

type Props = BuildProps<Base, 'spec', 'li'>
const props = buildProps(Astro, 'spec')

const { spec, icon = 'check', _icon, ...rest } = props
---

<Tag {...rest}>
  <Icon
    {icon}
    {_icon}
  />
  <Fragment set:html={spec} />
  <slot />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--font-size-1);
  }
</style>
