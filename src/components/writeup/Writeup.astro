---
import type { ComponentProps } from 'astro/types'
import { Heading, Tagline, Text, WriteupRoot } from 'src'

interface Props
  extends ComponentProps<typeof WriteupRoot>,
    ComponentProps<typeof Tagline>,
    ComponentProps<typeof Heading>,
    ComponentProps<typeof Text> {}

const { props } = Astro
---

<WriteupRoot {...props}>
  <Tagline {...props} />
  <Heading {...props} />
  <Text {...props} />
  <slot />
</WriteupRoot>
