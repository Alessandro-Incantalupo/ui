---
import type { ComponentProps } from 'astro/types'
import { LinksItems, LinksRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'

interface Base
  extends ComponentProps<typeof LinksRoot>,
    ComponentProps<typeof LinksItems> {}

type Props = BuildProps<Base, 'links'>
const props = buildProps(Astro, 'links')
---

<LinksRoot {...props}>
  <LinksItems {...props} />
</LinksRoot>
