---
import { buildProps, type BuildProps } from '../utils'

interface Base {
  textarea?: string | null
}

type Props = BuildProps<Base, 'textarea', 'textarea'>
const props = buildProps(Astro, 'textarea')

const { textarea, rows = 5, ...rest } = props
---

{
  textarea && (
    <textarea
      name={textarea}
      id={textarea}
      rows={rows}
      {...rest}
    />
  )
}

<style is:global>
  .textarea {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--border-radius-1);
    background: var(--hue3);
    padding: var(--spacing-2);
    color: var(--hue12);
    font-size: var(--font-size-2);
    line-height: 1;

    &:hover {
      border: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
