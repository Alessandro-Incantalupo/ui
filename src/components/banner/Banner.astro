---
import type { ComponentProps } from 'astro/types'
import { BannerRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'
import { Links } from '../links'
import { Specs } from '../specs'

interface Base
  extends ComponentProps<typeof BannerRoot>,
    Pick<ComponentProps<typeof Links>, 'links' | '_links'>,
    Pick<ComponentProps<typeof Specs>, 'specs' | '_specs'> {}

type Props = BuildProps<Base, 'banner'>
const props = buildProps(Astro, 'banner')

const { specs, _specs, links, _links, ...rest } = props
---

<BannerRoot {...rest}>
  <Specs
    {specs}
    {_specs}
  />
  <Links
    {links}
    {_links}
  />
</BannerRoot>

<style>
  /* FIXME volgensmij is deze styling onnnodig */
  span {
    color: var(--description);
    font-size: var(--font-size-1);
  }

  div {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    color: var(--description);
    font-size: var(--font-size-1);
  }
</style>
