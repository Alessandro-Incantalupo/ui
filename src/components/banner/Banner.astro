---
import type { ComponentProps } from 'astro/types'
import { getEntry } from 'astro:content'
import { Links } from 'src/components/links'
import { Text } from 'src/components/text'
import { BannerRoot } from '.'

interface Props
  extends ComponentProps<typeof BannerRoot>,
    ComponentProps<typeof Links>,
    ComponentProps<typeof Text> {}

let { props } = Astro
props = {
  ...(await getEntry('globals', 'banner')).data,
  ...props,
}
---

<BannerRoot {...props}>
  <!-- TODO: replace text with Specs (checkmark) -->
  <Text {...props} />
  <Links {...props} />
</BannerRoot>

<style>
  span {
    color: var(--text);
    font-size: var(--text1);
  }

  div {
    display: flex;
    gap: var(--flow3);
    align-items: center;
    color: var(--text);
    font-size: var(--text1);
  }
</style>
