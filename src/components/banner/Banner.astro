---
import type { ComponentProps } from 'astro/types'
import { getEntry } from 'astro:content'
import { BannerRoot } from '.'
import { Links } from '../links'
import { Spec } from '../spec'
import { Text } from '../text'

interface Props
  extends ComponentProps<typeof BannerRoot>,
    ComponentProps<typeof Links>,
    ComponentProps<typeof Text>,
    ComponentProps<typeof Spec> {}

let { props } = Astro
props = {
  ...(await getEntry('globals', 'banner'))?.data,
  ...props,
}
---

<BannerRoot {...props}>
  <!-- TODO: replace text with Specs (checkmark) -->
  <Spec {...props} />
  <Links {...props} />
</BannerRoot>

<style>
  span {
    color: var(--text);
    font-size: var(--font-size-1);
  }

  div {
    display: flex;
    gap: var(--spacing-3);
    align-items: center;
    color: var(--text);
    font-size: var(--font-size-1);
  }
</style>
