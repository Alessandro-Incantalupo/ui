---
import type { ComponentProps } from 'astro/types'
import { BannerRoot } from '.'
import { Links } from '../links'
import { Specs } from '../specs'
import { Text } from '../text'

interface Props
  extends ComponentProps<typeof BannerRoot>,
    ComponentProps<typeof Links>,
    ComponentProps<typeof Text>,
    ComponentProps<typeof Specs> {}

let { props } = Astro

console.log('banner', props)

---
<BannerRoot {...props}>
  <Specs {...props} />
  <Links {...props} />
</BannerRoot>

<style>
  span {
    color: var(--text);
    font-size: var(--font-size-1);
  }

  div {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    color: var(--text);
    font-size: var(--font-size-1);
  }
</style>
