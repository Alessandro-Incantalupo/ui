---
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

interface Base {
  tagline?: string | null
  hue?: 'base' | 'accent' | null
}

type Props = BuildProps<Base, 'tagline', 'p'>
const props = buildProps(Astro, 'tagline')

const { tagline, hue = 'hue-accent', ...rest } = props
---

<Tag
  {hue}
  {...rest}
>
  <Fragment set:html={tagline} />
  <slot />
</Tag>

<style is:global>
  /* FIXME */
  .tagline {
    --font-size: var(--font-size-1);
    --font-weight: 600;
    --color: var(--hue11);
    color: var(--color);
    font: var(--font);
  }
</style>
