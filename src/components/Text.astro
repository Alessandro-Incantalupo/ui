---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'p'> = Polymorphic<{ as: As }> & {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  color?: 'base' | 'brand'
  contrast?: boolean
  html?: string
  text?: string
}

// TODO text alleen p, html apparte component voor genaamd <Html> die een div wordt. Misschien kan dit wel gwn de prose zijn
const { color = 'base', html, as = html ? 'div' : 'p', ...rest } = Astro.props
---

<Root
  class:list={['text']}
  {as}
  {html}
  {color}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  .text {
    margin: 0;
    max-width: calc(var(--space-4) * 36);
    color: var(--text, var(--color-11));
    font-weight: var(--font-weight);
    font-size: var(--text-2);
    line-height: 1.625;
    font-family: var(--font-family);
  }
</style>
