---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Column from 'fulldev-ui/components/Column.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Text from 'fulldev-ui/components/Text.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  if?: any
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  color?: 'base' | 'brand'
  variant?: 'solid' | 'surface' | 'soft' | 'outline'
  structure?: 'row' | 'column'
  level?: 1 | 2 | 3 | 4 | 5 | 6
  compact?: boolean
  heading?: string
  text?: string
  icon?: string
  href?: string
  target?: string
}

const {
  variant = 'soft',
  structure = 'row',
  color = 'brand',
  compact = true,
  level = 5,
  heading,
  target,
  text,
  icon,
  href,
  ...rest
} = Astro.props
---

<Box
  class:list={'channel'}
  {compact}
  {structure}
  {...rest}
>
  <Button
    {variant}
    {color}
    {href}
    {target}
    {icon}
  />
  <Column>
    <Heading
      {level}
      html={heading}
    />
    <Text
      style={{ marginTop: 'var(--space-1)' }}
      html={text}
    />
  </Column>
</Box>

<style>
  .channel {
    gap: var(--space-4);

    * {
      margin: 0;
    }

    .column {
      gap: var(--space-1);

      * {
        margin: 0;
      }
    }
  }
</style>
