---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  color?: 'base' | 'brand'
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  compact?: boolean
  position?: 'inset'
}

const { ...rest } = Astro.props
---

<Root
  class:list={['carousel']}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  .carousel {
    --column-width: calc(16 * var(--space-4));

    display: flex;
    position: relative;
    position: relative;
    flex-direction: row;
    align-items: flex-start;
    gap: var(--space-4);
    padding-bottom: var(--space-4);
    width: 100%;
    overflow-x: auto;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;

    > .full {
      flex-grow: 0;
      flex-shrink: 0;
      width: var(--column-width);
      scroll-snap-align: center;
    }

    &.position-inset {
      margin-right: calc(var(--section-space-right) * -1);
      margin-left: calc(var(--section-space-left) * -1);
      padding-right: var(--section-space-right);
      padding-left: var(--section-space-left);
      width: calc(
        100% + var(--section-space-left) + var(--section-space-right)
      );
    }
  }
</style>
