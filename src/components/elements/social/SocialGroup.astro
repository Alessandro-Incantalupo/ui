---
import { getEntry } from 'astro:content'
import Group from '../../wrappers/Group.astro'
import Social from './Social.astro'
const company = (await getEntry('globals', 'company')).data

interface Props {
  socials?: boolean | null
}

const { socials } = Astro.props

const keys = Object.keys(company.socials)
const filteredKeys = keys.filter((key) => company.socials[key])
---

<Group>
  {socials && filteredKeys.map((key: any) => <Social {key} />)}
</Group>
