---
interface Props {
  prose?: any
}

const { prose } = Astro.props
---

{
  (
    <>
      <div
        class:list={[
          'w-full max-w-3xl text-left',
          '[&_h1]:(heading mb-flow3) [&_h1+p]:(mb-flow6) ',
          '[&_h2]:(heading mt-flow5 mb-flow3)',
          '[&_h3]:(subheading mt-flow5 mb-flow3)',
          '[&_p]:(text mt-flow3)',
          '[&_*:first-child]:mt-0 [&_*:last-child]:mb-0',
        ]}
        set:html={prose}
      />
      <slot />
    </>
  )
}
