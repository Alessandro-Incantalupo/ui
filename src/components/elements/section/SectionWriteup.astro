---
export interface Props {
  layout?: 'left' | 'center' | 'split' | 'wide'
  class?: string
}

const { layout, class: className } = Astro.props
const slot = await Astro.slots.render('default')
---

{
  slot?.trim().length > 0 && (
    <div class:list={['writeup', layout, className]}>
      <slot />
    </div>
  )
}

<style>
  div {
    width: 100%;
    display: flex;
    flex-direction: column;
    row-gap: var(--flow3);
    max-width: calc(var(--flow6) * 3.6);

    &:where(.center) {
      align-items: center;
      text-align: center;
    }

    &:where(.left) {
      align-items: left;
      text-align: left;
    }
  }
</style>
