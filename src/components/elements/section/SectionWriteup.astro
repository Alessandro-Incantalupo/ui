---
export interface Props {
  layout?: 'left' | 'center' | 'split' | 'wide'
  class?: string
}

const { layout, class: className } = Astro.props
const slot = await Astro.slots.render('default')

console.log(slot, 'slot')
---

{
  slot?.trim().length > 0 && (
    <div class:list={['writeup', layout, className]}>
      <slot />
    </div>
  )
}

<style>
  div {
    container-type: inline-size;
    width: 100%;
    display: flex;
    flex-direction: column;
    row-gap: var(--spacing3);
    max-width: max(800px, 50vw);

    &:where(.center) {
      align-items: center;
      text-align: center;
    }

    &:where(.left) {
      align-items: left;
      text-align: left;
    }
  }
</style>
