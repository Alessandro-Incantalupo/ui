---
export interface Props {
  layout?: 'left' | 'center' | 'split' | 'wide'
  class?: string
}

const { layout = 'left', class: className } = Astro.props
const slot = await Astro.slots.render('default')

const CLAMP_START = 320
const CLAMP_END = 1024
const clamp = (min: number, max: number) => {
  const slope = (max - min) / (CLAMP_END - CLAMP_START)
  const intersect = -CLAMP_START * slope + min
  return `clamp( ${min}px, ${intersect}px + ${slope * 100}vw, ${max}px)`
}
---

{
  slot?.trim().length > 0 && (
    <div class:list={['segment', layout, className]}>
      <Fragment set:html={slot} />
    </div>
  )
}

<style>
  .segment {
    padding: var(--spacer) var(--gutter-padding);
    display: flex;
    flex-direction: column;
    row-gap: max(16px, 2vw);
    position: relative;
    z-index: 10;
    row-gap: var(--flow4);
    column-gap: var(--flow5);
    container: segment / inline-size;
    width: 100%;

    &:where(.left) {
      align-items: flex-start;
      text-align: left;
    }
    &:where(.center) {
      align-items: center;
      text-align: center;
    }
    &:where(.split) {
      align-items: flex-start;
      text-align: left;
    }

    &:where(.wide) {
      align-items: flex-start;
      text-align: left;

      @media (min-width: 1024px) {
        align-items: center;
        justify-content: space-between;
        flex-direction: row;
      }
    }
  }
</style>
