---
import '@unocss/reset/tailwind.css'

import type { Props as HeadingProps } from '../Heading.astro'
import Heading from '../Heading.astro'
import type { Props as TaglineProps } from '../Tagline.astro'
import Tagline from '../Tagline.astro'
import type { Props as TextProps } from '../Text.astro'
import Text from '../Text.astro'
import type { Props as ButtonGroupProps } from '../button/ButtonGroup.astro'
import ButtonGroup from '../button/ButtonGroup.astro'
import type { Props as ChannelGroupProps } from '../channel/ChannelGroup.astro'
import ChannelGroup from '../channel/ChannelGroup.astro'
import type { Props as DeckProps } from '../deck/Deck.astro'
import Deck from '../deck/Deck.astro'
import type { Props as ImageProps } from '../image/Image.astro'
import Image from '../image/Image.astro'
import type { Props as SectionSegmentProps } from './SectionSegment.astro'
import SectionSegment from './SectionSegment.astro'
import type { Props as SectionWrapperProps } from './SectionWrapper.astro'
import SectionWrapper from './SectionWrapper.astro'
import type { Props as SectionWriteupProps } from './SectionWriteup.astro'
import SectionWriteup from './SectionWriteup.astro'

export interface Props
  extends SectionWrapperProps,
    SectionSegmentProps,
    SectionWriteupProps,
    TaglineProps,
    HeadingProps,
    TextProps,
    ButtonGroupProps,
    ChannelGroupProps,
    DeckProps {
  image?: ImageProps | null
}

const { props } = Astro
---

<SectionWrapper {...props}>
  <SectionSegment {...props}>
    <SectionWriteup {...props}>
      <Tagline {...props} />
      <Heading {...props} />
      <Text {...props} />
      <slot name="writeup" />
    </SectionWriteup>
    <ButtonGroup {...props} />
    <ChannelGroup {...props} />
    <slot name="segment" />
  </SectionSegment>
  <Deck {...props} />
  <Image {...props.image} />
  <slot />
</SectionWrapper>
