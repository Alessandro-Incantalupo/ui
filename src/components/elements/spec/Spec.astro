---
export type SpecProps = Props
interface Props {
  spec?: string
}

const { spec, ...restProps } = Astro.props
---

{
  spec && (
    <li {...restProps}>
      <i>checkmark</i>
      <span>{spec}</span>
    </li>
  )
}

<style lang="postcss">
  li {
    color: var(--un-preset-theme-textColor-base);
    line-height: 1.625;
    font-family: "Open Sans";
    gap: 0.5em;
    display: flex;
    /* @apply spec text text-hue12 gap-.5em flex; */

    i {
      --un-icon: url("data:image/svg+xml;utf8,%3Csvg viewBox='0 0 24 24' width='1em' height='1em' xmlns='http://www.w3.org/2000/svg' %3E%3Cpath fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m5 12l5 5L20 7'/%3E%3C/svg%3E");
      -webkit-mask: var(--un-icon) no-repeat;
      mask: var(--un-icon) no-repeat;
      -webkit-mask-size: 100% 100%;
      mask-size: 100% 100%;
      background-color: currentColor;
      color: inherit;
      width: 1em;
      height: 1em;
      color: var(--un-preset-theme-textColor-base);
      line-height: 1.625;
      font-family: "Open Sans";
      width: 1.5em;
      height: 1.5em;
      display: inline-block;
      /* @apply icon:check hue-brand text w-1.5em h-1.5em inline-block; */
    }

    span {
      /* @apply text-hue12; */
    }
  }
</style>
