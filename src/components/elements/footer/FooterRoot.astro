---
import type { HTMLAttributes } from 'astro/types'
interface Props {
  class?: HTMLAttributes<'div'>['class']
}

const { props } = Astro
const slot = await Astro.slots.render('default')
---

{
  slot?.trim().length > 0 && (
    <footer class:list={['header flow-compact', props.class]}>
      <slot />
    </footer>
  )
}

<style>
  footer {
    position: relative;
    display: grid;
    gap: var(--flow5);
    justify-content: center;
    z-index: 20;
    border-top-width: var(--border);

    @media (min-width: 1024px) {
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
    }
  }
</style>
