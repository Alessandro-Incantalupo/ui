---
import type { ComponentProps } from 'astro/types'
import { Cards, List, Root, Segment } from '.'
import ButtonGroup from '../button/ButtonGroup.astro'
import { Writeup } from '../writeup'

interface Props
  extends ComponentProps<typeof Root>,
    ComponentProps<typeof Segment>,
    ComponentProps<typeof Writeup>,
    ComponentProps<typeof ButtonGroup>,
    ComponentProps<typeof List>,
    ComponentProps<typeof Cards> {}

const { props } = Astro
---

<Root {...props}>
  <Segment {...props}>
    <Writeup {...props}>
      <slot name="writeup" />
    </Writeup>
    <ButtonGroup {...props} />
    <slot name="segment" />
  </Segment>
  <List {...props}>
    <Cards {...props} />
    <slot name="list" />
    <slot />
  </List>
</Root>
