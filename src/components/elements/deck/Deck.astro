---
import type { Props as CardProps } from '../card/Card.astro'
import Card from '../card/Card.astro'
import type { Props as DeckRootProps } from './DeckRoot.astro'
import DeckRoot from './DeckRoot.astro'

export interface Props extends DeckRootProps {
  cards?: CardProps[] | null
}

const { props } = Astro
---

<DeckRoot {...props}>
  {
    props.cards?.map((card) => (
      <Card
        area={props.area}
        {...card}
      />
    ))
  }
  <slot />
</DeckRoot>
