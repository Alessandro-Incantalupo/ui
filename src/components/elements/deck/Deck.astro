---
import type { Props as CardProps } from '../card/Card.astro'
import Card from '../card/Card.astro'
import type { Props as DeckWrapperProps } from './DeckWrapper.astro'
import DeckWrapper from './DeckWrapper.astro'

export interface Props extends DeckWrapperProps {
  cards?: CardProps[] | null
}

const { props } = Astro
---

<DeckWrapper {...props}>
  {props.cards?.map((card) => <Card {...card} />)}
  <slot />
</DeckWrapper>
