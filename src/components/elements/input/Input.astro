---
export interface Props {
  label: string
  type?: 'text' | 'email' | 'tel' | 'url' | 'number'
  required?: boolean
}

const { label, required, type = 'text' } = Astro.props
---

{
  label && (
    <div>
      <label for={label}>{label}</label>
      <input
        class="input"
        id={label}
        name={label}
        {type}
        {required}
      />
    </div>
  )
}

<style>
  div {
    gap: var(--flow1);
    display: flex;
    flex-direction: column;
  }

  input {
    background-color: var(--input-bg);
    border-color: var(--input-ring);
    border-radius: var(--rounded1);
  }
</style>
