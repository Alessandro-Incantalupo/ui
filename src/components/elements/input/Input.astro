---
export type InputProps = Props
interface Props {
  label: string
  required?: boolean
  type?: 'text' | 'email' | 'tel' | 'url' | 'number'
}

const { label, required, type = 'text' } = Astro.props
---

{
  label && (
    <div>
      <label for={label}>{label}</label>
      <input
        class="input"
        id={label}
        name={label}
        {type}
        {required}
      />
    </div>
  )
}

<style>
  div {
    gap: var(--flow1);
    display: flex;
    flex-direction: column;
    /* @apply gap-flow1 flex flex-col; */
  }
</style>
