---
export interface Props {
  label: string
  group?: string
  required?: boolean
  type?: 'text' | 'email' | 'tel' | 'url' | 'number' | 'checkbox' | 'radio'
}

const { label, required, type = 'text', group } = Astro.props
---

{
  label && (
    <div>
      {type !== 'checkbox' && type !== 'radio' && (
        <label for={label}>{label}</label>
      )}
      <input
        class="input"
        id={label}
        name={group ? group : label}
        {type}
        {required}
      />
      {(type === 'checkbox' || type === 'radio') && (
        <label for={label}>{label}</label>
      )}
    </div>
  )
}

<style>
  div {
    gap: var(--flow1);
    display: flex;
    flex-direction: column;
  }
</style>
