---
import type { ComponentProps, HTMLAttributes } from 'astro/types'
import Icon from '../Icon.astro'

export interface Props extends ComponentProps<typeof Icon> {
  text?: string | null
  area?: 'primary' | 'secondary'
  href?: HTMLAttributes<'a'>['href'] | null
  class?: string
}

const { icon, text, href, area = 'primary', class:className } = Astro.props
---

{
  (icon || text) && (
    <a href={href} class:list={['area-' + area, className]}>
      <Icon {icon} />
      {text}
      <slot />
    </a>
  )
}

<style>
