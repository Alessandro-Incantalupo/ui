---
import type { Props as ButtonProps } from './Button.astro'
import Button from './Button.astro'

export interface Props {
  buttons?: ButtonProps[] | null
}

const { buttons } = Astro.props
---

{
  buttons?.map((button, i) => (
    <Button
      area={i === 0 ? 'primary' : 'secondary'}
      {...button}
    />
  ))
}
