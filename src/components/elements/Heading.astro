---
import getSlot from 'src/utils/getSlot'
import type { HTMLAttributes } from 'astro/types'

import type { HTMLAttributes } from 'astro/types'
interface Props {
  heading?: string | null
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
  class?: HTMLAttributes<'div'>['class']
}

const { level = 'h2', heading, class: className } = Astro.props
const slot = await getSlot(Astro)
const As = level
---

{
  (heading || slot) && (
    <As class:list={['heading', className]}>
      {heading}
      <slot />
    </As>
  )
}

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
    color: var(--heading);
    line-height: 1.1;
    font-size: var(--text3);
    font-weight: 700;

    &:last-child {
      font-size: calc(var(--text3) * 0.8);
    }
  }
</style>
