---
import type { ComponentProps } from 'astro/types'
import getSlot from 'src/utils/getSlot'
import { Card } from '.'

interface Props extends ComponentProps<typeof Card> {}

const { area = 'default', class: className } = Astro.props
const slot = getSlot(Astro)
---

{
  slot && (
    <div class:list={['segment', `area-${area}`, className]}>
      <Fragment set:html={slot} />
    </div>
  )
}

<style>
  .segment {
    container: cardsegment / inline-size;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 10;
    gap: var(--flow4);
    width: 100%;
    height: 100%;
    justify-content: space-between;

    &:where(.area-panel) {
      padding: var(--flow4);
    }
  }
</style>
