---
import type { ComponentProps } from 'astro/types'
import {
  Heading,
  Icon,
  Price,
  Rating,
  Root,
  Segment,
  Tagline,
  Text,
  Writeup,
} from '.'

interface Props
  extends ComponentProps<typeof Root>,
    ComponentProps<typeof Segment>,
    ComponentProps<typeof Icon>,
    ComponentProps<typeof Rating>,
    ComponentProps<typeof Writeup>,
    ComponentProps<typeof Tagline>,
    ComponentProps<typeof Heading>,
    ComponentProps<typeof Text>,
    ComponentProps<typeof Price> {
  // ComponentProps<typeof Specs>,
  // ComponentProps<typeof ButtonGroup>,
  query?: {
    collection: string
    slug: string
  }
  reference?: any
}

const { props } = Astro
---

<Root {...props}>
  <!-- <Media
    {...props.images?.[0]}
    {...props.image}
  /> -->
  <Segment {...props}>
    <Icon
      large
      {...props}
    />
    <Rating {...props} />
    <Writeup {...props}>
      <Tagline {...props} />
      <Heading {...props} />
      <Text {...props} />
      <Price {...props} />
      <slot name="writeup" />
    </Writeup>
    <!-- <Specs {...props} /> -->
    <!-- <ButtonGroup {...props} /> -->
    <slot name="segment" />
  </Segment>
</Root>
