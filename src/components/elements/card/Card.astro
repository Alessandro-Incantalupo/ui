---
import type { HTMLAttributes } from 'astro/types'
import { Root, Segment, Writeup } from '.'
import Heading from '../Heading.astro'
import Icon from '../Icon.astro'
import Rating from '../Rating.astro'
import Tagline from '../Tagline.astro'
import Text from '../Text.astro'

interface Props {
  level?: 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | null
  area?: 'panel' | null
  ratio?: 'landscape' | 'square' | 'portrait' | null
  href?: HTMLAttributes<'a'>['href'] | null
  heading?: string | null
  rating?: number | null
  text?: string | null
  query?: {
    collection: string
    slug: string
  }
  reference?: any
  class?: HTMLAttributes<any>['class']
}

const { props } = Astro
---

<Root {...props}>
  <!-- <Media
    {...props.images?.[0]}
    {...props.image}
  /> -->
  <slot />
  <Segment {...props}>
    <Icon
      large
      {...props}
    />
    <Rating {...props} />
    <Writeup {...props}>
      <Tagline {...props} />
      <Heading {...props} />
      <Text {...props} />
      <!-- <Price {...props} /> -->
      <slot name="writeup" />
    </Writeup>
    <!-- <Specs {...props} /> -->
    <!-- <ButtonGroup {...props} /> -->
    <slot name="segment" />
  </Segment>
</Root>
