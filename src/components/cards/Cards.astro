---
import type { ComponentProps } from 'astro/types'
import { CardsItems, CardsRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'

interface Base
  extends ComponentProps<typeof CardsRoot>,
    ComponentProps<typeof CardsItems> {}

type Props = BuildProps<Base, 'cards'>
const props = buildProps(Astro, 'cards')
---

<CardsRoot {...props}>
  <CardsItems {...props} />
</CardsRoot>
