---
import type { HTMLAttributes } from 'astro/types'
import { BuildProps, buildProps } from '../utils'
import Tag from './Tag.astro'

interface Base {
  label?: HTMLAttributes<'label'>['for']
}

type Props = BuildProps<Base, 'label', 'label'>
const props = buildProps(Astro, 'label')

const { label, ...rest } = props
---

<Tag
  for={label}
  {...rest}
>
  <slot />
  {label}
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--font-size-1);
  }
</style>
