---
interface Props {}
import { getSlot } from '../../utils'

const slot = await getSlot(Astro)
const { props } = Astro
---

{
  slot && (
    <div class:list={['segment', props.class]}>
      <Fragment set:html={slot} />
    </div>
  )
}

<style>
  div {
    display: flex;
    gap: var(--spacing-4);
  }
</style>
