---
import Tag from '../Tag.astro'

interface Props {}

let {} = Astro.props
---

<Tag class="prose">
  <slot />
</Tag>

<style is:global>
  .prose {
    column-gap: var(--spacing-5);
    order: 3;
    column-width: 500px;
    column-count: auto;
    text-align: left;

    :global(*) {
      align-items: flex-start;

      margin-bottom: 0.5em;
      color: var(--color);
      font: var(--font);
    }

    :global(h1) {
      --prose-scale: 1;
    }
    :global(h2) {
      --prose-scale: 0.76;
    }
    :global(h3) {
      --prose-scale: 0.6;
    }
    :global(h4) {
      --prose-scale: 0.52;
    }
    :global(h5) {
      --prose-scale: 0.48;
    }
    :global(h6) {
      --prose-scale: 0.44;
    }

    :global(:is(h1, h2, h3, h4, h5, h6)) {
      --color: var(--hue12);
      --font: 700 calc(var(--font-size-3) * var(--prose-scale)) / 1.25 Arial,
        sans-serif;
      margin-top: 2em;
      margin-bottom: 0.5em;
      color: var(--color);

      font: var(--font);
    }

    :global(:is(h1, h2, h3, h4, h5, h6):first-child) {
      margin-top: 0;
    }

    :global(*) {
      break-inside: avoid-column;
    }

    :global(ul) {
      padding-left: 1.5em;
      list-style: disc;
    }
  }
</style>
