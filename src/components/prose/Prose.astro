---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../../utils'
import ProseContent from './ProseContent.astro'
import ProseRoot from './ProseRoot.astro'

interface Base
  extends ComponentProps<typeof ProseRoot>,
    ComponentProps<typeof ProseContent> {}

type Props = BuildProps<Base, 'prose'>
const props = buildProps(Astro, 'prose')
---

<ProseRoot {...props}>
  <ProseContent {...props} />
</ProseRoot>
