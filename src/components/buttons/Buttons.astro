---
import type { ComponentProps } from 'astro/types'
import { ButtonsItems, ButtonsRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'

interface Base
  extends ComponentProps<typeof ButtonsRoot>,
    ComponentProps<typeof ButtonsItems> {}

type Props = BuildProps<Base, 'buttons'>
const props = buildProps(Astro, 'buttons')
---

<ButtonsRoot {...props}>
  <ButtonsItems {...props} />
  <slot />
</ButtonsRoot>
