---
import type { ComponentProps } from 'astro/types'
import { Button } from 'src/components/button'

interface Props {
  buttons?: ComponentProps<typeof Button>[]
}

const { buttons } = Astro.props
---

{
  buttons?.map((button, i) => (
    <Button
      variant={i === 0 ? 'primary' : 'secondary'}
      {...button}
    />
  ))
}
