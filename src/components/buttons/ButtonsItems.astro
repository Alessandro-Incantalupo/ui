---
import type { ComponentProps } from 'astro/types'
import { Button } from '../button'

interface Props {
  buttons?: ComponentProps<typeof Button>[]
}

const { buttons } = Astro.props

const look: {
  [key: number]: 'solid' | 'soft' | 'ghost'
} = {
  0: 'solid',
  1: 'soft',
  2: 'ghost',
}
---

{
  buttons?.map((button, i) => (
    <Button
      look={look[i]}
      {...button}
    />
  ))
}
