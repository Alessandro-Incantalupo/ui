const {
  position,
  frame,
  src,
  alt = '',
  loading = 'lazy',
  sizes = {
    base: '100vw',
  },
} = Astro.props

function getSrc() {
  if (src?.startsWith('http')) return src
  // TODO: add eager import
  const images = import.meta.glob('/src/assets/**/*.{jpeg,jpg,png,webp,gif}', {
    eager: true,
  })
  const path = ('/src/assets/' + src).replace('//', '/')
  const image = images[path]
  if (!image) console.warn(`Image not found: ${path}`)
  else return image
}

function getSizes() {
  const mapped = Object.entries(sizes).map(([key, value]) => {
    if (key === 'base') return value
    if (key === 'sm') return `(min-width: 640px) ${value}`
    if (key === 'md') return `(min-width: 768px) ${value}`
    if (key === 'lg') return `(min-width: 1024px) ${value}`
    if (key === 'xl') return `(min-width: 1280px) ${value}`
    if (key === '2xl') return `(min-width: 1536px) ${value}`
  })
  const joined = mapped.join(', ')
  return joined
}
---

{
  src && (
    <img
      src={src}
      width={src?.startsWith('http') ? 1000 : undefined}
      height={src?.startsWith('http') ? 1000 : undefined}
      alt={alt ? alt : ''}
      sizes={getSizes()}
      loading={loading}
      class:list={['image', position, frame]}
    />
  )
}

<style>
  .mask {
    -webkit-mask-image: linear-gradient(to top, transparent 0%, black 30%);
    mask-image: linear-gradient(to top, transparent 0%, black 30%);
  }
  .mask-lg {
    -webkit-mask-image: linear-gradient(to top, transparent 0%, black 100%);
    mask-image: linear-gradient(to top, transparent 0%, black 100%);
  }

  :where(.image) {
    transition: var(--transition);
    display: block;
    width: 100%;
    height: auto;
    position: relative;
    object-fit: cover;
    border-radius: var(--rounded1);
  }

  :where(.panel) {
    height: 100%;
    object-fit: cover;
  }

  :where(.background) {
    z-index: -1;
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 0;
    -webkit-mask-image: linear-gradient(to top, transparent 0%, white 50%);
    mask-image: linear-gradient(to top, transparent 0%, white 50%);
  }
</style>
