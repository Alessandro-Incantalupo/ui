---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  position?: 'background'
  frame?: 'fill' | 'panel' | 'screen'
  src?: string
  alt?: string
  loading?: HTMLAttributes<'img'>['loading']
  sizes?: {
    base: string
    sm?: string
    md?: string
    lg?: string
    xl?: string
    '2xl'?: string
  }
}

