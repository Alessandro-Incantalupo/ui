---
import { Banner } from '@silveltman/fullui/src/components/banner'
import { Footer } from '@silveltman/fullui/src/components/footer'
import { Header } from '@silveltman/fullui/src/components/header'
import { LayoutBody, LayoutHead, LayoutMain, LayoutRoot } from '.'

const { props } = Astro
---

<LayoutRoot {...props}>
  <LayoutHead {...props}>
    <slot name="head" />
  </LayoutHead>
  <LayoutBody {...props}>
    <Banner
      scheme="dark"
      text="De goedkoopste van Nederland"
    />
    <Header {...props}>
      <slot name="header" />
    </Header>
    <LayoutMain {...props}>
      <slot />
      <!-- <Whatsapp {...props} /> -->
    </LayoutMain>
    <Footer>
      <slot name="footer" />
    </Footer>
  </LayoutBody>
</LayoutRoot>
