---
import { SEO } from 'astro-seo'
import { getEntry } from 'astro:content'
const company = (await getEntry('globals', 'company')).data

interface Props {
  title?: string | null
  description?: string | null
  image?: {
    src: string | null
    alt?: string | null
  }
}

const { title, description, image } = Astro.props
---

<head>
  <meta charset="UTF-8" />
  <meta
    content="width=device-width, initial-scale=1, viewport-fit=cover"
    name="viewport"
  />
  <meta
    name="generator"
    content={Astro.generator}
  />

  <SEO
    title={title || undefined}
    description={description || undefined}
    openGraph={title && image && image.src
      ? {
          basic: {
            title: title,
            type: 'website',
            image: image.src,
          },
          image: {
            url: image?.src,
            alt: image.alt || undefined,
          },
        }
      : undefined}
  />

  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/favicon-16x16.png"
  />
  <link
    rel="manifest"
    href="/site.webmanifest"
  />
  <meta
    name="msapplication-TileColor"
    content="#ffc40d"
  />
  <meta
    name="theme-color"
    content="#ffffff"
  />

  <!--  -->
  <link
    rel="preconnect"
    href="https://fonts.googleapis.com"
  />
  <link
    rel="preconnect"
    href="https://fonts.gstatic.com"
    crossorigin
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
    rel="stylesheet"
  />
  <link
    rel="preconnect"
    href="https://fonts.googleapis.com"
  />
  <link
    rel="preconnect"
    href="https://fonts.gstatic.com"
    crossorigin
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Saira:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet"
  />
  <!-- <ViewTransitions /> -->
</head>
