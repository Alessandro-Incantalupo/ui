---
import Button from 'fulldev-ui/components/Button.astro'
import FullHeader from 'fulldev-ui/components/Header.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Row from 'fulldev-ui/components/Row.astro'
---

<FullHeader
  compact
  position="relative"
  variant="ghost"
>
  <Heading
    as="a"
    href="/"
  >
    Fulldev UI
  </Heading>
  <Row>
    <Button
      class:list={'socials'}
      variant="ghost"
      title="X / Twitter"
      icon="brand-x"
      href="https://x.com/silveltm"
      target="_blank"
      contrast
    />
    <Button
      class:list={'socials'}
      variant="ghost"
      title="Discord"
      icon="brand-discord"
      href="https://discord.gg/vXZqMbadm8"
      target="_blank"
      contrast
    />
    <Button
      variant="soft"
      html="Github"
      icon="brand-github"
      href="https://github.com/fulldotdev/ui"
      target="_blank"
      contrast
    />
    <Button
      html="Docs"
      href="/overview/introduction/"
      contrast
    />
  </Row>
</FullHeader>

<style lang="scss" is:global>
  .full.header {
    align-items: center !important;
    z-index: 100 !important;

    @media (max-width: 500px) {
      .socials {
        display: none;
      }
    }
  }
</style>
