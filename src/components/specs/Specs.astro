---
import type { ComponentProps } from 'astro/types'
import { getSlot } from '../../utils'
import { Spec } from '../spec'

interface Props {
  specs?: ComponentProps<typeof Spec>[]
}

const { specs } = Astro.props
const slot = getSlot(Astro)
---

{
  specs && (
    <ul>
      {specs?.map((spec) => (
        <Spec set:html={spec} />
      ))}
    </ul>
  )
}

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: var(--flow1);
  }
</style>
