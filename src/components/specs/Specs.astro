---
import { Spec } from 'src/components/spec'
import { getSlot } from 'src/utils'

interface Props {
  specs?: string[]
}

const { specs } = Astro.props
const slot = getSlot(Astro)
---

{
  specs && (
    <ul>
      {specs?.map((spec) => (
        <Spec set:html={spec} />
      ))}
    </ul>
  )
}

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: var(--flow1);
  }
</style>
