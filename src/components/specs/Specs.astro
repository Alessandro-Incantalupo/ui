---
import type { ComponentProps } from 'astro/types'
import { buildProps, getSlot, type BuildProps } from '../../utils'
import { Spec } from '../spec'

interface Base {
  specs?: ComponentProps<typeof Spec>[]
}

type Props = BuildProps<Base, 'specs'>
const props = buildProps(Astro, 'specs')
const slot = await getSlot(Astro)

const { specs } = props
---

{
  (slot || specs) && (
    <ul>
      {specs?.map((spec) => (
        <Spec set:html={spec} />
      ))}
    </ul>
  )
}

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }
</style>
