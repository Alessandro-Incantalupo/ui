---
import type { ComponentProps } from 'astro/types'
import { CompositeRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'
import { Action } from '../action'
import { Display } from '../display'

interface Base
  extends ComponentProps<typeof CompositeRoot>,
    ComponentProps<typeof Display>,
    ComponentProps<typeof Action> {}

type Props = BuildProps<Base, 'composite'>
const props = buildProps(Astro, 'composite')

const { composite, ...rest } = props
---

<CompositeRoot {...props}>
  <Display {...rest} />
  <Action {...rest} />
  <slot />
</CompositeRoot>
