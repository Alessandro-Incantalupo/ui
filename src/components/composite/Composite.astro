---
import type { ComponentProps } from 'astro/types'
import { CompositeRoot } from '.'
import { Action } from '../action'
import { Display } from '../display'

interface Props
  extends ComponentProps<typeof CompositeRoot>,
    ComponentProps<typeof Display> {}

const { props } = Astro
---

<CompositeRoot {...props}>
  <Display {...props} />
  <Action {...props} />
  <slot />
</CompositeRoot>
