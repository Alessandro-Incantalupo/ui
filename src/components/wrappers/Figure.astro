---
import type { HTMLAttributes } from 'astro/types'
interface Props {
  class?: HTMLAttributes<'div'>['class']
}

const { class: className } = Astro.props

const slot = await Astro.slots.render('default')
---

{
  slot?.trim().length > 0 && (
    <figure class:list={['figure', className]}>
      <slot />
    </figure>
  )
}

