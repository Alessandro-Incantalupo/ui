---
import type { ComponentProps } from 'astro/types'
import { DisplayRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'
import { Channels } from '../channels'
import { Heading } from '../heading'
import { Html } from '../html'
import { Icon } from '../icon'
import { Rating } from '../rating'
import { Socials } from '../socials'
import { Specs } from '../specs'
import { Tagline } from '../tagline'
import { Text } from '../text'

interface Base
  extends ComponentProps<typeof DisplayRoot>,
    Pick<ComponentProps<typeof Rating>, 'rating' | '_rating'>,
    Pick<ComponentProps<typeof Html>, 'html' | '_html'>,
    Pick<ComponentProps<typeof Specs>, 'specs' | '_specs'>,
    Pick<ComponentProps<typeof Icon>, 'icon' | '_icon'>,
    Pick<ComponentProps<typeof Tagline>, 'tagline' | '_tagline'>,
    Pick<ComponentProps<typeof Text>, 'text' | '_text'>,
    Pick<ComponentProps<typeof Channels>, 'channels' | '_channels'>,
    Pick<ComponentProps<typeof Socials>, 'socials' | '_socials'>,
    Pick<ComponentProps<typeof Heading>, 'heading' | '_heading'> {}

type Props = BuildProps<Base, 'display'>
const props = buildProps(Astro, 'display')

const {
  rating,
  _rating,
  icon,
  _icon,
  tagline,
  _tagline,
  heading,
  _heading,
  text,
  _text,
  specs,
  _specs,
  html,
  _html,
  channels,
  _channels,
  socials,
  _socials,
  ...restProps
} = props
---

<DisplayRoot {...restProps}>
  <Rating
    {rating}
    {_rating}
  />
  <Icon
    class="single-icon"
    {icon}
    {_icon}
  />
  <Tagline
    {tagline}
    {_tagline}
  />
  <Heading
    {heading}
    {_heading}
  />
  <Html
    {html}
    {_html}
  />
  <Text
    {text}
    {_text}
  />
  <Specs
    {specs}
    {_specs}
  />
  <Channels
    {channels}
    {_channels}
  />
  <Socials
    {socials}
    {_socials}
  />
  <slot />
</DisplayRoot>
