---
import { getSlot } from '../../utils'

interface Props {
  density?: 'compact' | null
  align?: 'start' | 'center' | 'stretch' | null
  class?: string | null
}

const { density, align, class: className } = Astro.props
const slot = await getSlot(Astro)
---

{
  slot && (
    <div class:list={['display', align, density, className]}>
      <Fragment set:html={slot} />
    </div>
  )
}

<style>
  div {
    display: flex;
    row-gap: var(--spacing-3);
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    max-width: calc(var(--spacing-6) * 3);
  }

  :where(.center) {
    align-items: center;
    text-align: center;
  }
</style>
