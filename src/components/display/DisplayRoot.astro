---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import { getSlot } from '../../utils'

interface Props extends Omit<HTMLAttributes<HTMLTag>, 'slot'> {
  density?: 'compact'
  align?: 'start' | 'center' | 'stretch'
  tag?: HTMLTag
}

const { density, align, tag: Tag = 'div', class: className } = Astro.props
const slot = await getSlot(Astro)
---

{
  slot && (
    <Tag class:list={['display', align, density, className]}>
      <Fragment set:html={slot} />
    </Tag>
  )
}

<style>
  :where(.display),
  :where(.start) {
    container: display / inline-size;
    width: 100%;
    display: flex;
    flex-direction: column;
    row-gap: var(--spacing-3);
    /* TODO: fix max width, ook met container query */
    max-width: max(calc(var(--spacing-6) * 3.8), 768px);
    align-items: flex-start;
    text-align: left;
  }

  :where(.center) {
    align-items: center;
    text-align: center;
  }
</style>
