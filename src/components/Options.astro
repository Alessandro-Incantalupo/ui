---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Option from './Option.astro'

interface Base {
  options?: ComponentProps<typeof Option>['option'][]
}

type Props = BuildProps<Base, 'options'>
const props = buildProps(Astro, 'options')

const { options, ...rest } = props
---

<select {...rest}>
  {options?.map((option) => <Option {option} />)}
</select>

<style is:global>
  .options {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--border-radius-1);
    background: var(--hue3);
    padding: var(--spacing-2);
    color: var(--hue12);
    font-size: var(--font-size-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
