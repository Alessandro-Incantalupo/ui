---
import type { CollectionEntry } from 'astro:content'
import { Layout } from 'src/components'
import { PostsSection } from '.'

interface Props {
  entry: CollectionEntry<'posts'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <PostsSection {...entry.data} />
  <slot />
</Layout>
