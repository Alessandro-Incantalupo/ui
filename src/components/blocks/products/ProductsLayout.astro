---
import type { CollectionEntry } from 'astro:content'
import { Layout } from 'src/components'
import { ProductsSection } from '.'

interface Props {
  entry: CollectionEntry<'products'>
}

const { entry } = Astro.props
---

<Layout {...entry.data}>
  <ProductsSection {...entry.data} />
  <slot />
</Layout>
