---
import { getCollection } from 'astro:content'
import { getRouteByEntry } from 'src/utils'
import type { Props as SectionProps } from '../../elements/section/Section.astro'
import Section from '../../elements/section/Section.astro'
import type { Props as ProductsCardProps } from './ProductsCard.astro'

export interface Props
  extends Pick<SectionProps, 'tagline' | 'heading' | 'text' | 'buttons'> {
  products: ProductsCardProps[] | null
}

const { props } = Astro

const allEntries = await getCollection('products')

const mappedProducts = props.products?.map((product) => {
  // @ts-ignore
  const found = allEntries.find((entry) => product.includes(entry.slug))

  if (!found) return found
  return { ...found?.data, href: getRouteByEntry(found) }
})
---

<Section
  class="products-section"
  cards={mappedProducts}
  {...props}
/>
