---
import type { ComponentProps } from 'astro/types'
import { Deck } from 'src/components'
import type { ProductsCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  products?: (
    | ComponentProps<typeof ProductsCard>
    | ComponentProps<typeof ProductsCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="products-deck"
  collection="products"
  cards={props.products}
/>
