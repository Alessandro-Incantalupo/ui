---
import type { ComponentProps } from 'astro/types'
import { Deck } from 'src/components'
import type { FeaturesCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  features?: (
    | ComponentProps<typeof FeaturesCard>
    | ComponentProps<typeof FeaturesCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="features-deck"
  cards={props.features}
/>
