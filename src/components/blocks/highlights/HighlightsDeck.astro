---
import type { ComponentProps } from 'astro/types'
import { Deck } from 'src/components'
import type { HighlightsCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  highlights?: (
    | ComponentProps<typeof HighlightsCard>
    | ComponentProps<typeof HighlightsCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="highlights-deck"
  cards={props.highlights}
/>
