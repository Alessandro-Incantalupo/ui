---
import type { ComponentProps } from 'astro/types'
import Deck from '../../elements/deck/Deck.astro'
import type CategoriesCard from './CategoriesCard.astro'

export interface Props extends Pick<ComponentProps<typeof Deck>, 'deck'> {
  categories?: ComponentProps<typeof CategoriesCard>[] | null
}

const { props } = Astro
---

<Deck
  class="categories-deck"
  cards={props.categories}
  {...props}
/>
