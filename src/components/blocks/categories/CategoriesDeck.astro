---
import type { ComponentProps } from 'astro/types'
import type { CategoriesCard } from '.'
import Deck from '../../elements/deck/Deck.astro'

interface Props extends ComponentProps<typeof Deck> {
  categories?: (
    | ComponentProps<typeof CategoriesCard>
    | ComponentProps<typeof CategoriesCard>['reference']
  )[]
}

const { props } = Astro
---

<Deck
  class="categories-deck"
  {...props}
  cards={props.categories}
/>
