---
import type { CollectionEntry } from 'astro:content'
import { Layout, Renderer } from 'src/components'

interface Props {
  entry: CollectionEntry<'pages'>
}

const { entry } = Astro.props
---

<Layout
  {...entry.data}
  class="pages-layout"
>
  <Renderer blocks={entry.data.blocks} />
  <slot />
</Layout>
