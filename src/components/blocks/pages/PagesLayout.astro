---
import type { CollectionEntry } from 'astro:content'
import BlockRenderer from '../../elements/BlockRenderer.astro'
import Layout from '../../elements/layout/Layout.astro'

interface Props {
  entry: CollectionEntry<'pages'>
  frontmatter: CollectionEntry<'pages'>['data']
}

const { entry, frontmatter } = Astro.props
---

<Layout
  class="pages-layout"
  seo={frontmatter.seo}
>
  <BlockRenderer blocks={frontmatter.sections} />
  <slot />
</Layout>
