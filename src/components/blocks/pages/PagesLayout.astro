---
import type { CollectionEntry } from 'astro:content'
import Layout from '../../elements/layout/Layout.astro'
import SectionRenderer from '../../misc/SectionRenderer.astro'

interface Props {
  entry: CollectionEntry<'pages'>
  frontmatter: CollectionEntry<'pages'>['data']
}

const { entry, frontmatter } = Astro.props
---

<Layout seo={frontmatter.seo}>
  <SectionRenderer sections={frontmatter.sections} />
  <slot />
</Layout>
