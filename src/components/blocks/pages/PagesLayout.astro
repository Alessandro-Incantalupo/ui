---
import type { CollectionEntry } from 'astro:content'
import SectionRenderer from '../../elements/SectionRenderer.astro'
import Layout from '../../elements/layout/Layout.astro'

export interface Props {
  entry: CollectionEntry<'pages'>
  frontmatter: CollectionEntry<'pages'>['data']
}

const { entry, frontmatter } = Astro.props
---

<Layout seo={frontmatter.seo}>
  <SectionRenderer
    bookshop:live
    sections={frontmatter.sections}
  />
  <slot />
</Layout>
