---
import type { ComponentProps } from 'astro/types'
import { Deck } from 'src/components'
import type { JobsCard } from '.'

interface Props extends ComponentProps<typeof Deck> {
  jobs?: (
    | ComponentProps<typeof JobsCard>
    | ComponentProps<typeof JobsCard>['slug']
  )[]
}

const { props } = Astro
---

<Deck
  {...props}
  class="jobs-deck"
  collection="jobs"
  cards={props.jobs}
/>
