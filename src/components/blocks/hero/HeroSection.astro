---
import type { ComponentProps } from 'astro/types'
import Section from '../../elements/section/Section.astro'

export interface Props
  extends Pick<
    ComponentProps<typeof Section>,
    | 'level'
    | 'layout'
    | 'frame'
    | 'tagline'
    | 'heading'
    | 'text'
    | 'buttons'
    | 'image'
  > {}

const { props } = Astro
---

<Section
  class="flow hero-section"
  {...props}
/>

<style>
  :where(.flow) {
    --scale: 2;
  }
</style>
