---
import type { ComponentProps } from 'astro/types'
import Section from '../../elements/section/Section.astro'

interface Props
  extends Pick<
    ComponentProps<typeof Section>,
    | 'level'
    | 'layout'
    | 'area'
    | 'impact'
    | 'tagline'
    | 'heading'
    | 'text'
    | 'buttons'
    | 'image'
  > {}

console.log(Astro.props)
const { props } = Astro
---

<Section
  class="flow hero-section"
  {...props}
/>

<style>
  :where(.flow) {
    --scale: 1.3;
  }
</style>
