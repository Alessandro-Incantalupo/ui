---
import type { Props as SectionProps } from '../../elements/section/Section.astro'
import Section from '../../elements/section/Section.astro'

export interface Props
  extends Pick<
    SectionProps,
    'layout' | 'tagline' | 'heading' | 'text' | 'buttons'
  > {}

const { props } = Astro
---

<Section
  class="flow cta-section"
  {...props}
/>

<style>
  .flow {
    --scale: 1.5;
  }
</style>
