---
import type { ComponentProps } from 'astro/types'
import MediaRoot from './MediaRoot.astro'
import { Image } from '../image'
import { Gallery } from '../gallery'

interface Props
  extends ComponentProps<typeof MediaRoot>, 
          ComponentProps<typeof Gallery> {
  image?: ComponentProps<typeof Image>
}

const {props} = Astro
---

<MediaRoot {...props}>
  <Image {...props.image} />
  <Gallery {...props} />
</MediaRoot>
