---
import type { HTMLAttributes } from 'astro/types'
import { getSlot } from 'src/utils'

interface Props {
  heading?: string | null
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
  class?: HTMLAttributes<'div'>['class']
}

const { level = 'h2', heading, class: className } = Astro.props
const slot = await getSlot(Astro)
const As = level
---

{
  (heading || slot) && (
    <As class:list={['heading', className]}>
      {heading}
      <Fragment set:html={slot} />
    </As>
  )
}

<style>
  h1,h2,h3,h4,h5,h6 {
    font: var(--font);
    color: var(--color);
  }
</style>
