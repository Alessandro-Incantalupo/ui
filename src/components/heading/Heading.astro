---
import { buildProps, getSlot, type BuildProps } from '../../utils'

interface Base {
  heading?: string
  hello?: number
  tag?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | null
  class?: string | null
}

type Props = BuildProps<Base, 'heading'>
const props = buildProps(Astro, 'heading')
const slot = await getSlot(Astro)

const { heading, tag, class: className } = props
const Tag = tag ? tag : 'h2'
---

{
  (heading || slot) && (
    <Tag class:list={['heading', className]}>
      <Fragment set:html={slot} />
      <Fragment set:html={heading} />
    </Tag>
  )
}

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--base-12);
    font: var(--font);
    font-weight: 700;
    font-size: var(--font-size-6);
    line-height: 1.25;
  }
</style>
