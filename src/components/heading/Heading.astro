---
import { getSlot } from '../../utils'

interface Props {
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
  heading?: string | null
  class?: string | null
}

const { heading, level: Level = 'h2', class: className } = Astro.props

const slot = await getSlot(Astro)
---

{
  (heading || slot) && (
    <Level class:list={['heading', className]}>
      <Fragment set:html={slot} />
      {heading}
    </Level>
  )
}

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--base-12);
    font: var(--font);
    font-weight: 700;
    font-size: var(--font-size-6);
    line-height: 1.25;
  }
</style>
