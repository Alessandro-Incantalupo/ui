---
import { buildProps, type BuildProps } from '../utils'

interface Base {
  price?: number | null
}

type Props = BuildProps<Base, 'price', 'span'>
const props = buildProps(Astro, 'price')

const { price } = props
const priceNumber = parseFloat(price as any)
const fixedPrice = priceNumber?.toFixed(2)
---

{price && fixedPrice && <span> &euro;{fixedPrice}</span>}

<style is:global>
  .price {
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--font-size-2);
    line-height: 1;
  }
</style>
