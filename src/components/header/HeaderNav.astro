---
import { getSlot } from '../../utils'

interface Props {}

const slot = await getSlot(Astro)
---

{
  slot && (
    <nav class:list={['compact nav']}>
      <Fragment set:html={slot} />
    </nav>
  )
}

<style>
  nav {
    font: var(--font);
    font-size: var(--font-size-2);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--spacing-4);
    margin-left: auto;
    width: max-content;
  }
</style>
