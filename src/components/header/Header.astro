---
import type { ComponentProps } from 'astro/types'
import { getEntry } from 'astro:content'
import { HeaderNav, HeaderRoot } from '.'
import { Buttons } from '../buttons'
import { Links } from '../links'
import { Logo } from '../logo'

interface Props
  extends ComponentProps<typeof HeaderRoot>,
    ComponentProps<typeof Logo>,
    ComponentProps<typeof Links>,
    ComponentProps<typeof Buttons>,
    ComponentProps<typeof HeaderNav> {
  logo: ComponentProps<typeof Logo>
}

let { props } = Astro
props = {
  ...(await getEntry('globals', 'header')).data,
  ...props,
}
---

<HeaderRoot {...props}>
  <Logo {...props.logo} />
  <HeaderNav>
    <Links {...props} />
    <Buttons {...props} />
    <slot name="nav" />
  </HeaderNav>
  <slot />
</HeaderRoot>

<style is:global>
  .header-root .button:first-child {
    order: 10;
  }
</style>

