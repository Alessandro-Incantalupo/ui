---
import { buildProps, getSlot, type BuildProps } from '../../utils'

interface Base {
  title?: string | null
}

type Props = BuildProps<Base, 'title', 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'>
const props = buildProps(Astro, 'title')
const slot = await getSlot(Astro)

const { title, as: Tag = 'h2', ...rest } = props
---

{
  (title || slot) && (
    <Tag {...rest}>
      <Fragment set:html={slot} />
      <Fragment set:html={title} />
    </Tag>
  )
}

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-heading;

    color: var(--hue12);
    /* font: var(--font); */
    font-weight: 700;
    font-size: var(--font-size-6);
    line-height: 1.25;
  }
</style>
