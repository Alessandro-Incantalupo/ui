---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  layout?: 'left' | 'center'
  label?: HTMLAttributes<'label'>['for']
  class?: HTMLAttributes<'div'>['class']
  type?: HTMLAttributes<'input'>['type']
  required?: HTMLAttributes<'input'>['required']
}

const { label, type, required, class: className } = Astro.props
---

<input
  class:list={['input-field', className]}
  id={label}
  name={label}
  {type}
  {required}
/>

<style>
  input {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--border-radius-1);
    background: var(--hue3);
    padding: var(--spacing-2);
    color: var(--hue12);
    font-size: var(--font-size-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
