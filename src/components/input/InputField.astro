---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  layout?: 'left' | 'center'
  label?: HTMLAttributes<'label'>['for']
  class?: HTMLAttributes<'div'>['class']
  type?: HTMLAttributes<'input'>['type']
  required?: HTMLAttributes<'input'>['required']
}

const { label, type, required, class: className } = Astro.props
---

<input
  class:list={['input-field', className]}
  id={label}
  name={label}
  {type}
  {required}
/>

<style>
  input {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--base-7);
    border-radius: var(--border-radius-2);
    background: var(--base-3);
    padding: var(--spacing-2);
    color: var(--base-11);
    font: var(--font);

    &:hover {
      border: var(--base-8);
    }
  }
</style>
