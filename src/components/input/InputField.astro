---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  layout?: 'left' | 'center'
  label?: HTMLAttributes<'label'>['for']
  class?: HTMLAttributes<'div'>['class']
  type?: HTMLAttributes<'input'>['type']
  required?: HTMLAttributes<'input'>['required']
}

const { label, type, required, class: className } = Astro.props
---

<input
  class:list={['input-field input', className]}
  id={label}
  name={label}
  {type}
  {required}
/>

<style>
  input {
    font: var(--font);
    color: var(--color);
    border-color: var(--border-color);
    border-top-width: var(--border-width);
    border-radius: var(--border-radius-2);
    padding: var(--spacing-2);
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--background);
    outline: none;

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
