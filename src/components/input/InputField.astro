---
import { getSlot } from '@silveltman/fullui/utils'
import type { HTMLAttributes } from 'astro/types'

interface Props {
  layout?: 'left' | 'center'
  label?: HTMLAttributes<'label'>['for']
  class?: HTMLAttributes<'div'>['class']
  type?: HTMLAttributes<'input'>['type']
  required?: HTMLAttributes<'input'>['required']
}

const { label, type, required, class: className } = Astro.props
const slot = await getSlot(Astro)
---

{
  slot && (
    <input
      class:list={['input-field', className]}
      id={label}
      name={label}
      {type}
      {required}
    />
  )
}

<style>
  input {
    font: var(--font);
    color: var(--color);
    border: var(--border);
    border-radius: var(--radius);
    padding: var(--flow2);
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);

    &:hover {
      border: var(--border-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-active);
      background: var(--background-active);
    }
  }
</style>
