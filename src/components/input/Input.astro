---
import type { ComponentProps } from 'astro/types'
import { InputField, InputLabel, InputRoot } from '.'

interface Props
  extends ComponentProps<typeof InputRoot>,
    ComponentProps<typeof InputField>,
    ComponentProps<typeof InputLabel> {}

const { props } = Astro
---

<InputRoot {...props}>
  <InputLabel {...props}>
    <slot name="label" />
  </InputLabel>
  <InputField {...props} />
  <slot />
</InputRoot>
