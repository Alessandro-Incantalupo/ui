---
import type { HTMLAttributes } from 'astro/types'
import { getSlot } from '../../utils'

interface Props {
  label?: HTMLAttributes<'label'>['for']
  class?: HTMLAttributes<'div'>['class']
}

const { label, class: className } = Astro.props
const slot = await getSlot(Astro)
---

{
  (label || slot) && (
    <label
      class:list={['input-label', className]}
      for={label}
    >
      {label}
      <Fragment set:html={slot} />
    </label>
  )
}

<style>
  label {
    color: var(--base-11);
    font-size: var(--font-size-1);
  }
</style>
