---
import type { ComponentProps } from 'astro/types'
import { Buttons, Cards, Writeup } from 'src'
import { DeckRoot, DeckSegment } from '.'

interface Props
  extends ComponentProps<typeof DeckRoot>,
    ComponentProps<typeof DeckSegment>,
    ComponentProps<typeof Writeup>,
    ComponentProps<typeof Buttons>,
    ComponentProps<typeof Cards> {}

const { props } = Astro
---

<DeckRoot {...props}>
  <DeckSegment {...props}>
    <Writeup {...props}>
      <slot name="writeup" />
    </Writeup>
    <Buttons {...props} />
    <slot name="segment" />
  </DeckSegment>
  <Cards {...props} />
</DeckRoot>
