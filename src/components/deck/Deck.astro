---
import type { ComponentProps } from 'astro/types'
import { DeckRoot } from '.'
import { Cards } from '../cards'
import { Composite } from '../composite'

interface Props
  extends ComponentProps<typeof DeckRoot>,
    ComponentProps<typeof Composite>,
    ComponentProps<typeof Cards> {}

const { props } = Astro
---

<DeckRoot
  {...props}
  frame={undefined}
>
  <Composite
    {...props}
    frame={undefined}
  />
  <Cards {...props} />
</DeckRoot>
