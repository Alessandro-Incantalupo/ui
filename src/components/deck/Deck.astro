---
import type { ComponentProps } from 'astro/types'
import { DeckCards, DeckList, DeckRoot, DeckSegment } from '.'
import { Buttons } from '..'
import { Writeup } from '../writeup'

interface Props
  extends ComponentProps<typeof DeckRoot>,
    ComponentProps<typeof DeckSegment>,
    ComponentProps<typeof Writeup>,
    ComponentProps<typeof Buttons>,
    ComponentProps<typeof DeckList>,
    ComponentProps<typeof DeckCards> {}

const { props } = Astro
---

<DeckRoot {...props}>
  <DeckSegment {...props}>
    <Writeup {...props}>
      <slot name="writeup" />
    </Writeup>
    <Buttons {...props} />
    <slot name="segment" />
  </DeckSegment>
  <DeckList {...props}>
    <DeckCards {...props} />
    <slot name="list" />
    <slot />
  </DeckList>
</DeckRoot>
