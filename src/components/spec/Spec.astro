---
import { getSlot } from '../../utils'
import Icon from '../icon/Icon.astro'

interface Props {
  spec?: string
}

const { props } = Astro
const slot = await getSlot(Astro)
---

{
  (props.spec || slot) && (
    <li>
      <Icon icon="check" />
      <p>{props.spec}</p>
      <slot />
    </li>
  )
}

<style>
  li {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';

    p {
      color: var(--hue12);
      font: var(--font);
      font-size: var(--font-size-1);
    }
  }
</style>
