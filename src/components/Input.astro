---
import { buildProps, type BuildProps } from '../utils'

interface Base {
  input: string | null
}

type Props = BuildProps<Base, 'input', 'input'>
const props = buildProps(Astro, 'input')

const { input, type, required, ...rest } = props
---

<input
  name={input}
  id={input}
  {...rest}
/>

<style is:global>
  .input {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--border-radius-1);
    background: var(--hue3);
    padding: var(--spacing-2);
    color: var(--hue12);
    font-size: var(--font-size-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
