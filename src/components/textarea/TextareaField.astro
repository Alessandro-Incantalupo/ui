---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  rows?: HTMLAttributes<'textarea'>['rows']
  label?: HTMLAttributes<'label'>['for']
  required?: HTMLAttributes<'input'>['required']
  class?: HTMLAttributes<'div'>['class']
}

const { label, rows = 5, required, class: className } = Astro.props
---

<textarea
  class:list={['input textarea-field', className]}
  rows={rows}
  id={label}
  name={label}
  {required}
></textarea>

<style>
  :where(.textarea-field) {
    display: flex;
    font: var(--font);
    color: var(--color);
    background: var(--background);
    border-color: var(--border-color);
    border-width: var(--border-width);
    border-radius: var(--border-radius-1);
    padding: var(--spacing-2);
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
