---
import type { ComponentProps } from 'astro/types'
import { TextareaField, TextareaLabel, TextareaRoot } from '.'

interface Props
  extends ComponentProps<typeof TextareaRoot>,
    ComponentProps<typeof TextareaField>,
    ComponentProps<typeof TextareaLabel> {}

const { props } = Astro
---

<TextareaRoot {...props}>
  <TextareaLabel {...props}>
    <slot name="label" />
    <TextareaField {...props} />
  </TextareaLabel>
  <slot />
</TextareaRoot>
