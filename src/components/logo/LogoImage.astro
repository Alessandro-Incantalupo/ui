---
import type { HTMLAttributes } from 'astro/types'

interface Props {
  src?: HTMLAttributes<'img'>['src']
  alt?: HTMLAttributes<'img'>['alt']
  class?: HTMLAttributes<'div'>['class']
}

const { src, alt, class: className } = Astro.props
---

{
  src && (
    <img
      class:list={['logo-image', className]}
      src={src}
      alt={alt}
    />
  )
}

<style>
  img {
    display: block;
    width: auto;
    height: var(--spacing-5);
    object-fit: contain;
    color: var(--base-12);
  }
</style>
