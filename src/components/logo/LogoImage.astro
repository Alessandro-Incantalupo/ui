---
import type { HTMLAttributes } from 'astro/types'
import { Image } from '../image'

interface Props {
  logo?: HTMLAttributes<'img'>['src']
  alt?: HTMLAttributes<'img'>['alt']
  class?: HTMLAttributes<'div'>['class']
  description?: string | null
}

const { logo, alt, description, class: className } = Astro.props
---

{
  logo && (
    <>
      <Image
        image={logo}
        class="logo-image"
        {alt}
      />
    </>
  )
}

<style>
  :global(.logo-image) {
    display: block !important;
    width: auto !important;
    height: var(--spacing-5) !important;
    object-fit: contain !important;
    color: var(--base-12) !important;
  }
</style>
