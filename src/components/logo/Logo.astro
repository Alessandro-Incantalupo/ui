---
import type { ComponentProps } from 'astro/types'
import { LogoImage, LogoRoot } from '.'
import { buildProps, type BuildProps } from '../../utils'
import { Text } from '../text'

interface Base
  extends ComponentProps<typeof LogoRoot>,
    ComponentProps<typeof LogoImage> {}

type Props = BuildProps<Base, 'logo'>
const props = buildProps(Astro, 'logo')
---

<LogoRoot {...props}>
  <LogoImage {...props} />
  <Text {...props} />
  <slot />
</LogoRoot>
