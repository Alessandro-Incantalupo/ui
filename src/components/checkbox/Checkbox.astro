---
import type { ComponentProps } from 'astro/types'
import { CheckboxField, CheckboxLabel, CheckboxRoot } from '.'

interface Props
  extends ComponentProps<typeof CheckboxRoot>,
    ComponentProps<typeof CheckboxField>,
    ComponentProps<typeof CheckboxLabel> {}

const { props } = Astro
---

<CheckboxRoot {...props}>
  <CheckboxLabel {...props} />
  <CheckboxField {...props} />
</CheckboxRoot>
