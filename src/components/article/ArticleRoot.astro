---
import { getSlot } from '@silveltman/fullui/utils'
import type { HTMLAttributes } from 'astro/types'

interface Props {
  align?: 'start' | 'center'
  class?: HTMLAttributes<'div'>['class']
}

const { align = 'start', class: className } = Astro.props

const slot = await getSlot(Astro)
---

{
  slot && (
    <article class:list={['article-root', 'align-' + align, className]}>
      <Fragment set:html={slot} />
    </article>
  )
}

<style>
  article {
    container: section / inline-size;
    position: relative;
    overflow-x: hidden;
    row-gap: var(--flow5);
    gap: var(--gutter);
    padding: calc(var(--spacer) * 1.5) var(--gutter);
    display: flex;
    flex-direction: column;
    max-width: 900px;
    margin: 0 auto;
    align-items: center;

    :global(&:first-child) {
      padding-top: var(--spacer);
      margin-top: 0;
    }
  }
</style>
