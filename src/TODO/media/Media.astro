---
import type { ComponentProps } from 'astro/types'
import { Image } from '../image'
import { Images } from '../images'
import MediaRoot from './MediaRoot.astro'

interface Props
  extends ComponentProps<typeof MediaRoot>,
    ComponentProps<typeof Images> {
  image?: ComponentProps<typeof Image>
}

const { props } = Astro
---

<MediaRoot {...props}>
  <Image {...props.image} />
  <Images {...props} />
</MediaRoot>
