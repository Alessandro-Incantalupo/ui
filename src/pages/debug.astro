---
import Alert from 'src/components/elements/Alert.astro'
import Checkbox from 'src/components/elements/Checkbox.astro'
import Dialog from 'src/components/elements/Dialog.astro'
import Separator from 'src/components/elements/Separator.astro'
import Spinner from 'src/components/elements/Spinner.astro'
import Toast from 'src/components/elements/Toast.astro'
import Button from 'src/components/elements/button/Button.astro'
import Input from 'src/components/elements/input/Input.astro'
import Radio from 'src/components/elements/radio/Radio.astro'
import Showcase from '../components/elements/Showcase.astro'
import Layout from '../components/elements/layout/Layout.astro'
---

<Layout>
  <Button>Test</Button>
  <Showcase>
    <Spinner />
  </Showcase>

  <h2>Toast:</h2>
  <Toast
    title="Show"
    show={true}
    icon="message-circle"
  >
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic recusandae
    consectetur nulla laboriosam quos blanditiis eaque aspernatur consequatur
    alias repellat.
  </Toast>
  <Toast
    title="Show"
    show={true}
    icon="alert-triangle"
  >
    BLABLA BLA
  </Toast>
  <h2>Alert:</h2>
  <Alert icon="info">Test</Alert>
  <Alert icon="warning">Test</Alert>
  <Alert icon="danger">Test</Alert>
  <Alert icon="message-circle">Test</Alert>
  <h2>Dialog:</h2>
  <Dialog>This is a dialog</Dialog>
  <Dialog>This is also a dialog</Dialog>
  <h2>Input (number):</h2>
  <Input
    label="input a number"
    type="number"
  />
  <h2>Radio:</h2>
  <Radio label="Voetbal" />
  <h2>Radio (linked):</h2>
  <Radio
    label="Test"
    group="radiogroup1"
  />
  <h2>Checkbox:</h2>
  <Checkbox label="Terms of service" />
  <h2>Collapsible:</h2>
  <h2>CollapsibleGroup:</h2>
  <h2>Spinner:</h2>
  <Spinner />
  <h2>Seperator (wip):</h2>
  <span>Hello</span>
  <Separator />
  <span>Hello</span>
