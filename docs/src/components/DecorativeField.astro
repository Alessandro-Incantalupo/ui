---
import { Box } from 'fulldev-ui'

const { structure, frame } = Astro.props
---

<Box
  class="decorative-field"
  class:list={'not-content'}
  structure={structure}
  style={structure === 'carousel' ? 'overflow-x: scroll; !important' : ''}
  frame={frame}
>
  <slot />
</Box>

<style>
  .decorative-field {
    border: 1px solid #141822;
    border-radius: 8px;
    background-color: rgb(12, 15, 26);
    padding: 1rem;
    overflow: hidden;
  }
</style>
