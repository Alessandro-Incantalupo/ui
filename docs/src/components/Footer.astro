---
import {
  Badge,
  Column,
  Footer as FooterComponent,
  Heading,
  Link,
  Paragraph,
  Row,
} from 'fulldev-ui'
---

<FooterComponent
  structure="spread"
  style="border-top: 1px solid #262626; padding: 50px;"
>
  <Column style="max-width: 40%;">
    <Heading size="md">Fulldev UI</Heading>
    <Paragraph>
      Rapidly build content-driven websites, with the power of modern styling,
      static / server rendering, and cascading styles.
    </Paragraph>
    <Badge
      text="pnpm install fulldev-ui"
      style="width: fit-content;"
    />
  </Column>

  <Row style="align-items: start;">
    <Column>
      <Heading size="sm">Socials</Heading>
      <Link
        href="https://github.com/fulldotdev/"
        underline="hover"
        >Github</Link
      >
      <Link
        href="https://x.com/fulldotdev"
        underline="hover"
        >Twitter</Link
      >
      <Link
        href="https://discord.gg/vXZqMbadm8"
        underline="hover"
        >Discord</Link
      >
    </Column>

    <Column>
      <Heading size="sm">Resources</Heading>
      <Link
        href="/overview/introduction"
        underline="hover"
        >Docs</Link
      >
      <Link
        href="https://github.com/fulldotdev/ui"
        underline="hover"
        >Source Code</Link
      >
      <Link
        href="https://github.com/fulldotdev/ui/issues"
        underline="hover"
        >Github Issues</Link
      >
      <Link
        href="https://github.com/fulldotdev/ui/blob/main/CONTRIBUTING.md"
        underline="hover"
      >
        Contributing
      </Link>
    </Column>
  </Row>
</FooterComponent>
