---
import { Card, Column, Heading, Paragraph, Row } from '../../../ui/src'

const { title, description, link } = Astro.props
---

<Card href={link}>
  <Row
    align="center"
    style={{ height: '100%', justifyContent: 'center' }}
  >
    <slot />
  </Row>
  <Column size="sm">
    <Heading>{title}</Heading>
    <Paragraph>
      {description}
    </Paragraph>
  </Column>
</Card>
