---
import { Box, Card, Heading, Paragraph } from 'fulldev-ui'

const { title, description, link } = Astro.props
---

<!-- <Card href={link}> -->
<Card>
  <Box
    structure="row"
    align="center"
    style={{ height: '100%', justifyContent: 'center' }}
  >
    <slot />
  </Box>
  <Box
    size="sm"
    structure="column"
  >
    <Heading>{title}</Heading>
    <Paragraph>
      {description}
    </Paragraph>
  </Box>
</Card>
