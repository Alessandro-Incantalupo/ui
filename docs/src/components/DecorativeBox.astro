---
import { Box } from 'fulldev-ui'

const { style, ...rest } = Astro.props
---

<Box
  class:list={'decorative-box full'}
  if={true}
  style={style}
  {...rest}
/>

<style>
  .decorative-box {
    border: 1px solid var(--base-border);
    border-radius: 4px;
    background-image: url('/landing-background.png');
    background-position: center;
    background-size: contain;
    background-repeat: repeat;
    background-color: var(--base-background-surface);
    width: 100%;
    min-width: 100px;
    height: 100%;
    min-height: 100px;
  }
</style>
