        --slate-a10: color(display-p3 0.918 0.945 1 / 0.475);
        --slate-a11: color(display-p3 0.949 0.969 0.996 / 0.708);
        --slate-a12: color(display-p3 0.988 0.992 1 / 0.937);
      }
    }
  }

  html[data-theme='dark'] {
    --indigo-1: #11131f;
    --indigo-2: #141726;
    --indigo-3: #182449;
    --indigo-4: #1d2e62;
    --indigo-5: #253974;
    --indigo-6: #304384;
