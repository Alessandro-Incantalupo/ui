  }

  @supports (color: color(display-p3 1 1 1)) {
    @media (color-gamut: p3) {
      html[data-theme='dark'] {
        --indigo-a1: color(display-p3 0.071 0.212 0.996 / 0.055);
        --indigo-a2: color(display-p3 0.251 0.345 0.988 / 0.085);
