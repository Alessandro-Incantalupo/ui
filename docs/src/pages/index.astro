<Section
  align="center"
  size="lg"
  class="cta-section"
  style={{ margin: ' var(--space-spacer) 0' }}
>
  <Tagline> Let Fulldev UI help you </Tagline>
  <Heading
    level={1}
    as="h2"
    size="lg"
  >
    Build content websites <br />
    in a fraction of time
  </Heading>
  <Group>
    <Button
      variant="primary"
      text="Get Started"
      href="/overview/installation"
    />
    <Button
      variant="secondary"
      text="Github"
      icon={{ name: 'brand-github' }}
      href="https://github.com/fulldotdev/ui"
      target="_blank"
    />
  </Group>
</Section>

