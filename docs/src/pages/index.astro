<style>
  .browser {
    border-radius: 4px;

    .bar {
      display: flex;
      gap: 4px;
      background: white;
      padding: 6px;

      .circle {
        border-radius: 100%;
        width: 12px;
        height: 12px;

        &:nth-child(1) {
          background: #ff5f57;
        }

        &:nth-child(2) {
          background: #febd2e;
        }

        &:nth-child(3) {
          background: #28c840;
        }
      }
    }

    .example-container {
      border: none;
      border-top: 1px solid var(--border);

      > div {
        align-items: stretch;
        margin: 0;
        border-width: 0px;
        padding: 0;
      }
    }

    .expressive-code {
      border-top: 1px solid var(--border);
      border-bottom: 1px solid var(--border);
      /* border-bottom: 24px solid white; */
      background: var(--raised-background);
      padding-right: var(--space-gutter);
      padding-left: var(--space-gutter);
    }
  }

  .component_wrap {
    display: flex;
    flex-wrap: wrap;
    align-content: stretch;
    align-items: stretch;
    gap: 22px;
    width: 100%;
  }

  .component_wrap .card {
    flex: 1 0 calc(33.33% - 22px);
    justify-content: space-between;
    max-width: calc(33.33% - 22px);
  }

  @media (max-width: 768px) {
    .component_wrap .card {
      flex: 1 0 100%;
      max-width: 100%;
    }
  }

  .grid-row {
    display: flex;
    flex-direction: column;
    gap: 22px;
  }

  .cta-section {
    background-image: url('/landing-background.png') !important;
    background-position: center !important;
    background-size: cover !important;
    background-repeat: no-repeat !important;
  }

  @media (min-width: 768px) {
    .nobreak {
      white-space: nowrap;
    }
  }

  .full.badge {
    border-radius: 999px;
  }
</style>
