---
import { getEntry } from 'astro:content'
import {
  Badge,
  Button,
  Card,
  Deck,
  Group,
  Heading,
  Icon,
  Layout,
  Main,
  Paragraph,
  Section,
  Tagline,
} from 'fulldev-ui'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

const { data, render } = await getEntry('pages', 'index')
const { Content } = await render()
---

<Layout
  title="Fulldev UI - Astro UI component library, open-source"
  description="A library of UI components, written in Astro, compatible with all frameworks. Unique features to build entire websites, check it out."
  image="https://ui.full.dev/og-image-fulldev-ui.png"
  body={{
    class: 'not-content',
    theme: 'dark',
  }}
>
  <Header />
  <Main>
    <Section
      class="hero"
      size="3xl"
      structure="column"
      frame="container"
      align="center"
    >
      <Badge
        style={{ borderRadius: '999px' }}
        {...data.hero.badge}
        as="a"
        variant="outline"
      />
      <Heading
        as="h1"
        text={data.hero.heading}
      />
      <Paragraph
        size="xl"
        text={data.hero.paragraph}
        contrast
      />
      <Group structure="wrap">
        {data.hero.buttons.map((button: any) => <Button {...button} />)}
      </Group>
      <Deck
        structure="grid"
        size="md"
      >
        {
          data.hero.features.map((feature: any) => (
            <Card>
              <Icon
                name={feature.icon}
                size="xl"
                style={{
                  height: '1.4em',
                  width: '1.4em',
                }}
              />
              <Heading>{feature.heading}</Heading>
              <Paragraph>{feature.paragraph}</Paragraph>
            </Card>
          ))
        }
      </Deck>
    </Section>
    <Section
      align="center"
      structure="column"
      class="cta-section"
    >
      <Heading> Have a look at some examples </Heading>
    </Section>

    <div class="examples">
      <Content />
    </div>
  </Main>
</Layout>

<Section
  align="center"
  size="2xl"
  structure="column"
  align="center"
  class="cta-section"
  style={{ margin: ' var(--space-spacer) 0' }}
>
  <Tagline> Let Fulldev UI help you </Tagline>
  <Heading as="h2">
    Build content websites <br />
    in a fraction of time
  </Heading>
  <Group>
    <Button
      variant="solid"
      text="Get Started"
      href="/overview/installation"
    />
    <Button
      variant="soft"
      text="Discover All Components"
      icon={{ name: 'arrow-right' }}
      href="/components"
      target="_blank"
    />
  </Group>
</Section>

<Footer />

<style is:global>
  .hero {
    padding-top: var(--space-5) !important;

    h1.heading {
      background: -webkit-linear-gradient(
        275deg,
        hsl(223, 14%, 100%),
        hsl(223, 14%, 75%)
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }

  .examples {
    border-radius: 4px;

    .example-container {
      border: none !important;
      border-top: 1px solid var(--border) !important;

      > div {
        align-items: stretch !important;
        margin: 0 !important;
        border-width: 0px !important;
        padding: 0 !important;
      }
    }

    .expressive-code {
      border-top: 1px solid var(--border);
      border-bottom: 1px solid var(--border);
      background: var(--raised-background);
      padding-right: var(--space-gutter);
      padding-left: var(--space-gutter);
    }
  }

  .cta-section {
    background-image: url('/landing-background.png') !important;
    background-position: center !important;
    background-size: cover !important;
    background-repeat: no-repeat !important;
  }
</style>
