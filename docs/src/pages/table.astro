---
import {
  Table as FullTable,
  Layout,
  TableBody,
  TableCell,
  TableFooter,
  TableHead,
  TableHeader,
  TableRow,
} from 'fulldev-ui'
---

<Layout
  title="Fulldev UI - Astro UI component library, open-source"
  description="A library of UI components, written in Astro, compatible with all frameworks. Unique features to build entire websites, check it out."
  image="https://ui.full.dev/og-image-fulldev-ui.png"
  body={{
    class: 'not-content',
    theme: 'dark',
    style: 'width: fit-content;',
  }}
>
  <FullTable>
    <TableHeader>
      <TableRow>
        <TableHead>First Name</TableHead>
        <TableHead>Last Name</TableHead>
        <TableHead>Age</TableHead>
      </TableRow>
    </TableHeader>
    <TableBody>
      <TableRow>
        <TableCell>John</TableCell>
        <TableCell>Doe</TableCell>
        <TableCell>31</TableCell>
      </TableRow>
      <TableRow>
        <TableCell>Jane</TableCell>
        <TableCell>Doe</TableCell>
        <TableCell>29</TableCell>
      </TableRow>
    </TableBody>
    <TableFooter>
      <TableRow>
        <TableCell colspan="2">Total</TableCell>
        <TableCell>2</TableCell>
      </TableRow>
    </TableFooter>
  </FullTable>

  <br />

  <FullTable>
    <TableHeader cells={['First Name', 'Last Name', 'Age']} />
    <TableBody>
      <TableRow cells={['John', 'Doe', '31']} />
      <TableRow cells={['Jane', 'Doe', '29']} />
    </TableBody>
    <TableFooter cells={['Total', '2']} />
  </FullTable>

  <br />

  <FullTable>
    <TableHeader cells={['First Name', 'Last Name', 'Age']} />
    <TableBody>
      <TableRow cells={['John', 'Doe', '31']} />
      <TableRow cells={['Jane', 'Doe', '29']} />
    </TableBody>
    <TableFooter cells={[{ text: 'Total', colspan: '2' }, '2']} />
  </FullTable>

  <br />

  <FullTable
    header={['First Name', 'Last Name', 'Age']}
    body={[
      ['John', 'Doe', '31'],
      ['Jane', 'Doe', '29'],
    ]}
    footer={['Total', '2']}
  />

  <br />

  <FullTable
    header={['First Name', 'Last Name', 'Age']}
    body={[
      ['John', 'Doe', '31'],
      ['Jane', 'Doe', '29'],
    ]}
    footer={{ text: 'Total', colspan: '2' }}
  />
</Layout>
