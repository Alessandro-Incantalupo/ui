---
import { Heading, Page, Section, Textarea } from '@fullui/ui'

const sizes = ['2xl', 'xl', 'lg', 'md', 'sm', 'xs']
---

<Page
  scheme="dark"
  head={{
    title: 'Fullui - Astro component library, open-source',
    description:
      'Fullui provides a library of UI components written completely in the Astro language. With unique features only possible in Astro. Read about it here.',
  }}
>
  <Section>
    <Heading html="h1" />
    <Heading html="h2" />
    <Textarea name="berciht" />
  </Section>
</Page>

<style is:global>
  main {
    font-family: Arial, Helvetica, sans-serif;
  }
  h1 {
    font-weight: 900 !important;
  }
</style>
