---
import { Button, Group, Heading, Section } from 'fulldev-ui'

const { tagline, heading, buttons } = Astro.props
---

<Section
  align="center"
  size="3xl"
  align="center"
  class="cta-section cta"
>
  <Heading
    as="h2"
    set:html={heading ?? 'Build content websites <br /> in a fraction of time'}
  />
  <Group>
    {
      buttons &&
        buttons?.map((button: any, i: number) => (
          <Button
            color="brand"
            variant={i > 0 ? 'soft' : 'solid'}
            contrast={i > 0}
            {...button}
          />
        ))
    }
    <slot />
  </Group>
</Section>

<style is:global>
  .cta {
    padding-top: var(--space-5) !important;
    overflow: hidden;

    &::before {
      position: absolute;
      bottom: -80%;
      left: 0;
      z-index: -1;
      background: radial-gradient(
        circle,
        rgba(255, 85, 0, 0.08) 0%,
        rgba(255, 85, 0, 0) 52%
      );
      width: 100%;
      height: 170%;
      content: '';
    }
  }
</style>
