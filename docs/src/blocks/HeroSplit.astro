---
import type { ComponentProps } from 'astro/types'
import {
  Badge,
  Button,
  Card,
  Column,
  Heading,
  Icon,
  Image,
  Section,
  Text,
  Wrap,
} from '../../../ui/src'

interface Props {
  badge?: any
  heading?: string
  text?: string
  buttons?: ComponentProps<typeof Button>[]
  features?: any[]
  image?: string
}

const { badge, heading, text, buttons, features, image } = Astro.props
---

<Section
  class="hero"
  size="3xl"
  structure="split"
  align="center"
>
  <Column>
    <Badge
      size="md"
      contrast
      style={{ borderRadius: '999px' }}
      as="a"
      variant="outline"
      {...badge}
    />
    <Heading
      as="h1"
      text={heading}
    />
    <Text
      size="xl"
      text={text}
    />
    <Wrap>
      {
        buttons?.map((button: any, i: any) => (
          <Button
            color="brand"
            variant={i > 0 ? 'soft' : 'solid'}
            contrast={i > 0}
            {...button}
          />
        ))
      }
    </Wrap>
    <Column size="md">
      {
        features?.map((feature: any) => (
          <Card>
            <Icon
              color="brand"
              name={feature.icon}
              size="xl"
              style={{
                height: '1.4em',
                width: '1.4em',
              }}
            />
            <Heading>{feature.heading}</Heading>
            <Text>{feature.text}</Text>
          </Card>
        ))
      }
    </Column>
  </Column>
  <Image
    position="inset"
    src={image}
  />
</Section>
