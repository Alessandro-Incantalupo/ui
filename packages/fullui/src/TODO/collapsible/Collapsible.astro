---
interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<div>
  <details>
    <summary>{title}</summary>
    <p>
      {description}
      <slot />
    </p>
  </details>
</div>

<style is:global>
  summary {
    display: flex; /* also removes the list marker */
    align-items: center;
    cursor: pointer;
    list-style: none;
  }

  summary::after {
    transition: 0.2s;
    margin-left: auto;
    background: url('https://uploads.sitepoint.com/wp-content/uploads/2023/10/1697699669arrow.svg')
      no-repeat;
    background-size: cover;
    width: 18px;
    height: 10px;
    content: '';
  }

  details[open] > summary::after {
    transform: rotate(180deg);
  }

  details {
    cursor: default;
    border-radius: 5px;
    padding: 20px;
  }
</style>
