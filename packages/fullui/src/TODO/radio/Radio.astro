---
interface Props {
  label: string
  group?: string
}

const { label, group } = Astro.props
---

{
  label && (
    <div>
      <input
        class="input"
        id={label}
        name={group}
        type="radio"
      />
      <label for={label}>{label}</label>
    </div>
  )
}

<style is:global>
  .radio {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }
</style>
