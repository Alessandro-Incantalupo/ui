---
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

interface Base {
  label?: string | null
}

type Props = BuildProps<Base, 'label', 'label'>
const props = buildProps(Astro, 'label')

const { label, as = 'label', ...rest } = props
---

<Tag
  for={label}
  {as}
  {...rest}
>
  <Fragment set:html={label} />
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--font-size-1);
  }
</style>
