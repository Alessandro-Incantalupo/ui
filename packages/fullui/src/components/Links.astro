---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Link from './Link.astro'
import Tag from './Tag.astro'

interface Base {
  links?: ComponentProps<typeof Link>[]
}

type Props = BuildProps<Base, 'links'>
const props = buildProps(Astro, 'links')
---

<Tag {...props}>
  {props.links?.map((link) => <Link {...link} />)}
</Tag>

<style is:global>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-3);
  }
</style>
