---
import type { ComponentProps } from 'astro/types'
import { endomorphic, getChildProps, type Endomorphic } from '../utils'
import Icon from './Icon.astro'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'spec', string | null>,
    Pick<ComponentProps<typeof Icon>, 'icon' | '_icon'>,
    ComponentProps<typeof Tag> {}

const {
  as = 'li',
  icon = 'check',
  spec,
  ...rest
} = endomorphic(Astro.props, 'spec')
const child = getChildProps(rest)
---

<Tag
  class="spec"
  {as}
  {...rest}
>
  <Icon {...child} />
  <Fragment set:html={spec} />
  <slot />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
