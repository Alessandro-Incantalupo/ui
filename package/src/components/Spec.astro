---
import { z } from 'astro:content'
import { morph } from '../utils'
import Icon, { macro as iconSchema } from './Icon.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('spec', {
  icon: iconSchema.shape.icon,
  _icon: iconSchema.shape._icon,
  spec: z.string().nullish(),
})

const { as = 'li', icon = 'check', spec, ...rest } = meso(Astro.props)
---

<Tag
  class="spec"
  {as}
  {...rest}
>
  <Icon
    {icon}
    {...micro(rest)}
  />
  <Fragment set:html={spec} />
  <slot />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
