---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Icon from './Icon.astro'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'li'> = BuildProps<
  'spec',
  ComponentProps<typeof Tag<As>> &
    Pick<ComponentProps<typeof Icon>, 'icon' | '_icon'> & {
      spec: string | null
    }
>

const { as = 'li', icon = 'check', spec, ...rest } = buildProps('spec', Astro)
---

<Tag
  {as}
  {...rest}
>
  <Icon
    child
    {icon}
    {...rest}
  />
  <Fragment set:html={spec} />
  <slot />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
