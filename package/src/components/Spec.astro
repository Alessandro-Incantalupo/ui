---
import { z } from 'astro:content'
import Icon, { icon } from './Icon.astro'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof spec>

export const spec = tag.extend({
  icon,
})

const { as = 'li', ...rest } = spec.parse(Astro.props)
---

<Tag
  class="spec"
  {as}
  {...rest}
>
  <Icon
    name={'check'}
    {...rest.icon}
  />
  <Fragment set:html={spec} />
  <slot />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
