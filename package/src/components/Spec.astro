---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Icon, { iconSchema } from './Icon.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof specSchema>

export const specSchema = buildProps({
  icon: iconSchema,
})

const { as = 'li', ...rest } = parseProps(specSchema, Astro.props)
---

<Tag
  class="spec"
  {as}
  {...rest}
>
  <Icon
    name={'check'}
    {...rest.icon}
  />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1.625;
  }
</style>
