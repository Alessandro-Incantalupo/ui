---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Icon, { iconSchema } from './Icon.astro';
import Component from './misc/Component.astro';

type Props = z.infer<typeof specSchema>;

export const specSchema = componentSchema({
  icon: iconSchema,
});

const { tag = 'li', ...rest } = specSchema.parse(Astro.props);
---

<Component
  class="spec"
  {tag}
  {...rest}
>
  <Icon
    name={'check'}
    {...rest.icon}
  />
</Component>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
