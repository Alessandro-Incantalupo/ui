---
import { z } from 'astro:content'
import { getChildProps, macromorphic, mesomorphic } from '../utils'
import Icon, { zIcon } from './Icon.astro'
import Tag, { zTag } from './Tag.astro'

export const zSpec = macromorphic(
  'spec',
  // @ts-ignore
  zTag.merge(zIcon).extend({
    spec: z.string().nullish(),
  })
)

type Props = z.infer<typeof zSpec>

const {
  as = 'li',
  icon = 'check',
  spec,
  ...rest
} = mesomorphic('spec', zSpec, Astro.props)
const child = getChildProps(rest)
---

<Tag
  class="spec"
  {as}
  {...rest}
>
  <Icon {...child} />
  <Fragment set:html={spec} />
  <slot />
</Tag>

<style is:global>
  .spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
