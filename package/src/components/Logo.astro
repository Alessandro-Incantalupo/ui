---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Image from './Image.astro';
import Component from './misc/Component.astro';

type Props = z.infer<typeof logoSchema>;

export const logoSchema = componentSchema({
  src: z.string(),
  href: z.string(),
});

const { tag = 'a', href = '/', src, ...rest } = logoSchema.parse(Astro.props);
---

<Component
  class="logo"
  {href}
  {tag}
  {...rest}
>
  <Image
    src={src}
    {...rest}
  />
  <slot />
</Component>

<style is:global>
  .logo {
    .image {
      display: block !important;
      width: auto !important;
      height: var(--space-5) !important;
      object-fit: contain !important;
      color: var(--hue12) !important;
    }
  }
</style>
