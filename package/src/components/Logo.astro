---
import type { ComponentProps } from 'astro/types'
import { endomorphic, type Endomorphic } from '../utils'
import Image from './Image.astro'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'logo', ComponentProps<typeof Image>['image']>,
    ComponentProps<typeof Tag>,
    ComponentProps<typeof Image> {}

const { as = 'a', ...rest } = endomorphic(Astro.props, 'logo')
---

<Tag
  class="logo"
  href="/"
  {as}
  {...rest}
>
  <Image {...rest} />
  <slot />
</Tag>

<style is:global>
  .logo {
    .image {
      display: block !important;
      width: auto !important;
      height: var(--space-5) !important;
      object-fit: contain !important;
      color: var(--hue12) !important;
    }
  }
</style>
