---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Image from './Image.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof logoSchema>

export const logoSchema = buildProps({
  src: z.string().nullish(),
  href: z.string().nullish(),
})

const {
  as = 'a',
  href = '/',
  src,
  ...rest
} = parseProps(logoSchema, Astro.props)
---

<Tag
  class="logo"
  {href}
  {as}
  {...rest}
>
  <Image
    src={src}
    {...rest}
  />
  <slot />
</Tag>

<style is:global>
  .logo {
    .image {
      display: block !important;
      width: auto !important;
      height: var(--space-5) !important;
      object-fit: contain !important;
      color: var(--hue12) !important;
    }
  }
</style>
