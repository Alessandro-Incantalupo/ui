import { z } from 'astro:content'
import { morph } from '../utils'
import Tag from './Tag.astro'
import Image, { macro as logo } from './Image.astro'

type Props = z.infer<typeof macro>
  
export const { macro, meso, micro } = morph('logo', {
  logo: logo.shape.logo,
  _logo: logo.shape._logo,
})

const { as = 'a', ...rest } = meso(Astro.props)
---

<Tag
  class="logo"
  href="/"
  {as}
  {...rest}
>
  <Image {...rest} />
  <slot />
</Tag>

<style is:global>
  .logo {
    .image {
      display: block !important;
      width: auto !important;
      height: var(--space-5) !important;
      object-fit: contain !important;
      color: var(--hue12) !important;
    }
  }
</style>
