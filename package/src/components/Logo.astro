---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';
import Image from './Image.astro';
import Tag from './Tag.astro';

type Props = z.infer<typeof title>;

export const title = buildProps({
  logo: z.string().nullish(),
  href: z.string().nullish(),
});

const { as = 'a', href = '/', logo, ...rest } = parseProps(title, Astro.props);
---

<Tag
  class="logo"
  {href}
  {as}
  {...rest}
>
  <Image
    src={logo}
    {...rest}
  />
  <slot />
</Tag>

<style is:global>
  .logo {
    .image {
      display: block !important;
      width: auto !important;
      height: var(--space-5) !important;
      object-fit: contain !important;
      color: var(--hue12) !important;
    }
  }
</style>
