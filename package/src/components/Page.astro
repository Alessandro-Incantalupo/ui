---
import { z } from 'zod'
import Body, { bodySchema } from './Body.astro'
import Head, { headSchema } from './Head.astro'

type Props = z.infer<typeof pageSchema>

export const pageSchema = z.object({
  head: headSchema,
  body: bodySchema,
})
const { head, body } = pageSchema.parse(Astro.props)
---

<!doctype html>
<html class="page">
  <Head {...head} />
  <Body {...body} />
</html>
