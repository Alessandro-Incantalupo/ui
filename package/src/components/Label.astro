---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof labelSchema>

export const labelSchema = buildProps({})

const { as = 'label', html, ...rest } = parseProps(labelSchema, Astro.props)
---

<Tag
  class="label"
  for={html}
  {as}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
