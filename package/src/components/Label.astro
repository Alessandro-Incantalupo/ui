---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'label'> = BuildProps<
  'label',
  ComponentProps<typeof Tag<As>> & {
    label?: string | null
  }
>

const { as = 'label', label, ...rest } = buildProps('label', Astro.props)
---

<Tag
  class="label"
  for={label}
  {as}
  {...rest}
>
  <Fragment set:html={label} />
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
