---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof labelSchema>;

export const labelSchema = componentSchema({});

const { tag = 'label', html, ...rest } = labelSchema.parse(Astro.props);
---

<Component
  class="label"
  for={html}
  {html}
  {tag}
  {...rest}
>
  <slot />
</Component>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
