---
import { z } from 'zod'
import { Dynamic } from '..'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof labelSchema>

export const labelSchema = componentSchema({})

const { as = 'label', html, ...rest } = labelSchema.parse(Astro.props)
---

<Tag
  class="label"
  for={html}
  {html}
  {as}
  {...rest}
>
  <Dynamic {...rest} />
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
