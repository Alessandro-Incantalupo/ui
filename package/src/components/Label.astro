---
import type { ComponentProps } from 'astro/types'
import { endomorphic, type Endomorphic } from '../utils'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'label', string>,
    ComponentProps<typeof Tag> {}

const { as = 'label', label, ...rest } = endomorphic(Astro.props, 'label')
---

<Tag
  class="label"
  for={label}
  {as}
  {...rest}
>
  <Fragment set:html={label} />
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
