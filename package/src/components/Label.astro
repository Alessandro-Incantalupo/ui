---
import { z } from 'astro:content'
import { morph } from '../utils'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>
  
export const { macro, meso, micro } = morph('label', {
  label: z.string().nullish(),
})

const {
  as = 'label',
  label,
  ...rest
} = meso(Astro.props)
---

<Tag
  class="label"
  for={label}
  {as}
  {...rest}
>
  <Fragment set:html={label} />
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
