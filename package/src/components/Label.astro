---
import { z } from 'astro:content'
import { endomorphic } from '../utils'
import Tag, { zTag } from './Tag.astro'

export const zLabel = zTag.extend({
  label: z.string().nullish(),
})

type Props = z.infer<typeof zLabel>

const { as = 'label', label, ...rest } = endomorphic(Astro.props, 'label')
---

<Tag
  class="label"
  for={label}
  {as}
  {...rest}
>
  <Fragment set:html={label} />
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
