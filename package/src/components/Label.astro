---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';
import Tag from './Tag.astro';

type Props = z.infer<typeof label>;

export const label = buildProps({});

const { as = 'label', ...rest } = parseProps(label, Astro.props);
---

<Tag
  class="label"
  for={label}
  {as}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
