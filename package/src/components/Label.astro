---
import { z } from 'astro:content'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof label>

export const label = tag.extend({})

const { as = 'label', ...rest } = label.parse(Astro.props)
---

<Tag
  class="label"
  for={label}
  {as}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
