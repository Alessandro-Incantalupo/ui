---
import { z } from 'astro:content'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof description>

export const description = tag.extend({})

const { as = 'p', ...rest } = description.parse(Astro.props)
---

<Tag
  class:list={['description']}
  {as}
  {...rest}
>
  <Fragment set:html={description} />
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
