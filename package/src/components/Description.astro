---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

// type Props<As extends HTMLTag = 'p'> = BuildProps<
//   'description',
//   ComponentProps<typeof Tag<As>> & {
//     description?: string | null
//   }
// >

interface Props
  extends BuildProps<'description', Props, string | null>,
    ComponentProps<typeof Tag> {}

const {
  as = 'p',
  description,
  ...rest
} = buildProps('description', Astro.props)
---

<Tag
  class:list={['description']}
  {as}
  {...rest}
>
  <Fragment set:html={description} />
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
