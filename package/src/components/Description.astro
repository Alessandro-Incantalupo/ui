---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof descriptionSchema>;

export const descriptionSchema = componentSchema({});

const { tag = 'p', ...rest } = descriptionSchema.parse(Astro.props);
---

<Component
  class:list={['description']}
  {tag}
  {...rest}
>
  <slot name="start" />
  <slot />
  <slot name="end" />
</Component>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
