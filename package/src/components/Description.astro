---
import { z } from 'astro:content'
import { schemas } from '../utils'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = schemas('description', {
  description: z.string().nullish(),
})

const { as = 'p', contrast, description, ...rest } = meso.parse(Astro.props)
---

<Tag
  class:list={['description']}
  {as}
  {...rest}
>
  <Fragment set:html={description} />
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
