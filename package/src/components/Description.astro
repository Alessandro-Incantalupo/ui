---
import { z } from 'zod'
import { Dynamic } from '..'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof descriptionSchema>

export const descriptionSchema = componentSchema({})

const { as = 'p', ...rest } = descriptionSchema.parse(Astro.props)
---

<Tag
  class:list={['description']}
  {as}
  {...rest}
>
  <Dynamic {...rest} />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
