---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';
import Tag from './Tag.astro';

type Props = z.infer<typeof description>;

export const description = buildProps({});

const { as = 'p', ...rest } = parseProps(description, Astro.props);
---

<Tag
  class:list={['description']}
  {as}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
