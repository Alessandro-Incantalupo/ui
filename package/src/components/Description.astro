---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof descriptionSchema>

export const descriptionSchema = buildProps({})

const { as = 'p', ...rest } = parseProps(descriptionSchema, Astro.props)
---

<Tag
  class:list={['description']}
  {as}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font-size: var(--text-2);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
