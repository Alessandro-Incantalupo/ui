---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'p'> = BuildProps<
  'description',
  ComponentProps<typeof Tag<As>> & {
    description?: string | null
  }
>

const { as = 'p', description, ...rest } = buildProps('description', Astro)
---

<Tag {...rest}>
  <Fragment set:html={description} />
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);
  }
</style>
