---
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

interface Base {
  description?: string | null
}

type Props = BuildProps<Base, 'description', 'p'>
const props = buildProps(Astro, 'description')

const { description, ...rest } = props
---

<Tag {...rest}>
  <Fragment set:html={description} />
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);
  }
</style>
