---
import { z } from 'astro:content'
import { ectomorphic, endomorphic } from '../utils'
import Tag, { zTag } from './Tag.astro'

export const zDescription = endomorphic(
  'description',
  zTag.extend({
    description: z.string().nullish(),
    contrast: z.boolean().nullish(),
  })
)

type Props = z.infer<typeof zDescription>

const {
  as = 'p',
  contrast,
  description,
  ...rest
} = ectomorphic('description', zDescription, Astro.props)
---

<Tag
  class:list={['description', { contrast }]}
  {as}
  {...rest}
>
  <Fragment set:html={description} />
  <slot />
</Tag>

<style is:global>
  .description {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
