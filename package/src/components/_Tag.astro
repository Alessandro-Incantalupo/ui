---
interface Props {
  if?: 'slot' | any
  theme?: 'light' | 'dark'
  color?:
    | 'base'
    | 'primary'
    | 'secondary'
    | 'raised'
    | 'lowered'
    | 'outline'
    | 'ghost'
    | 'accent'
  size?: 'sm' | 'md' | 'lg'
  density?: 'base' | 'compact'
  slot?: any // slot
  [key: string | number | symbol]: any
}

const {
  as: As = 'div',
  if: ifProp = 'slot',
  theme,
  color,
  density,
  size,
  ...rest
} = Astro.props

const slot = await Astro.slots.render('default')
const render = ifProp === 'slot' ? slot?.trim().length > 0 : ifProp
---

{
  render && (
    <As
      class:list={[
        'full-tag',
        {
          [`full-theme-${theme}`]: theme,
          [`full-color-${color}`]: color,
          [`full-density-${density}`]: density,
          [`full-size-${size}`]: size,
        },
      ]}
      {...rest}
    >
      <Fragment set:html={slot} />
    </As>
  )
}

<style is:global>
  @import '../css/main.css';
</style>

<style is:global>
  .full-tag {
    z-index: 0;
    box-sizing: border-box;
  }
</style>
