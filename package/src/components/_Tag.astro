---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<As extends HTMLTag = 'div'> = Omit<Polymorphic<{ as: As }>, 'slot'> & {
  if?: 'slot' | any
  theme?: 'light' | 'dark'
  color?: 'base' | 'lowered' | 'raised' | 'primary' | 'secondary' | 'input'
  size?: 'sm' | 'md' | 'lg'
  density?: 'base' | 'compact'
  slot?: any
  [key: string | number | symbol]: any
}

const {
  as: As = 'div',
  if: ifProp = 'slot',
  theme,
  color,
  density,
  size,
  ...rest
} = Astro.props

const slot = await Astro.slots.render('default')
const render = ifProp === 'slot' ? slot?.trim().length > 0 : ifProp
---

{
  render && (
    <As
      class:list={[
        'full-tag',
        {
          [`full-theme-${theme}`]: theme,
          [`full-color-${color}`]: color,
          [`full-density-${density}`]: density,
          [`full-size-${size}`]: size,
        },
      ]}
      {...rest}
    >
      <Fragment set:html={slot} />
    </As>
  )
}

<style is:global lang="scss">
  @import '../css/main.css';

  .full-tag {
    box-sizing: border-box;
    z-index: 0;
  }
</style>
