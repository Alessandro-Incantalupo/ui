---
interface Props {
  if?: 'content' | any
  slot?: any
  [key: string | number | symbol]: any
}

const {
  as: As = 'div',
  if: ifProp = 'content',
  theme,
  variant,
  density,
  size,
  align,
  position,
  level,
  frame,
  ratio,
  html,
  text,
  ...rest
} = Astro.props

const slot = await Astro.slots.render('default')
const hasContent = (str?: string) => str && str.trim().length > 0
const render =
  ifProp === 'content'
    ? hasContent(slot) || hasContent(html) || hasContent(text)
    : ifProp
---

{
  render && (
    <As
      class:list={[
        'full',
        {
          [`theme-${theme}`]: theme,
          [`variant-${variant}`]: variant,
          [`density-${density}`]: density,
          [`size-${size}`]: size,
          [`align-${align}`]: align,
          [`level-${level}`]: level,
          [`position-${position}`]: position,
          [`frame-${frame}`]: frame,
          [`ratio-${ratio}`]: ratio,
        },
      ]}
      {...rest}
    >
      <slot name="before" />
      <Fragment set:html={slot} />
      <Fragment set:html={html} />
      <Fragment set:text={text} />
      <slot />
      <slot name="after" />
    </As>
  )
}

<style is:global lang="scss">
  @import '../css/colors.css';
  @import '../css/styles.css';
  @import '../css/sizes.css';

  .full {
    z-index: 0;
    box-sizing: border-box;
  }
</style>
