---
import { z } from 'astro:content'
import Field, { field } from './Field.astro'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof fields>

export const fields = tag.extend({
  field,
  items: z.array(field).nullish(),
})

const { items, ...rest } = fields.parse(Astro.props)
---

<Tag
  class:list={['fields']}
  {...rest}
>
  {
    items?.map((item) => (
      <Field
        {...rest.field}
        {...item}
      />
    ))
  }
</Tag>

<style is:global>
  .fields {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
</style>
