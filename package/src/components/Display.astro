---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof displaySchema>;

export const displaySchema = componentSchema({
  align: z.enum(['start', 'center']),
});

const { align, ...rest } = displaySchema.parse(Astro.props);
---

<Component
  class:list={['display', align]}
  {...rest}
>
  <slot name="start" />
  <slot />
  <slot name="end" />
</Component>

<style is:global>
  .display {
    display: flex;
    row-gap: var(--space-4);
    flex-direction: column;
    align-items: flex-start;
    max-width: max(calc(var(--space-6) * 10), 700px);
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    &:is(.split &.center) {
      align-items: start;
      text-align: left;
    }
  }
</style>
