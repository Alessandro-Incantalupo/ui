---
import { z } from 'zod'
import { Children } from '..'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof displaySchema>

export const displaySchema = componentSchema({
  align: z.enum(['start', 'center']),
})

const { align, ...rest } = displaySchema.parse(Astro.props)
---

<Tag
  class:list={['display', align]}
  {...rest}
>
  <Children {...rest} />
</Tag>

<style is:global>
  .display {
    display: flex;
    row-gap: var(--space-4);
    flex-direction: column;
    align-items: flex-start;
    max-width: max(calc(var(--space-6) * 10), 700px);
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    &:is(.split &.center) {
      align-items: start;
      text-align: left;
    }
  }
</style>
