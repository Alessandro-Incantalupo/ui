---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Icon, { iconSchema } from './Icon.astro'
import Rating, { ratingSchema } from './Rating.astro'
import SpecGroup, { specGroupSchema } from './SpecGroup.astro'
import Tag from './Tag.astro'
import Writeup, { writeupSchema } from './Writeup.astro'

type Props = z.infer<typeof displaySchema>

export const displaySchema = buildProps({
  rating: ratingSchema,
  icon: iconSchema,
  specs: specGroupSchema,
  writeup: writeupSchema,
  align: z.enum(['start', 'center']).nullish(),
})

const { align, ...rest } = parseProps(displaySchema, Astro.props)
---

<Tag
  class:list={['display', align]}
  {...rest}
>
  <slot>
    <Rating {...rest.rating} />
    <Icon {...rest.icon} />
    <Writeup {...rest.writeup} />
    <SpecGroup {...rest.specs} />
  </slot>
</Tag>

<style is:global>
  .display {
    display: flex;
    row-gap: var(--space-4);
    flex-direction: column;
    align-items: flex-start;
    max-width: max(calc(var(--space-6) * 6), 700px);
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    &:is(.split &.center) {
      align-items: start;
      text-align: left;
    }
  }
</style>
