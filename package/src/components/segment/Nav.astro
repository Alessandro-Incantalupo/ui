---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'nav'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag> & {
    structure?: 'spread' | 'group'
    align?: 'start' | 'center' | 'end'
  }

const { as = 'nav', structure = 'spread', ...rest } = Astro.props
---

<Tag
  class:list={['nav']}
  {as}
  {structure}
  {...rest}
>
  <slot />
</Tag>

<style is:global lang="scss">
  html :where(.full.nav) {
    margin-left: auto;
    width: max-content;
  }
</style>
