---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Component from '../Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  align?: 'start' | 'center' | 'end'
  position?: 'inset'
  space?: 'none' | 'auto'
  structure?:
    | 'bento'
    | 'carousel'
    | 'column'
    | 'grid'
    | 'masonry'
    | 'row'
    | 'split'
    | 'spread'
    | 'wrap'
}

const {
  as = 'div',
  space = 'auto',
  structure = 'column',
  align = 'start',
  ...rest
} = Astro.props
---

<Component
  class:list={['box']}
  {as}
  {structure}
  {align}
  {space}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('box') {
  }
</style>
