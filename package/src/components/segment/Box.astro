---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'section'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag> & {
    scheme?: 'light' | 'dark'
    color?: 'base' | 'brand' | string
    size?: 'sm' | 'md' | 'lg'
    compact?: boolean
    frame?: 'container' | 'wrapper' | 'panel' | 'viewport'
    variant?: 'fill' | 'outline' | 'soft' | 'solid' | 'surface'
    structure?:
      | 'row'
      | 'column'
      | 'split'
      | 'spread'
      | 'grid'
      | 'bento'
      | 'masonry'
      | 'carousel'
  }

const { ...rest } = Astro.props
---

<Tag
  class:list={['box']}
  {...rest}
>
  <slot />
</Tag>
