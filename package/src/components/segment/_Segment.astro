---
import type { ComponentProps } from 'astro/types'
import Structure from '../structure/_Structure.astro'

interface Props extends ComponentProps<typeof Structure> {}

const { structure, frame, ratio, position, ...rest } = Astro.props
---

<Structure
  class:list={[
    'segment',
    structure,
    {
      [`frame-${frame}`]: frame,
      [`ratio-${ratio}`]: ratio,
      [`position-${position}`]: position,
    },
  ]}
  {...rest}
>
  <slot />
</Structure>

<style is:global lang="scss">
  .full.segment {
  }
</style>
