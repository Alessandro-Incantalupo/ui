---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Component from '../_Component.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  scheme?: 'light' | 'dark'
  color?: 'base' | 'brand'
  compact?: boolean
  size?: 'sm' | 'md' | 'lg' | 'xl'
  structure?: 'grid' | 'carousel' | 'masonry' | 'bento' | 'row' | 'split'
  frame?: 'wrapper' | 'container'
}

const { as = 'div', structure = 'grid', ...rest } = Astro.props
---

<Component
  class:list={['deck']}
  {as}
  {structure}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('deck') {
    position: relative;
    width: 100%;

