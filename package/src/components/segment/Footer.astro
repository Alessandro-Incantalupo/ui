import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'footer'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag>

const {
  as = 'footer',
  direction = 'horizontal',
  density = 'compact',
  ...rest
} = Astro.props
