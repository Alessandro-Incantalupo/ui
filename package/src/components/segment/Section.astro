---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Component from '../_Component.astro'

type Props<As extends HTMLTag = 'section'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Component> & {
    scheme?: 'light' | 'dark'
    color?: 'base' | 'brand'
    size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl'
    compact?: boolean
    frame?: 'fill' | 'viewport' | 'contain' | 'panel'
    variant?: 'ghost' | 'subtle' | 'outline' | 'soft' | 'solid' | 'surface'
    align?: 'start' | 'center' | 'end' | 'stretch'
    structure?: 'column' | 'split' | 'spread' | 'row'
  }

const {
  as = 'div',
  frame = 'fill',
  structure = 'column',
  variant = 'ghost',
  ...rest
} = Astro.props
---

<Component
  class:list={['section']}
  {as}
  {frame}
  {variant}
  {structure}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('section') {
    --screen: 1536px;
    --gutter: max(4vw, calc(100vw - var(--screen)) / 2);
    --is-full-width: calc((100vw - 100%) * 999);

    position: relative;
    margin: var(--outer-y) var(--outer-x);
    background-color: var(--background);
    padding: var(--inner-y) var(--inner-x);
    width: 100%;
    max-width: calc(100% - (2 * var(--outer-x)));
    overflow: hidden;

    &.frame-fill {
      --inner-x: var(--gutter);
      --outer-x: 0;
      --inner-y: var(--space-6);
      --outer-y: 0;
    }

    &.frame-viewport {
      --inner-x: var(--gutter);
      --outer-x: 0;
      --inner-y: var(--space-6);
      --outer-y: 0;

      min-height: 100vh;
    }

    &.frame-contain {
      --inner-x: max(4vw, var(--space-6));
      --outer-x: max(0px, calc(var(--gutter) - var(--inner-x)));
      --inner-y: var(--space-6);
      --outer-y: 0;
    }

    &.frame-panel {
      --inner-x: min(4vw, var(--space-6));
      --outer-x: var(--gutter);
      --inner-y: var(--space-6);
      --outer-y: var(--space-6);

      border: 1px solid var(--border);
      border-radius: var(--radius-3);
    }
  }
</style>
