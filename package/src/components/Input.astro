---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Parent from './misc/Parent.astro';

type Props = z.infer<typeof inputSchema>;

export const inputSchema = componentSchema({
  name: z.string().nullable(),
  placeholder: z.string().nullable(),
  type: z.string().nullable(),
});

const { tag = 'input', name, ...rest } = inputSchema.parse(Astro.props);
---

<Parent
  if={name}
  {tag}
  class:list={['input']}
  name={name}
  {...rest}
/>

<style is:global>
  .input {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
