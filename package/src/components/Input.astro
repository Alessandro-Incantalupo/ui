---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'

type Props = z.infer<typeof inputSchema>

export const inputSchema = buildProps({
  name: z.string().nullable(),
})

const { name } = parseProps(inputSchema, Astro.props)
---

{
  name && (
    <input
      class="input"
      id={name}
      {name}
    />
  )
}

<style is:global>
  .input {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
