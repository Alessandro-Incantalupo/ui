---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Link, { linkSchema } from './Link.astro';
import Component from './misc/Component.astro';

type Props = z.infer<typeof linkGroupSchema>;

export const linkGroupSchema = componentSchema({
  link: linkSchema,
  links: z.array(linkSchema),
});

const { links, ...rest } = linkGroupSchema.parse(Astro.props);
---

<Component
  class="links"
  {...rest}
>
  {
    links?.map((item) => (
      <Link
        {...rest.link}
        {...item}
      />
    ))
  }
</Component>

<style is:global>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
</style>
