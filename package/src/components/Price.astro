---
import { z } from 'astro:content'
import { ectomorphic, endomorphic } from '../utils'
import Tag, { zTag } from './Tag.astro'

export const zPrice = endomorphic(
  'price',
  zTag.extend({
    price: z.number().nullish(),
  })
)

type Props = z.infer<typeof zPrice>

const { price, ...rest } = ectomorphic('price', zPrice, Astro.props)

const priceNumber = parseFloat(price as any)
const fixedPrice = priceNumber?.toFixed(2).replace('.', ',')
---

<Tag
  class="price"
  {...rest}
>
  {price && fixedPrice && <Fragment>&euro;{fixedPrice}</Fragment>}
</Tag>

<style is:global>
  .price {
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--text-2);
    line-height: 1;
  }
</style>
