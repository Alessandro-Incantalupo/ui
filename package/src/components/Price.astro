---
import type { ComponentProps } from 'astro/types'
import { endomorphic, type Endomorphic } from '../utils'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'price', number>,
    ComponentProps<typeof Tag> {}

const { price, ...rest } = endomorphic(Astro.props, 'price')

const priceNumber = parseFloat(price as any)
const fixedPrice = priceNumber?.toFixed(2).replace('.', ',')
---

<Tag
  class="price"
  {...rest}
>
  {price && fixedPrice && <Fragment>&euro;{fixedPrice}</Fragment>}
</Tag>

<style is:global>
  .price {
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--text-2);
    line-height: 1;
  }
</style>
