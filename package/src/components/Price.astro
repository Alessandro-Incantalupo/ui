---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';
import Tag from './Tag.astro';

type Props = z.infer<typeof price>;

export const price = buildProps({});

const { html, ...rest } = parseProps(price, Astro.props);
const priceNumber = parseFloat(html as any);
const fixedPrice = priceNumber?.toFixed(2).replace('.', ',');
---

<Tag
  class="price"
  {...rest}
>
  {html && fixedPrice && <Fragment>&euro;{fixedPrice}</Fragment>}
</Tag>

<style is:global>
  .price {
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--text-2);
    line-height: 1;
  }
</style>
