---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof priceSchema>

export const priceSchema = buildProps({})

const { html, ...rest } = parseProps(priceSchema, Astro.props)

const priceNumber = parseFloat(html as any)
const fixedPrice = priceNumber?.toFixed(2).replace('.', ',')

console.log('priceNumber', priceNumber)
---

<Tag
  class="price"
  {...rest}
>
  {html && fixedPrice && <Fragment>&euro;{fixedPrice}</Fragment>}
</Tag>

<style is:global>
  .price {
    padding-top: var(--space-4);
    padding-bottom: var(--space-4);
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--text-2);
    line-height: 1;
  }
</style>
