---
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

interface Base {
  price?: number | null
}

type Props = BuildProps<Base, 'price', 'span'>
const props = buildProps(Astro, 'price')

const { price, ...rest } = props
const priceNumber = parseFloat(price as any)
const fixedPrice = priceNumber?.toFixed(2).replace('.', ',')
---

<Tag {...rest}>
  {price && fixedPrice && <Fragment>&euro;{fixedPrice}</Fragment>}
</Tag>

<style is:global>
  .price {
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--text-2);
    line-height: 1;
  }
</style>
