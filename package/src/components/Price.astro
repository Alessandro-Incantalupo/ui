---
import { z } from 'astro:content'
import { morph } from '../utils'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>
  
export const { macro, meso, micro } = morph('price', {
  price: z.number().nullish(),
})

const { price, ...rest } = meso(Astro.props)

const priceNumber = parseFloat(price as any)
const fixedPrice = priceNumber?.toFixed(2).replace('.', ',')
---

<Tag
  class="price"
  {...rest}
>
  {price && fixedPrice && <Fragment>&euro;{fixedPrice}</Fragment>}
</Tag>

<style is:global>
  .price {
    color: var(--hue12);
    font-weight: 700;
    font-size: var(--text-2);
    line-height: 1;
  }
</style>
