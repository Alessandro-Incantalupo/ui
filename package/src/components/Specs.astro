---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Spec from './Spec.astro'
import Tag from './Tag.astro'

interface Props
  extends BuildProps<'specs', Props, ComponentProps<typeof Spec>['spec'][]>,
    ComponentProps<typeof Tag> {
  align?: 'start' | 'center' | 'stretch' | null
}

const { specs, ...rest } = buildProps('specs', Astro.props)
---

<Tag
  {...rest}
  class:list="specs"
>
  {specs?.map((spec) => <Spec {spec} />)}
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
