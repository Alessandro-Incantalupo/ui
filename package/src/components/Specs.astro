---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';
import Spec, { spec } from './Spec.astro';
import Tag from './Tag.astro';

type Props = z.infer<typeof specs>;

export const specs = buildProps({
  items: z.array(spec),
});

const { items, ...rest } = parseProps(specs, Astro.props);
---

<Tag
  class:list={['specs']}
  {...rest}
>
  <slot>
    {items?.map((item) => <Spec {item} />)}
  </slot>
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
