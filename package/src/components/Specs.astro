---
import { z } from 'astro:content'
import { morph } from '../utils'
import Spec, { macro as spec } from './Spec.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('specs', {
  specs: z.array(spec),
})

const { specs, ...rest } = meso(Astro.props)
---

<Tag
  {...rest}
  class:list="specs"
>
  {specs?.map((spec) => <Spec {spec} />)}
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
