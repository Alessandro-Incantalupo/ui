---
import { z } from 'astro:content'
import Spec, { spec } from './Spec.astro'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof specs>

export const specs = tag.extend({
  items: z.array(spec),
})

const { items, ...rest } = specs.parse(Astro.props)
---

<Tag
  class:list={['specs']}
  {...rest}
>
  <slot>
    {items?.map((item) => <Spec {item} />)}
  </slot>
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
