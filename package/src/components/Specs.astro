---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Spec from './Spec.astro'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'div'> = BuildProps<
  'specs',
  ComponentProps<typeof Tag<As>> & {
    specs?: ComponentProps<typeof Spec>['spec'][]
    align?: 'start' | 'center' | 'stretch' | null
  }
>

const { specs, ...rest } = buildProps('specs', Astro.props)
---

<Tag
  {...rest}
  class:list="specs"
>
  {specs?.map((spec) => <Spec {spec} />)}
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
