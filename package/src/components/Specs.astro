---
import type { ComponentProps } from 'astro/types'
import { endomorphic, type Endomorphic } from '../utils'
import Spec from './Spec.astro'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'specs', ComponentProps<typeof Spec>['spec'][]>,
    ComponentProps<typeof Tag> {
  align?: 'start' | 'center' | 'stretch' | null
}

const { specs, ...rest } = endomorphic(Astro.props, 'specs')
---

<Tag
  {...rest}
  class:list="specs"
>
  {specs?.map((spec) => <Spec {spec} />)}
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
