---
import { z } from 'astro:content'
import { macromorphic, mesomorphic } from '../utils'
import Spec, { zSpec } from './Spec.astro'
import Tag, { zTag } from './Tag.astro'

export const zSpecs = macromorphic(
  'specs',
  // @ts-ignore
  zTag.merge(zSpec).extend({
    specs: zSpec,
  })
)

type Props = z.infer<typeof zSpecs>

const { specs, ...rest } = mesomorphic('specs', zSpecs, Astro.props)
---

<Tag
  {...rest}
  class:list="specs"
>
  {specs?.map((spec) => <Spec {spec} />)}
</Tag>

<style is:global>
  .specs {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
</style>
