---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import type Card from './Card.astro'
import type Deck from './Deck.astro'
import type Footer from './Footer.astro'
import type Form from './Form.astro'
import type Header from './Header.astro'
import type Main from './Main.astro'
import type Nav from './Nav.astro'
import type Section from './Section.astro'
import { default as Layout } from './_Layout.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Layout> &
  Childmorphic<{
    card: ComponentProps<typeof Card>
    deck: ComponentProps<typeof Deck>
    footer: ComponentProps<typeof Footer>
    form: ComponentProps<typeof Form>
    header: ComponentProps<typeof Header>
    main: ComponentProps<typeof Main>
    nav: ComponentProps<typeof Nav>
    section: ComponentProps<typeof Section>
    stack: Props<As>
  }>

const { as = 'div', ...rest } = Astro.props
---

<Layout
  class:list={['full-stack']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Layout>

<style is:global lang="scss">
  .full-stack {
  }
</style>
