---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import { buttonSchema } from '../base/Button.astro'
import Children from '../utilities/Children.astro'
import Tag from '../utilities/Tag.astro'

type Props = z.infer<typeof formSchema>

export const formSchema = componentSchema({
  button: buttonSchema,
  method: z.string(),
})

const { as = 'form', method = 'POST', ...rest } = formSchema.parse(Astro.props)
---

<Tag
  class="form"
  {as}
  {method}
  {...rest}
>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
