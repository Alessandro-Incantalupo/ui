---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'ul'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    direction?: 'row' | 'column'
    align?: 'stretch' | 'start' | 'center' | 'end'
  }

const { as = 'ul', direction = 'column', align, ...rest } = Astro.props
---

<Tag
  class:list={['full-list', direction, align]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    width: 100%;

    &.row {
      flex-direction: row;
    }

    &.column {
      flex-direction: column;
    }

    &.stretch {
      align-items: stretch;
    }

    &.start {
      align-items: flex-start;
    }

    &.center {
      align-items: center;
    }

    &.end {
      align-items: flex-end;
    }
  }
</style>
