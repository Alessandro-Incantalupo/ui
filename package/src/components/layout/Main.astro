---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'main'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'main', ...rest } = Astro.props
---

<Tag
  class:list={['full-main']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-main {
    display: flex;
    flex-direction: column;
  }
</style>
