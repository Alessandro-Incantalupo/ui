---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import type Section from './Section.astro'
import type Stack from './Stack.astro'
import Layout from './_Layout.astro'

type Props<As extends HTMLTag = 'main'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Layout> &
  Childmorphic<{
    stack: ComponentProps<typeof Stack>
    section: ComponentProps<typeof Section>
  }>

const { as = 'main', ...rest } = Astro.props
---

<Layout
  class:list={['full-main']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Layout>

<style is:global lang="scss">
  .full-main {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
</style>
