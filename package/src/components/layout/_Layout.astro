---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Children from '../_Children.astro'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag> &
  Childmorphic<{
    slot: any
    html: string
  }> & {
    layout?: 'row' | 'column' | undefined
    x?: 'start' | 'center' | 'end' | 'between' | 'stretch'
    y?: 'start' | 'center' | 'end' | 'between' | 'stretch'
  }

const { layout = 'column', x = 'start', y = 'start', ...rest } = Astro.props
---

<Tag
  class:list={[
    'full-layout',
    {
      [`full-layout-${layout}`]: layout,
      [`full-x-${x}`]: x,
      [`full-y-${y}`]: y,
    },
  ]}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-layout {
    * {
      margin: 0;
    }
  }

  .full-layout-row {
    display: flex;
    flex-direction: row;
    justify-content: var(--full-x);
    align-items: var(--full-y);

    > {
      .full-tag {
        + .full-deck,
        + .full-image,
        + .full-icon {
          margin-left: var(--space-5);
        }
      }

      .full-deck,
      .full-image,
      .full-icon {
        + .full-tag {
          margin-left: var(--space-5);
        }
      }

      .full-tag {
        + .full-group,
        + .full-form{
          margin-left: var(--space-4);
        }
      }

      .full-tag {
        + .full-paragraph,
        + .full-link,
        + .full-heading,
        + .full-switch,{
          margin-left: var(--space-3);
        }
      }

      .full-tag {
        + .full-link {
          margin-left: var(--space-4);
        }
      }

      .full-tag {
        + .full-button {
          margin-left: var(--space-5);
        }
      }

      .full-position-background + .full-tag {
        margin-left: 0;
      }

      .full-button {
        + .full-button {
          margin-left: var(--space-2);
        }
      }

      .full-placeholder + .full-placeholder {
        margin-left: var(--space-4);
      }

      .full-position-background + .full-tag {
        margin-left: 0;
      }
    }
  }

  .full-layout-column {
    display: flex;
    flex-direction: column;
    justify-content: var(--full-y);
    align-items: var(--full-x);
    text-align: var(--full-x);

    // > * > * {
    //   text-align: left;
    // }

    > {
      .full-tag {
        + .full-deck,
        + .full-image,
        + .full-icon {
          margin-top: var(--space-5);
        }
      }

      .full-placeholder + .full-placeholder {
        margin-top: var(--space-4);
      }

      .full-tag {
        + .full-group,
        + .full-form,
        + .full-button,
        + .full-list {
          margin-top: var(--space-4);
        }
      }

      .full-tag {
        + .full-heading {
          margin-top: var(--space-3);
        }
      }

      .full-rating {
        + .full-tag {
          margin-top: var(--space-4);
        }
      }

      .full-deck,
      .full-image,
      .full-icon {
        + .full-tag {
          margin-top: var(--space-5);
        }
      }

      .full-button {
        + .full-button {
          margin-top: var(--space-2);
        }
      }

      .full-paragraph {
        + .full-paragraph,
        + .full-label,
        + .full-input {
          margin-top: var(--space-2);
        }
      }

      .full-tagline {
        + .full-paragraph,
        + .full-heading,
        + .full-label,
        + .full-input {
          margin-top: var(--space-3);
        }
      }

      .full-heading {
        + .full-paragraph {
          margin-top: var(--space-3);
        }
      }

      .full-paragraph {
        + .full-heading {
          margin-top: var(--space-3);
        }
      }

      .full-label {
        + .full-input {
          margin-top: var(--space-1);
        }
      }

      .full-input {
        + .full-input,
        + .full-button,
        + .full-label {
          margin-top: var(--space-3);
        }
      }
    }
  }

  .full-x-start {
    --full-x: flex-start;
  }

  .full-x-center {
    --full-x: center;
  }

  .full-x-end {
    --full-x: flex-end;
  }

  .full-x-between {
    --full-x: space-between;
  }

  .full-x-stretch {
    --full-x: stretch;
  }

  .full-y-start {
    --full-y: flex-start;
  }

  .full-y-center {
    --full-y: center;
  }

  .full-y-end {
    --full-y: flex-end;
  }

  .full-y-between {
    --full-y: space-between;
  }

  .full-y-stretch {
    --full-y: stretch;
  }
</style>
