---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'details'> = ComponentProps<typeof Tag<As>>

const { as = 'details', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-details']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-details {
    color: var(--color-12);
    font-size: var(--text);
  }
</style>
