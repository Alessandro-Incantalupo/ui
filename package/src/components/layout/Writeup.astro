---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props = z.infer<typeof writeupSchema>

export const writeupSchema = componentSchema({
  align: z.enum(['start', 'center']),
})

const { align, ...rest } = writeupSchema.parse(Astro.props)
---

<Tag
  class:list={['full-writeup', align]}
  {...rest}
>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .full-writeup {
    display: flex;
    /* TODO replace gap with per-component margin */
    flex-direction: column;
    align-items: flex-start;
    max-width: max(calc(var(--space-6) * 10), 700px);
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    .full-subtext {
      margin: 10px 0 -10px;
    }

    .full-heading {
      margin: 20px 0;
    }

    .full-text {
      margin: 5px 0;
    }

    .full-group {
      margin: 20px 0 0;
    }
  }
</style>
