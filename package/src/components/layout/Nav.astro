---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import type Stack from './Stack.astro'
import Layout from './_Layout.astro'

type Props<As extends HTMLTag = 'nav'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Layout> &
  Childmorphic<{
    stack: ComponentProps<typeof Stack>
  }>

const { as = 'nav', layout = 'row', y = 'center', ...rest } = Astro.props
---

<Layout
  class:list={['full-nav']}
  {as}
  {layout}
  {y}
  {...rest}
>
  <slot name="before" />
  <slot />
</Layout>

<style is:global lang="scss">
  .full-nav {
    margin-left: auto;
    width: max-content;
  }
</style>
