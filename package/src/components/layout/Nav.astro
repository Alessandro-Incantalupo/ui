---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Stack from './Stack.astro'

type Props<As extends HTMLTag = 'nav'> = ComponentProps<typeof Stack<As>> &
  ComponentProps<typeof Children>

const { as = 'nav', layout = 'row', ...rest } = Astro.props
---

<Stack
  class:list={['full-nav']}
  {as}
  {layout}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Stack>

<style is:global lang="scss">
  .full-nav {
    margin-left: auto;
    width: max-content;
  }
</style>
