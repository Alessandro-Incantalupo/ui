---
import { z } from 'zod';
import Children, { childrenSchema } from './Children.astro';
import Parent, { parentSchema } from './Parent.astro';

type Props = z.infer<typeof componentSchema>;

export const componentSchema = parentSchema.merge(childrenSchema);

const props = componentSchema.parse(Astro.props);
---

<Parent {...props}>
  <slot />
  <slot name="start" />
  <Children {...props} />
  <slot name="end" />
</Parent>
