---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Container from './_Container.astro'

type Props<As extends HTMLTag = 'footer'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Container>

const {
  as = 'footer',
  direction = 'row',
  density = 'compact',
  ...rest
} = Astro.props
---

<Container
  class:list={['full-footer']}
  {as}
  {direction}
  {density}
  {...rest}
>
  <slot name="before" />
  <slot />
</Container>

<style is:global lang="scss">
  .full-footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);

    &.center {
      align-items: center;
    }

    .full-group {
      gap: var(--space-2);
    }

