---
import { z } from 'astro:content'
import Section, { section } from './Section.astro'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof sections>

export const sections = tag.extend({
  section: section,
  items: z.array(section).nullish(),
})

const { as = 'main', items, ...rest } = sections.parse(Astro.props)
---

<Tag
  class="sections"
  {as}
  {...rest}
>
  <slot name="before" />
  {
    items?.map((item) => (
      <Section
        {...rest.section}
        {...item}
      />
    ))
  }
  <slot name="after" />
</Tag>

<style is:global>
  .sections {
    display: flex;
    flex-direction: column;
  }
</style>
