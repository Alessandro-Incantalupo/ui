---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils'
import Link, { link } from './Link.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof links>

export const links = buildProps({
  link,
  items: z.array(link).nullish(),
})

const { items, ...rest } = parseProps(links, Astro.props)
---

<Tag
  class="links"
  {...rest}
>
  {
    items?.map((item) => (
      <Link
        {...rest.link}
        {...item}
      />
    ))
  }
</Tag>

<style is:global>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
</style>
