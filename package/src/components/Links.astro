---
import { z } from 'astro:content'
import Link, { link } from './Link.astro'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof links>

export const links = tag.extend({
  link,
  items: z.array(link).nullish(),
})

const { items, ...rest } = links.parse(Astro.props)
---

<Tag
  class="links"
  {...rest}
>
  {
    items?.map((item) => (
      <Link
        {...rest.link}
        {...item}
      />
    ))
  }
</Tag>

<style is:global>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
</style>
