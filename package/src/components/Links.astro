---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Link, { linkSchema } from './Link.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof linksSchema>

export const linksSchema = buildProps({
  link: linkSchema,
  items: z.array(linkSchema).nullish(),
})

const { items, ...rest } = parseProps(linksSchema, Astro.props)
---

<Tag
  class="links"
  {...rest}
>
  {
    items?.map((item) => (
      <Link
        {...rest.link}
        {...item}
      />
    ))
  }
</Tag>

<style is:global>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
</style>
