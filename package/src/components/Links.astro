---
// TODO: convert naar zod
import type { ComponentProps } from 'astro/types'
import { endomorphic, type Endomorphic } from '../utils'
import Link from './Link.astro'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'links', ComponentProps<typeof Link>[]>,
    ComponentProps<typeof Tag> {}

const { links, ...rest } = endomorphic(Astro.props, 'links')
---

<Tag
  class="links"
  {...rest}
>
  {links?.map((link) => <Link {...link} />)}
</Tag>

<style is:global>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
</style>
