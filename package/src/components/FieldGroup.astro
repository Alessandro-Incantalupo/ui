---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Field, { fieldSchema } from './Field.astro';
import Component from './misc/Component.astro';

type Props = z.infer<typeof fieldGroupSchema>;

export const fieldGroupSchema = componentSchema({
  field: fieldSchema,
  fields: z.array(fieldSchema),
});

const { fields, ...rest } = fieldGroupSchema.parse(Astro.props);
---

<Component
  class:list={['fields']}
  {...rest}
>
  {
    fields?.map((item) => (
      <Field
        {...rest.field}
        {...item}
      />
    ))
  }
</Component>

<style is:global>
  .fields {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
</style>
