---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Field, { fieldSchema } from './Field.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof fieldGroupSchema>

export const fieldGroupSchema = buildProps({
  field: fieldSchema,
  fields: z.array(fieldSchema).nullish(),
})

const { fields, ...rest } = parseProps(fieldGroupSchema, Astro.props)
---

<Tag
  class:list={['fields']}
  {...rest}
>
  {
    fields?.map((item) => (
      <Field
        {...rest.field}
        {...item}
      />
    ))
  }
</Tag>

<style is:global>
  .fields {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
</style>
