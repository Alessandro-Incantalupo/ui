---
import tablerIcons from '@iconify-json/tabler/icons.json'
import { z } from 'zod'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof iconSchema>

export const iconSchema = componentSchema({
  name: z.string(),
})

const { as = 'i', name, ...rest } = iconSchema.parse(Astro.props)
---

{
  name && (
    <Tag
      class:list={['icon']}
      {as}
      {...rest}
    >
      {name && (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          set:html={(tablerIcons as any)?.icons[name as any]?.body}
        />
      )}
      <slot />
    </Tag>
  )
}

<style is:global>
  .icon {
    display: inline-flex;
    position: relative;
    justify-content: center;
    align-items: center;
    width: 1em;
    height: 1em;
    color: var(--hue11);
    font-size: var(--text-2);

    &.contrast {
      color: var(--hue12);
    }

    /* FIXME */
    &:is(.display > .icon) {
      width: 1.6em;
      height: 1.6em;
      color: var(--hue9);
    }

    /* FIXME */
    &:is(.button > .icon),
    &:is(.link > .icon) {
      color: inherit;
    }

    svg {
      position: absolute;
      width: 120%;
      height: 120%;
    }
  }
</style>
