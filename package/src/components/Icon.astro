---
import tablerIcons from '@iconify-json/tabler/icons.json'
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'
const tabler: any = tablerIcons

type Props<As extends HTMLTag = 'i'> = BuildProps<
  'icon',
  ComponentProps<typeof Tag<As>> & {
    icon?: keyof typeof tabler.icons
  }
>
const props = buildProps('icon', Astro)

const { as = 'i', icon, ...rest } = props
---

<Tag
  {as}
  {...rest}
>
  {
    icon && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        set:html={tabler?.icons[icon]?.body}
      />
    )
  }
  <slot />
</Tag>

<style is:global>
  .icon {
    display: inline-flex;
    position: relative;
    justify-content: center;
    align-items: center;
    width: 1em;
    height: 1em;
    color: var(--hue11);
    font-size: var(--text-2);

    &.contrast {
      color: var(--hue12);
    }

    /* FIXME */
    &:is(.display > .icon) {
      width: 1.6em;
      height: 1.6em;
      color: var(--hue9);
    }

    /* FIXME */
    &:is(.button > .icon),
    &:is(.link > .icon) {
      color: inherit;
    }

    svg {
      position: absolute;
      width: 120%;
      height: 120%;
    }
  }
</style>
