---
import tablerIcons from '@iconify-json/tabler/icons.json'
import { z } from 'astro:content'
import fs from 'fs'
import { icons } from '../schemas/icons'
import { endomorphic } from '../utils'
import Tag from './Tag.astro'
const tabler = tablerIcons

export const zIcon = z.object({
  icon: icons,
})

type Icon = z.infer<typeof zIcon>

// interface Props
//   extends Endomorphic<Props, 'icon', keyof typeof tabler.icons>,
//     ComponentProps<typeof Tag> {}

const keys = Object.keys(tabler.icons)
fs.writeFileSync(
  'src/TablerIcons.ts',
  `export default ${JSON.stringify(tabler.icons, null, 2)}`
)

const { as = 'i', icon, ...rest } = endomorphic(Astro.props, 'icon')
---

<Tag
  class="icon"
  {as}
  {...rest}
>
  {
    icon && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        set:html={tabler?.icons[icon]?.body}
      />
    )
  }
  <slot />
</Tag>

<style is:global>
  .icon {
    display: inline-flex;
    position: relative;
    justify-content: center;
    align-items: center;
    width: 1em;
    height: 1em;
    color: var(--hue11);
    font-size: var(--text-2);

    &.contrast {
      color: var(--hue12);
    }

    /* FIXME */
    &:is(.display > .icon) {
      width: 1.6em;
      height: 1.6em;
      color: var(--hue9);
    }

    /* FIXME */
    &:is(.button > .icon),
    &:is(.link > .icon) {
      color: inherit;
    }

    svg {
      position: absolute;
      width: 120%;
      height: 120%;
    }
  }
</style>
