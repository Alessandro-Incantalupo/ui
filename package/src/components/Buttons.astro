---
import type { ComponentProps } from 'astro/types'
import {
  endomorphic,
  getChildProps,
  sortByIndex,
  type Endomorphic,
} from '../utils'
import Button from './Button.astro'
import Tag from './Tag.astro'

// TODO index functionaliteit weghalen. Dit werkt op dit moment niet, heb er staat een issue van open. Later weer toevoegen.
interface Props
  extends Endomorphic<Props, 'buttons', ComponentProps<typeof Button>[]>,
    ComponentProps<typeof Tag>,
    Pick<ComponentProps<typeof Button>, 'button' | '_button'> {
  index?: number | null
}

const { buttons, ...rest } = endomorphic(Astro.props, 'buttons')
const child = getChildProps(rest)

// TODO is nu variant, niet look. Dit moet nog aangepast worden.
const look: {
  [key: number]: 'solid' | 'soft' | 'ghost'
} = {
  0: 'solid',
  1: 'soft',
  2: 'ghost',
}

const sorted = sortByIndex(buttons)
---

<Tag
  class="buttons"
  {...rest}
>
  {
    sorted?.map((button, i) => (
      <Button
        look={look[i]}
        {button}
        {...child}
      />
    ))
  }
  <slot />
</Tag>

<style is:global>
  .buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
</style>
