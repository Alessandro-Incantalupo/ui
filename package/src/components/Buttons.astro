---
import { z } from 'astro:content'
import { ectomorphic, endomorphic, getChildProps } from '../utils'
import Button, { zButton } from './Button.astro'
import Tag, { zTag } from './Tag.astro'

export const zButtons = endomorphic(
  'buttons',
  // @ts-ignore
  zTag.merge(zButton).extend({
    buttons: zButton,
  })
)

type Props = z.infer<typeof zButtons>

const { buttons, ...rest } = ectomorphic('buttons', zButtons, Astro.props)
const child = getChildProps(rest)
---

<Tag
  class="buttons"
  {...rest}
>
  {
    buttons?.map((button) => (
      <Button
        {button}
        {...child}
      />
    ))
  }
  <slot />
</Tag>

<style is:global>
  .buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
</style>
