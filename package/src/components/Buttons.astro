---
import { z } from 'astro:content'
import { morph } from '../utils'
import Button, { macro as buttonSchema } from './Button.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('buttons', {
  button: buttonSchema.shape.button,
  _button: buttonSchema.shape._button,
  buttons: z.array(buttonSchema).nullish(),
})

const { buttons, button, _button, color, ...rest } = meso(Astro.props)
---

<Tag
  class="buttons"
  {...rest}
>
  {
    buttons?.map((item, i) => (
      <Button
        variant={i == 1 ? 'soft' : undefined}
        {_button}
        {button}
        {...item}
      />
    ))
  }
  <slot />
</Tag>

<style is:global>
  .buttons {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
  }
</style>
