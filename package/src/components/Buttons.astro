---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Button, { button } from './Button.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof buttons>

export const buttons = buildProps({
  button,
  items: z.array(button).nullish(),
})

const { items, ...rest } = parseProps(buttons, Astro.props)
---

<Tag
  class="buttons"
  {...rest}
>
  {
    items?.map((item, i) => (
      <Button
        variant={i == 1 ? 'soft' : undefined}
        {...rest.button}
        {...item}
      />
    ))
  }
  <slot />
</Tag>

<style is:global>
  .buttons {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
  }
</style>
