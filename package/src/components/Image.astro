---
import { z } from 'zod'
import { unslugify } from '../utils'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof imageSchema>

export const imageSchema = buildProps({
  src: z.string().nullish(),
  alt: z.string().nullish(),
  loading: z.string().nullish(),
  mask: z.boolean().nullish(),
  sizes: z.string().nullish(),
  // sizes: {
  //   base: z.string().nullish(),
  //   sm: z.string().nullish(),
  //   md: z.string().nullish(),
  //   lg: z.string().nullish(),
  //   xl: z.string().nullish(),
  //   '2xl': z.string().nullish(),
  // },
  position: z.string().nullish(),
  frame: z.string().nullish(),
})

const {
  as = 'img',
  loading = 'lazy', // TODO apply to image
  mask,
  alt = '',
  sizes,
  src,
  position,
  frame,
  ...rest
} = parseProps(imageSchema, Astro.props)
