---
import { z } from 'astro:content'
import { endomorphic, unslugify } from '../utils'
import Tag, { zTag } from './Tag.astro'

export const zImage = zTag.extend({
  image: z.string().nullish(),
  loading: z.string().nullish(),
  mask: z.boolean().nullish(),
  alt: z.string().nullish(),
  sizes: {
    base: z.string().nullish(),
    sm: z.string().nullish(),
    md: z.string().nullish(),
    lg: z.string().nullish(),
    xl: z.string().nullish(),
    xxl: z.string().nullish(),
  },
  position: z.string().nullish(),
  frame: z.string().nullish(),
})

type Props = z.infer<typeof zImage>

const {
  as = 'img',
  loading = 'lazy',
  mask,
  alt = '',
  sizes = {
    base: '100vw',
  },
  position,
  frame,
  image,
  ...rest
} = endomorphic(Astro.props, 'image')

