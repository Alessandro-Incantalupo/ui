---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'
import Children from './Children.astro'

type Props<As extends HTMLTag = 'body'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'body', ...rest } = Astro.props
---

<Tag
  class:list={['full-body']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />

  <style is:global>
    .full-body {
      background: var(--full-color-background);
      padding: 0;
      height: 100%;
      min-height: 100vh;
      color: var(--hue11);
      font: var(--font-text);
    }
  </style>
</Tag>
