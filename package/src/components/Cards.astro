---
import type { ComponentProps } from 'astro/types';
import type { CollectionEntry, ContentCollectionKey } from 'astro:content';
import { getCollection, getEntries, z } from 'astro:content';
import { buildProps, parseProps } from '../utils';
import Card, { card } from './Card.astro';
import Tag from './Tag.astro';

type Props = z.infer<typeof cards>;

export const cards = buildProps({
  card,
  layout: z
    .enum(['carousel', 'grid', 'masonry', 'row', 'panels', 'bento'])
    .nullish(),
  items: z.string().or(z.array(z.string())).or(z.array(card)).nullish(),
  collection: z.string().nullish(),
  // TODO [collectionKey]: entrySlug <<< toevoegen
});

let { items, collection, ...props } = parseProps(cards, Astro.props);
const collectionEntries =
  typeof items === 'string' || typeof collection === 'string'
    ? ((await getCollection(items ?? (collection as any)))?.map(
        (entry: any) => ({
          collection: entry?.collection,
          slug: entry?.slug,
          ...entry?.data,
        })
      ) as CollectionEntry<ContentCollectionKey>['data'][] | undefined)
    : undefined;

const referenceEntries =
  collection && Array.isArray(items) && typeof items[0] === 'string'
    ? ((
        await getEntries(
          items.map((card) => ({ collection, slug: card, id: card }) as any)
        )
      ).map((entry: any) => ({
        collection: entry?.collection,
        slug: entry?.slug,
        id: entry?.id,
        ...entry?.data,
      })) as CollectionEntry<ContentCollectionKey>['data'][] | undefined)
    : undefined;

items = collectionEntries ?? (items as ComponentProps<typeof Card>[]);
items = referenceEntries ?? (items as ComponentProps<typeof Card>[]);

const { layout = 'grid', ...rest } = props;
---

<Tag
  class:list={['cards', layout]}
  {...rest}
>
  {
    items?.map((item: any) => (
      <Card
        {...rest.card}
        {...item}
      />
    ))
  }
</Tag>

<style is:global>
  .cards {
    position: relative;
    width: 100%;

    &.row {
      display: grid;
      row-gap: var(--space-4);

      @media (min-width: 1024px) {
        grid-auto-columns: 6fr 1fr;
        grid-auto-flow: column;

        > * {
          &:nth-child(2) {
            grid-column-start: 3;
          }
          &:nth-child(3) {
            grid-column-start: 5;
          }
          &:nth-child(4) {
            grid-column-start: 7;
          }
          &:nth-child(5) {
            grid-column-start: 9;
          }
          &:nth-child(6) {
            grid-column-start: 11;
          }
        }
      }
    }

    &.carousel {
      display: flex;
      position: relative;
      flex-direction: row;
      align-items: flex-start;
      gap: var(--space-3);
      margin: 0 calc(var(--gutter) * -1);
      padding: 0 var(--gutter) var(--space-3);
      width: 100vw;
      overflow-x: auto;
      scroll-behavior: smooth;
      scroll-snap-type: x mandatory;

      & > :not([hidden]) :not([hidden]) {
        /* TODO add multiple sizes */
        flex-grow: 0;
        flex-shrink: 0;
        width: calc(7 * var(--space-6));
        scroll-snap-align: center;
      }
    }

    &.grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      column-gap: var(--space-3);
      row-gap: var(--space-4);
    }

    &.masonry {
      column-gap: var(--space-3);
      column-count: 1;

      @media (min-width: 640px) {
        column-count: 2;
      }
      @media (min-width: 768px) {
        column-count: 3;
      }

      @media (min-width: 1024px) {
        column-count: 4;
      }

      & > .card + .card {
        margin-top: var(--space-4);
        margin-bottom: var(--space-4);
      }
    }

    &.panels {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
      gap: var(--space-3);
    }

    &.bento {
      display: grid;
      grid-template-columns: 1fr;

      @media (min-width: 1024px) {
        grid-template-columns: 1fr 1fr 1fr;

        & > *:nth-child(2n) {
          grid-column-start: span 2;
        }
      }
    }
  }
</style>
