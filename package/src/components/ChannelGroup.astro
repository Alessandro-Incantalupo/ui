---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Channel, { channelSchema } from './Channel.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof channelGroupSchema>

export const channelGroupSchema = buildProps({
  channel: channelSchema,
  channels: z.array(channelSchema).nullish(),
})

const { channels, ...rest } = parseProps(channelGroupSchema, Astro.props)
---

<Tag
  class="channel-group"
  compact
  {...rest}
>
  {
    channels?.map((item) => (
      <Channel
        {...rest.channel}
        {...item}
      />
    ))
  }
  <slot />
</Tag>

<style is:global>
  .channel-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
