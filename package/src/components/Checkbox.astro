---
// TODO dit component maken
import type { ComponentProps } from 'astro/types'
import { endomorphic, type Endomorphic } from '../utils'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'checkbox', string>,
    ComponentProps<typeof Tag> {}

const { as = 'div', checkbox, ...rest } = endomorphic(Astro.props, 'checkbox')
---

{
  checkbox && (
    <>
      <input
        id={checkbox}
        name={checkbox}
        type="checkbox"
        {...rest}
      />
    </>
  )
}

<style is:global>
  .checkbox {
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    color: var(--color);
    font: var(--font);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
