---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';

type Props = z.infer<typeof checkbox>;

export const checkbox = buildProps({
  name: z.string().nullable(),
});

const { name } = parseProps(checkbox, Astro.props);
---

{
  checkbox && (
    <input
      id={name}
      type="checkbox"
      {name}
    />
  )
}

<style is:global>
  .checkbox {
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    color: var(--color);
    font: var(--font);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
