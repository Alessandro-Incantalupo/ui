---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'

type Props = z.infer<typeof checkboxSchema>

export const checkboxSchema = buildProps({
  name: z.string().nullable(),
})

const { name } = parseProps(checkboxSchema, Astro.props)
---

{
  name && (
    <input
      id={name}
      type="checkbox"
      {name}
    />
  )
}

<style is:global>
  .checkbox {
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    color: var(--color);
    font-size: var(--text-2);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
