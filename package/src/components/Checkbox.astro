---
import { z } from 'astro:content'
import { macromorphic, mesomorphic } from '../utils'
import { zTag } from './Tag.astro'

export const zCheckbox = macromorphic(
  'checkbox',
  zTag.extend({
    checkbox: z.string().nullish(),
  })
)

type Props = z.infer<typeof zCheckbox>

const { checkbox } = mesomorphic('checkbox', zCheckbox, Astro.props)
---

{
  checkbox && (
    <>
      <input
        id={checkbox}
        name={checkbox}
        type="checkbox"
      />
    </>
  )
}

<style is:global>
  .checkbox {
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    color: var(--color);
    font: var(--font);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
