---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Parent from './misc/Parent.astro';

type Props = z.infer<typeof checkboxSchema>;

export const checkboxSchema = componentSchema({
  name: z.string().nullable(),
});

const {
  tag = 'input',
  name,
  type = 'checkbox',
  ...rest
} = checkboxSchema.parse(Astro.props);
---

<Parent
  if={name}
  {tag}
  type={type}
  class:list={['checkbox']}
  name={name}
  {...rest}
/>

<style is:global>
  .checkbox {
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    color: var(--color);
    font: var(--font);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
