---
import { buildProps, type BuildProps } from '../utils'

interface Base {
  checkbox: string | null
}

type Props = BuildProps<Base, 'checkbox', 'input'>
const props = buildProps(Astro, 'checkbox')

const { checkbox, ...rest } = props
---

{
  checkbox && (
    <input
      id={checkbox}
      name={checkbox}
      type="checkbox"
      {...rest}
    />
  )
}

<style is:global>
  .checkbox {
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    padding: var(--space-2);
    color: var(--color);
    font: var(--font);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
