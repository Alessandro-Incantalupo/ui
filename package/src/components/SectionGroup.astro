---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Section, { sectionSchema } from './Section.astro';
import Component from './misc/Component.astro';

type Props = z.infer<typeof sectionGroupSchema>;

export const sectionGroupSchema = componentSchema({
  section: sectionSchema,
  sections: z.array(sectionSchema),
});

const {
  tag = 'main',
  sections,
  ...rest
} = sectionGroupSchema.parse(Astro.props);
---

<Component
  class="sections"
  {tag}
  {...rest}
>
  <slot name="before" />
  {
    sections?.map((item) => (
      <Section
        {...rest.section}
        {...item}
      />
    ))
  }
  <slot name="after" />
</Component>

<style is:global>
  .sections {
    display: flex;
    flex-direction: column;
  }
</style>
