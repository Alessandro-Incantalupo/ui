---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Wrapper from './_Wrapper.astro'

type Props<As extends HTMLTag = 'a'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Wrapper> & {
    variant?: 'ghost' | 'soft' | 'solid'
    frame?: 'fill' | 'panel' | 'screen'
    ratio?: 'landscape' | 'portrait' | 'square' | number
  }

const {
  href,
  as = Astro.props.href ? 'a' : 'div',
  density = 'compact',
  variant,
  frame,
  ratio,
  ...rest
} = Astro.props
---

<Wrapper
  {as}
  {href}
  class:list={[
    'card',
    {
      [`frame-${frame}`]: frame,
      [`variant-${variant}`]: variant,
      [`ratio-${ratio}`]: ratio,
    },
  ]}
  {density}
  {...rest}
>
  <slot name="before" />
  <slot />
</Wrapper>

<style is:global lang="scss">
  .full.card {
    position: relative;
    overflow: hidden;
    text-decoration: none;

    /* &:is(a) */
    &[href] {
      cursor: pointer;

      > .full.image {
        transition: var(--full-transition);
      }

      &:hover {
        > .full.image {
          opacity: 0.85;
        }
      }
    }

    /* TODO add child paddings/margin */
    /* padding all side with negative padding/margin on image/media? */
    /* or only padding bottom and side apdding on children? */
    /* I prefer negative margin (inset) on media if this works */
    &.frame-panel {
      gap: 0;
      border: 1px solid var(--border);
      border-radius: var(--full-border-radius-3);
      background-color: var(--background);
      padding: var(--space-5);
      overflow: hidden;
      color: var(--foreground);

      // > .full:not(.full.image) {
      //   margin-right: var(--space-5);
      //   margin-left: var(--space-5);

      //   &:first-child {
      //     margin-top: var(--space-5);
      //   }

      //   &:last-child {
      //     margin-bottom: var(--space-5);
      //   }
      // }
    }

    /* &.subtle,
      &.surface {
        background-color: var(--2);

        &:is(a) {
          border-color: var(--7);
          background: var(--2);

          &:hover {
            border-color: var(--8);
            background: var(--3);
          }

          &:active {
            background: var(--4);
          }
        }

        .full.image {
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
      }

      &.solid {
        border-color: var(--9);
        background: var(--9);

        * {
          color: var(--fg);
        }

        &:is(a):hover {
          background: var(--10);
        }

        .full.image {
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
      }
    } */

    &.ratio-landscape {
      aspect-ratio: 4/3;
    }

    &.ratio-square {
      aspect-ratio: 1/1;
    }

    &.ratio-portrait {
      aspect-ratio: 3/4;
    }
  }
</style>
