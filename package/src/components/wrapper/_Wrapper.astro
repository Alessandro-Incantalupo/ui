---
import type { ComponentProps } from 'astro/types'
import Tag from '../_Tag.astro'

interface Props extends ComponentProps<typeof Tag> {
  x?: 'start' | 'center' | 'end' | 'between' | 'stretch'
  y?: 'start' | 'center' | 'end' | 'between' | 'stretch'
}

const { direction, x, y, layout, ...rest } = Astro.props
---

<Tag
  class:list={[
    'wrapper',
    {
      [`direction-${direction}`]: direction,
      [`x-${x}`]: x,
      [`y-${y}`]: y,
    },
  ]}
  {...rest}
>
  <slot name="before" />
  <slot />
</Tag>

<style is:global lang="scss">
  .full.wrapper.direction-column {
    display: flex;
    flex-direction: column;

    &.x-start {
      align-items: flex-start;
    }

    &.x-center {
      align-items: center;
    }

    &.x-end {
      align-items: flex-end;
    }

    &.x-stretch {
      align-items: stretch;
    }

    &.y-start {
      justify-content: flex-start;
    }

    &.y-center {
      justify-content: center;
    }

    &.y-end {
      justify-content: flex-end;
    }

    &.y-spread {
      justify-content: space-between;
    }

    &.y-fill {
      justify-content: stretch;
    }
  }

  .full.wrapper.direction-row {
    display: flex;
    flex-direction: row;

    &.x-start {
      justify-content: flex-start;
    }

    &.x-center {
      justify-content: center;
    }

    &.x-end {
      justify-content: flex-end;
    }

    &.x-between {
      justify-content: space-between;
    }

    &.x-stretch {
      justify-content: stretch;
    }

    &.y-start {
      align-items: flex-start;
    }

    &.y-center {
      align-items: center;
    }

    &.y-end {
      align-items: flex-end;
    }

    &.y-between {
      align-items: space-between;
    }

    &.y-stretch {
      align-items: stretch;
    }
  }
</style>
