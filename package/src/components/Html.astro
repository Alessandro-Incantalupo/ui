---
import type { HTMLString } from 'astro/runtime/server/escape.js'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

interface Base {
  html?: HTMLString | null
}

type Props = BuildProps<Base, 'html', 'div'>
const props = buildProps(Astro, 'html')

const { html, ...rest } = props
---

<Tag {...rest}>
  <Fragment set:html={html} />
  <slot />
</Tag>

<style is:global>
  .html {
    display: flex;
    row-gap: var(--space-3);
    flex-direction: column;
    width: 100%;
    max-width: max(calc(var(--space-6) * 3), 500px);
  }
</style>
