---
import { SEO } from 'astro-seo'
import { endomorphic } from '../utils'

interface Props {
  title?: string | null
  description?: string | null
  image?: string | null
}

// type Props = Endomorphic<Base, 'head'>
const props = endomorphic(Astro.props, 'head')

const { title, description, image } = props
---

<head>
  <meta charset="UTF-8" />
  <meta
    content="width=device-width, initial-scale=1, viewport-fit=cover"
    name="viewport"
  />
  <meta
    name="generator"
    content={Astro.generator}
  />

  <SEO
    title={title || undefined}
    description={description || undefined}
    openGraph={title && image
      ? {
          basic: {
            title: title,
            type: 'website',
            image: image,
          },
          image: {
            url: image,
            alt: title,
          },
        }
      : undefined}
  />

  <!-- Favicon -->
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/favicon-16x16.png"
  />
  <link
    rel="manifest"
    href="/site.webmanifest"
  />
  <meta
    name="msapplication-TileColor"
    content="#ffc40d"
  />
  <meta
    name="theme-color"
    content="#ffffff"
  />

  <!-- Slot -->
  <slot />
</head>
