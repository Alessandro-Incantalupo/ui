---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof headerSchema>;

export const headerSchema = componentSchema({});

const { tag = 'nav', ...rest } = headerSchema.parse(Astro.props);
---

<Component
  class:list={['nav']}
  {tag}
  {...rest}
/>

<style is:global>
  .nav {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-4);
    margin-left: auto;
    width: max-content;
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
