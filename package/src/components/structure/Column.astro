---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Component from '../_Component.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  scheme?: 'light' | 'dark'
  color?: 'base' | 'brand'
  frame?: 'fill' | 'panel' | 'card' | 'viewport' | 'none'
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl'
  compact?: boolean
  variant?: 'ghost' | 'subtle' | 'outline' | 'soft' | 'solid' | 'surface'
  align?: 'start' | 'center' | 'end'
}

const { align = 'start', ...rest } = Astro.props
---

<Component
  class:list={['column']}
  {align}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../css/utils.scss';
  @import '../../css/props/structure.scss';

  @include component('column') {
    @include space-y;

    display: flex;
    position: relative;
    flex-direction: column;
  }
</style>
