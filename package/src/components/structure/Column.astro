---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Component from '../Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  color?: 'base' | 'brand'
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  compact?: boolean
  align?: 'start' | 'center' | 'end'
  space?: 'none' | 'auto'
}

const { space = 'auto', align = 'start', ...rest } = Astro.props
---

<Component
  class:list={['column']}
  {align}
  {space}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('column') {
    display: flex;
    position: relative;
    flex-direction: column;

    &.align-start {
      align-items: flex-start;
      text-align: left;
    }

    &.align-center {
      align-items: center;
      text-align: center;

      & > *:not(.align-center) > *:not(.align-center) {
        text-align: left;
      }
    }

    &.align-end {
      align-items: flex-end;
    }

    &.justify-center {
      justify-content: center;
    }

    &.space-auto {
      > * + * {
        margin-top: var(--space-auto);
      }

      > * + .carousel {
        margin-top: 0;
        padding-top: var(--space-auto);
      }
    }
  }
</style>
