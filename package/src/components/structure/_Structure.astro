---
import type { ComponentProps } from 'astro/types'
import Tag from '../_Tag.astro'
import Background from './Background.astro'
import Bento from './Bento.astro'
import Box from './Box.astro'
import Card from './Card.astro'
import Carousel from './Carousel.astro'
import Container from './Container.astro'
import Grid from './Grid.astro'
import Group from './Group.astro'
import Header from './Header.astro'
import Inset from './Inset.astro'
import Masonry from './Masonry.astro'
import Panel from './Panel.astro'
import Section from './Section.astro'
import Split from './Split.astro'
import Spread from './Spread.astro'
import Stack from './Stack.astro'
import Wrapper from './Wrapper.astro'

type Props<
  BackgroundType extends boolean,
  BentoType extends boolean,
  BoxType extends boolean,
  CardType extends boolean,
  CarouselType extends boolean,
  ContainerType extends boolean,
  GridType extends boolean,
  GroupType extends boolean,
  HeaderType extends boolean,
  InsetType extends boolean,
  MasonryType extends boolean,
  PanelType extends boolean,
  SectionType extends boolean,
  SplitType extends boolean,
  SpreadType extends boolean,
  StackType extends boolean,
  WrapperType extends boolean,
> = ComponentProps<typeof Tag> & {
  background?: BackgroundType
  bento?: BentoType
  box?: BoxType
  card?: CardType
  carousel?: CarouselType
  container?: ContainerType
  grid?: GridType
  group?: GroupType
  header?: HeaderType
  inset?: InsetType
  masonry?: MasonryType
  panel?: PanelType
  section?: SectionType
  split?: SplitType
  spread?: SpreadType
  stack?: StackType
  wrapper?: WrapperType
} & (BackgroundType extends true ? ComponentProps<typeof Background> : {}) &
  (BentoType extends true ? ComponentProps<typeof Bento> : {}) &
  (BoxType extends true ? ComponentProps<typeof Box> : {}) &
  (CardType extends true ? ComponentProps<typeof Card> : {}) &
  (CarouselType extends true ? ComponentProps<typeof Carousel> : {}) &
  (ContainerType extends true ? ComponentProps<typeof Container> : {}) &
  (GridType extends true ? ComponentProps<typeof Grid> : {}) &
  (GroupType extends true ? ComponentProps<typeof Group> : {}) &
  (HeaderType extends true ? ComponentProps<typeof Header> : {}) &
  (InsetType extends true ? ComponentProps<typeof Inset> : {}) &
  (MasonryType extends true ? ComponentProps<typeof Masonry> : {}) &
  (PanelType extends true ? ComponentProps<typeof Panel> : {}) &
  (SectionType extends true ? ComponentProps<typeof Section> : {}) &
  (SplitType extends true ? ComponentProps<typeof Split> : {}) &
  (SpreadType extends true ? ComponentProps<typeof Spread> : {}) &
  (StackType extends true ? ComponentProps<typeof Stack> : {}) &
  (WrapperType extends true ? ComponentProps<typeof Wrapper> : {})

const { ...rest } = Astro.props
---

<Tag {...rest}>
  <slot />
</Tag>
