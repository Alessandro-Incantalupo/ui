---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof groupSchema>;

export const groupSchema = componentSchema({});

const { ...rest } = groupSchema.parse(Astro.props);
---

<Component
  class:list={['group']}
  {...rest}
/>

<style is:global>
  .group {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
  }
</style>
