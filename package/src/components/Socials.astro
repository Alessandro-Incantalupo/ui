---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Social from './Socials.astro'

interface Base {
  socials?: ComponentProps<typeof Social>[]
  never?: never // FIXME see buildProps.ts for explanation
}

type Props = BuildProps<Base, 'socials'>
const props = buildProps(Astro, 'socials')

const { socials } = props
---

{socials?.map((social) => <Social {...social} />)}
