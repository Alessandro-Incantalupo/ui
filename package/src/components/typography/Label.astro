---
// @Jeremy Dit component moet verplaatst worden naar de Typography map
// Kijk goed naar de overige components in deze map en hoe deze zijn opgebouwd!
// Als het gelukt is laat mij het dan checken. Ondertussen kun je bezig met de docs pagina voor label

import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Children from '../_Children.astro'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'label'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag> &
  Childmorphic<{
    text: Props<As> | string
  }> & {
    variant?: 'lowered' | 'accent'
  }

const { as = 'label', variant, ...rest } = Astro.props
---

<Tag
  class:list={[
    'full-label',
    {
      [`full-variant-${variant}`]: variant,
    },
  ]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-label {
    display: flex;
    flex-direction: column;
    color: var(--color-foreground);
    font-weight: var(--font-weight);
    font-size: var(--text-element);
    font-family: var(--font-family);
  }
</style>
