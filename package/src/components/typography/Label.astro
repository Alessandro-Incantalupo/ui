---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Layout from '../layout/_Layout.astro'

type Props<As extends HTMLTag = 'label'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Layout>

const { as = 'label', variant, ...rest } = Astro.props
---

<Layout
  class:list={['full-label']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Layout>

<style is:global lang="scss">
  .full-label {
    display: flex;
    flex-direction: column;
    color: var(--foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-element);
    font-family: var(--full-font-family);
    text-align: left;
  }
</style>
