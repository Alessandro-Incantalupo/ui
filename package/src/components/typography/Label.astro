---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Typography from './_Typography.astro'

type Props<As extends HTMLTag = 'label'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Typography>

const { as = 'label', text, html, ...rest } = Astro.props
---

<Typography
  class:list={['label']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Typography>

<style is:global lang="scss">
  .full.label {
    display: flex;
    flex-direction: column;
    color: var(--foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-element);
    font-family: var(--full-font-family);
    text-align: left;
  }
</style>
