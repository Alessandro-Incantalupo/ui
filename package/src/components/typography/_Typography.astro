---
import type { ComponentProps } from 'astro/types'
import Children from '../_Children.astro'
import Tag from '../_Tag.astro'

interface Props
  extends ComponentProps<typeof Tag>,
    ComponentProps<typeof Children> {
  html?: string
  text?: string
  variant?: 'base' | 'muted' | 'accent'
}

const { ...rest } = Astro.props
---

<Tag
  class:list={'typography'}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>
