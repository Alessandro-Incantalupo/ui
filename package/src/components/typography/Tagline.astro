---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Layout from '../layout/_Layout.astro'

type Props<As extends HTMLTag = 'label'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Layout>

const { as = 'span', variant, ...rest } = Astro.props
---

<Layout
  class:list={['full-tagline']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Layout>

<style is:global lang="scss">
  .full-tagline {
    color: var(--color-foreground);
    font-size: var(--text-element);
  }
</style>
