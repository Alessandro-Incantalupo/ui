---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'p'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    variant?: 'primary' | 'secondary' | 'subtle' | 'accent'
  }

const { as = 'p', variant, ...rest } = Astro.props
---

<Tag
  class:list={['full-tagline', variant]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-tagline {
    font: var(--font-tagline);
    font: var(--text-1);
    color: var(--full-foreground);
    line-height: 1.25;
  }
</style>
