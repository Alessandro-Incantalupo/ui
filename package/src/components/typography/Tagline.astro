---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Typography from './_Typography.astro'

type Props<As extends HTMLTag = 'span'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Typography>

const { as = 'span', variant, ...rest } = Astro.props
---

<Typography
  class:list={['full-tagline']}
  {as}
  {variant}
  {...rest}
>
  <slot name="before" />
  <slot />
</Typography>

<style is:global lang="scss">
  .full-tagline {
    max-width: calc(var(--space-element-3) * 36);
    color: var(--foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-element);
    line-height: 1.25;
    font-family: var(--full-font-family);

    .full-tag + & {
      --my-spacer: var(--space-5);
    }

    .full-heading + &,
    .full-paragraph + & {
      --my-spacer: var(--space-3);
    }
  }
</style>
