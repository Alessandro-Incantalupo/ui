---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import Children from '../utilities/Children.astro'
import Tag from '../utilities/Tag.astro'

type Props = z.infer<typeof textSchema>

export const textSchema = componentSchema({})

const { as = 'p', ...rest } = textSchema.parse(Astro.props)
---

<Tag
  class:list={['text']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .text {
    color: var(--hue11);
    font: var(--font);

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
