---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'p'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    variant?: 'lowered' | 'accent'
  }

const { as = 'p', variant = 'lowered', ...rest } = Astro.props
---

<Tag
  class:list={[
    'full-paragraph',
    {
      [`full-variant-${variant}`]: variant,
    },
  ]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-text,
  .full-paragraph {
    color: var(--full-color-foreground);
    font: var(--full-text-fontSize);
    line-height: 1.625;
  }

  :root {
    --full-text-1: 0.75rem; /* 12px */
    --full-text-2: 0.875rem; /* 14px */
    --full-text-3: 1rem; /* 16px */
    --full-text-4: 1.125rem; /* 18px */
    --full-text-5: 1.25rem; /* 20px */
    --full-text-6: 1.5rem; /* 24px */
    --full-text-7: 1.875rem; /* 30px */
    --full-text-8: 2.25rem; /* 36px */
    --full-text-9: 3rem; /* 48px */
    --full-text-10: 3.75rem; /* 60px */
    --full-text-11: 4.5rem; /* 72px */

    --full-text-compact-sm: var(--full-text-1);
    --full-text-compact-md: var(--full-text-2);
    --full-text-compact-lg: var(--full-text-3);
    --full-text-2-sm: var(--full-text-2);
    --full-text-2-md: var(--full-text-3);
    --full-text-2-lg: var(--full-text-4);

    --full-text-1-compact-sm: var(--full-text-1);
    --full-text-1-compact-md: var(--full-text-2);
    --full-text-1-compact-lg: var(--full-text-3);
    --full-text-1-base-sm: var(--full-text-2);
    --full-text-1-base-md: var(--full-text-2);
    --full-text-1-base-lg: var(--full-text-4);

    --full-text-3-compact-sm: var(--full-text-2);
    --full-text-3-compact-md: var(--full-text-3);
    --full-text-3-compact-lg: var(--full-text-4);
    --full-text-3-base-sm: var(--full-text-6);
    --full-text-3-base-md: var(--full-text-7);
    --full-text-3-base-lg: var(--full-text-8);

    @media (min-width: 1024px) {
      --full-text-fontSize-compact-sm: var(--full-text-2);
      --full-text-fontSize-compact-md: var(--full-text-3);
      --full-text-fontSize-compact-lg: var(--full-text-4);
      --full-text-fontSize-base-sm: var(--full-text-3);
      --full-text-fontSize-base-md: var(--full-text-4);
      --full-text-fontSize-base-lg: var(--full-text-5);

      --full-text-1-compact-sm: var(--full-text-1);
      --full-text-1-compact-md: var(--full-text-2);
      --full-text-1-compact-lg: var(--full-text-3);
      --full-text-1-base-sm: var(--full-text-2);
      --full-text-1-base-md: var(--full-text-3);
      --full-text-1-base-lg: var(--full-text-4);

      --full-heading-fontSize-compact-sm: var(--full-text-2);
      --full-heading-fontSize-compact-md: var(--full-text-4);
      --full-heading-fontSize-compact-lg: var(--full-text-4);
      --full-heading-fontSize-base-sm: var(--full-text-6);
      --full-heading-fontSize-base-md: var(--full-text-8);
      --full-heading-fontSize-base-lg: var(--full-text-8);
    }
  }

  .full-size-sm,
  .full-size-xs {
    --full-text-fontSize-base: var(--full-text-fontSize-base-sm);
    --full-text-fontSize-compact: var(--full-text-fontSize-compact-sm);
  }

  .full-size-xs {
    --full-text-fontSize-base: var(--full-text-fontSize-base-xs);
  }

  .full-size-md {
    --full-text-fontSize-base: var(--full-text-fontSize-base-md);
    --full-text-fontSize-compact: var(--full-text-fontSize-compact-md);
  }

  .full-size-lg,
  .full-size-xl,
  .full-size-2xl {
    --full-text-fontSize-base: var(--full-text-fontSize-base-lg);
    --full-text-fontSize-compact: var(--full-text-fontSize-compact-lg);
  }

  .full-size-xl {
    --full-text-fontSize-base: var(--full-text-fontSize-base-xl);
  }

  .full-size-2xl {
    --full-text-fontSize-base: var(--full-text-fontSize-base-2xl);
  }

  .full-density-base {
    --full-text-fontSize: var(--full-text-fontSize-2);
  }

  .full-density-compact {
    --full-text-fontSize: var(--full-text-fontSize-compact);
  }
</style>
