---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Component from '../_Component.astro'

type Props<As extends HTMLTag = 'a'> = Polymorphic<{ as: As }> & {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  color?: 'base' | 'brand'
  variant?: 'auto' | 'always' | 'hover' | 'none'
  contrast?: boolean
  html?: string
  text?: string
}

const { as = 'a', variant, ...rest } = Astro.props
---

<Component
  class:list={['link']}
  {as}
  {variant}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('link') {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
    border: none;
    background: none;
    color: var(--text);
    font-weight: var(--font-weight);
    font-size: var(--text-body);
    font-family: var(--font-family);
    text-decoration: none;
    text-decoration-color: var(--border);
    text-decoration: underline;
    white-space: nowrap;
  }

  &.variant-auto {
    p & {
      text-decoration: underline;
    }
  }

  &.variant-always {
    text-decoration: underline;
  }

  &.variant-hover {
    &:hover {
      text-decoration: underline;
    }
  }

  &.variant-none {
    text-decoration: none;
  }
</style>
