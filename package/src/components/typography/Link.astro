---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Tag from '../_Tag.astro'
import type Text from './_Typography.astro'

type Props<As extends HTMLTag = 'a'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Text> &
  Childmorphic<{
    text: ComponentProps<typeof Text> | string
  }>

const { as = 'a', ...rest } = Astro.props
---

<Tag
  class:list={['full-link']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-link {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
    text-decoration: none;
    text-decoration-color: var(--border);
    white-space: nowrap;

    &:hover {
      text-decoration: underline;
    }
  }
</style>
