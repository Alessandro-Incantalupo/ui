---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'summary'> = ComponentProps<typeof Tag<As>>

const { as = 'summary', ...rest } = Astro.props
---

<Tag
  class:list={['full-summary']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .full-summary {
    cursor: pointer;
    color: var(--color-11);
    font-size: var(--text-1);
  }
</style>
