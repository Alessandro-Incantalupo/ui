---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Link from './Link.astro'
import Typography from './_Typography.astro'

type Props<As extends HTMLTag = 'li'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Typography> &
  Childmorphic<{
    link: ComponentProps<typeof Link>
  }>

const { as = 'li', ...rest } = Astro.props
---

<Typography
  class:list={['full-item']}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot />
</Typography>

<style is:global lang="scss">
  .full-item {
    // display: flex; // breaks list bullets
    align-items: center;
    gap: 0.5em;
    color: var(--color-foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text);
    line-height: 1.625;
    font-family: var(--full-font-family);
  }
</style>
