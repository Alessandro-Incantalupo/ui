---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Typography from './_Typography.astro'

type Props<As extends HTMLTag = 'h2'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Typography> & {
    level: 1 | 2 | 3 | 4 | 5 | 6
  }

const {
  level = 2,
  as = `h${Astro.props.level}`,
  density = Astro.props.level > 3 ? 'compact' : undefined,
  ...rest
} = Astro.props
---

<Typography
  class:list={['heading']}
  {as}
  {...rest as any}
>
  <slot name="before" />
  <slot />
</Typography>

<style is:global lang="scss">
  .full.heading {
    max-width: calc(var(--element-3) * 36);
    color: var(--foreground);
    font-weight: var(--full-heading-font-weight);
    line-height: 1.1;
    font-family: var(--full-heading-font-family);
    letter-spacing: -0.025em;

    &.level-1,
    &.level-4 {
      font-size: var(--text-5);
    }

    &,
    &.level-2,
    &.level-5 {
      font-size: var(--text-4);
    }

    &.level-3,
    &.level-6 {
      font-size: var(--text-3);
    }
  }
</style>
