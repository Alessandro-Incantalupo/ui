---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Component from '../_Component.astro'

type Props<As extends HTMLTag = 'h2'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Component> & {
    scheme?: 'light' | 'dark'
    color?: 'base' | 'brand' | string
    size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl' | '6xl'
    html?: string
    text?: string
    contrast?: boolean
    variant?: 'base' | 'muted' | 'accent'
  }

const { as = 'h2', contrast = true, ...rest } = Astro.props
---

<Component
  class:list={['heading']}
  {as}
  {contrast}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('heading') {
    margin: 0;
    max-width: calc(var(--element-3) * 36);
    scroll-margin: var(--space-4);
    color: var(--foreground);
    font-weight: var(--heading-font-weight);
    font-size: var(--text-heading);
    line-height: 1.1;
    font-family: var(--heading-font-family);
    letter-spacing: -0.025em;
    text-decoration: none;

    &.contrast {
      color: var(--foreground-contrast);
    }
  }
</style>
