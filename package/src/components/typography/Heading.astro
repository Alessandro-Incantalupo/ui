---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import Children from '../utilities/Children.astro'
import Tag from '../utilities/Tag.astro'

type Props = z.infer<typeof headingSchema>

export const headingSchema = componentSchema({})

const { as = 'h2', contrast = true, ...rest } = headingSchema.parse(Astro.props)
---

<Tag
  class:list={['full-heading']}
  {as}
  {contrast}
  {...rest}
>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .full-heading {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
