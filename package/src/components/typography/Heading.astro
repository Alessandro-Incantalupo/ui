---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'h2'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    color?: 'base' | 'lowered'
    as: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
    level: 1 | 2 | 3 | 4 | 5 | 6
  }

const { as = 'h2', variant, ...rest } = Astro.props
---

<Tag
  class:list={[
    'full-heading',
    {
      [`full-color-${variant}`]: variant,
    },
  ]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-heading {
    color: var(--color-foreground);
    font-weight: var(--full-heading-font-weight);
    font-weight: 700;
    font-size: var(--text-heading);
    line-height: 1.1;
    font-family: var(--full-heading-font-family);
    letter-spacing: -0.025em;
  }
</style>
