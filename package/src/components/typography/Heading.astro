---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'h2'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    variant?: 'primary' | 'secondary' | 'subtle' | 'accent'
  }

const { as = 'h2', variant, ...rest } = Astro.props
---

<Tag
  class:list={['full-heading', variant]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-heading {
    color: var(--full-foreground);
    font: var(--text-3);
    font-weight: 700;
    letter-spacing: -0.025em;
  }
</style>
