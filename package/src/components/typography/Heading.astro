---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'h2'> = Polymorphic<{
  as: As
  theme?: 'light' | 'dark' | string
  size?: 'sm' | 'md' | 'lg'
  density?: 'base' | 'compact' | string
  html?: string
  text?: string
  level: 1 | 2 | 3 | 4 | 5 | 6
}>

const {
  level = 2,
  as = `h${Astro.props.level}`,
  density = Astro.props.level > 3 ? 'compact' : undefined,
  ...rest
} = Astro.props
---

<Tag
  class:list={['heading']}
  {as}
  {density}
  {level}
  {...rest}
>
  <slot name="before" />
  <slot />
</Tag>

<style is:global lang="scss">
  .full.heading {
    max-width: calc(var(--element-3) * 36);
    color: var(--foreground);
    font-weight: var(--heading-font-weight);
    line-height: 1.1;
    font-family: var(--heading-font-family);
    letter-spacing: -0.025em;

    &.level-1,
    &.level-4 {
      font-size: var(--text-5);
    }

    &,
    &.level-2,
    &.level-5 {
      font-size: var(--text-4);
    }

    &.level-3,
    &.level-6 {
      font-size: var(--text-3);
    }
  }
</style>
