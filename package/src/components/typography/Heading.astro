---
import type { ComponentProps } from 'astro/types'
import Test from '../base/Test.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' = 'h2'> =
  ComponentProps<typeof Tag<As>> & ComponentProps<typeof Test<'text' | 'html'>>

const { as = 'h2', ...rest } = Astro.props
---

<Tag
  class:list={['full-heading']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Test {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-heading {
    color: var(--color-foreground);
    font-weight: var(--full-heading-font-weight);
    font-weight: 700;
    font-size: var(--text-heading);
    line-height: 1.1;
    font-family: var(--full-heading-font-family);
    letter-spacing: -0.025em;
  }
</style>
