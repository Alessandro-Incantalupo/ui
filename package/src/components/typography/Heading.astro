---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'h2'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'h2', ...rest } = Astro.props
---

<Tag
  class:list={['full-heading']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-heading {
    color: var(--foreground);
    line-height: 1.25;
    font: var(--font-heading);
    font-size: var(--text-3);

    &.subtle {
      color: var(--foreground-subtle);
    }
  }
</style>
