---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag> = Polymorphic<{ as: As }> & {
  scheme?: 'light' | 'dark'
  color?: 'base' | 'brand' | string
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl'
  contrast?: boolean
  html?: string
  text?: string
}

const { contrast = true, ...rest } = Astro.props
---

<Tag
  class:list={['heading']}
  {contrast}
  {...rest}
>
  <slot />
</Tag>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('heading') {
    margin: 0;
    max-width: calc(var(--element-3) * 36);
    scroll-margin: var(--space-4);
    color: var(--base-text);
    font-weight: var(--heading-font-weight);
    font-size: var(--heading);
    line-height: 1.1;
    font-family: var(--heading-font-family);
    letter-spacing: -0.025em;
    text-decoration: none;

    &.contrast {
      color: var(--base-text-contrast);
    }
  }
</style>
