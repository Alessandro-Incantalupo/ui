---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Link from './Link.astro'
import type Text from './Text.astro'
import Typography from './_Typography.astro'

type Props<As extends HTMLTag = 'h2'> = Polymorphic<{ as: As }> &
  Omit<ComponentProps<typeof Typography>, 'size'> &
  Childmorphic<{
    text: ComponentProps<typeof Text> | string
    link: ComponentProps<typeof Link>
  }> & {
    size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl'
  }

const { as = 'a', size, ...rest } = Astro.props
---

<!-- FIXME: size type -->
<Typography
  class:list={['full-heading']}
  {as}
  size={size as any}
  {...rest as any}
>
  <slot name="before" />
  <slot />
</Typography>

<style is:global lang="scss">
  .full-heading {
    font-weight: var(--full-heading-font-weight);
    font-size: var(--text-heading);
    line-height: 1.1;
    font-family: var(--full-heading-font-family);
    letter-spacing: -0.025em;
  }
</style>
