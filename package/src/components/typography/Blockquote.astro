---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'blockquote'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'blockquote', ...rest } = Astro.props
---

<Tag
  class:list={['full-blockquote']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-blockquote {
    border-left: 6px solid var(--border);
    border-color: var(--border);
    padding-left: var(--full-space-3);
    color: var(--color-foreground);

    &.subtle {
      color: var(--color-foreground-subtle);
    }
  }
</style>
