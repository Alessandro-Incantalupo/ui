---
import type { ComponentProps } from 'astro/types'
import Test from '../base/Test.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends 'p' | 'span' | 'div' = 'p'> = ComponentProps<
  typeof Tag<As>
> &
  ComponentProps<typeof Test<'text' | 'html' | 'Link'>>

const { as = 'p', color, ...rest } = Astro.props
---

<Tag
  class:list={['full-paragraph']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Test {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-text {
    color: var(--color-foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text);
    line-height: 1.625;
    font-family: var(--full-font-family);
  }
</style>
