---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'p'> = Polymorphic<{ as: As }> & {
  scheme?: 'light' | 'dark'
  color?: 'base' | 'brand' | string
  size?: 'sm' | 'md' | 'lg' | 'xl'
  contrast?: boolean
  html?: string
  text?: string
}

const { as = 'p', ...rest } = Astro.props
---

<Tag
  class:list={['paragraph']}
  {...rest}
>
  <slot />
</Tag>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('paragraph') {
    margin: 0;
    max-width: calc(var(--element-3) * 36);
    color: var(--base-text);
    font-weight: var(--font-weight);
    font-size: var(--text);
    line-height: 1.625;
    font-family: var(--font-family);

    &.contrast {
      color: var(--base-text-contrast);
    }
  }
</style>
