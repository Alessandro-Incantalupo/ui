---
import type { HTMLAttributes } from 'astro/types'

type Props = Omit<HTMLAttributes<'option'>, 'slot'> & {
  text: string
}
const { text, ...rest } = Astro.props
---

<option
  class:list={['full-option']}
  {...rest}
>
  {text}
  <slot />
</option>

<style>
  .full-option {
    color: var(--color-foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-element);
    line-height: 1;
    font-family: var(--full-font-family);
  }
</style>
