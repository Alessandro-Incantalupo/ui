---
import type { ComponentProps } from 'astro/types'
import { Image } from 'fulldev-ui'

type Props = Omit<ComponentProps<typeof Image>, 'position' | 'frame'> & {
  radius?: 'none' | 'auto' | 'full'
  variant?: 'subtle' | 'outline' | 'ghost'
}

const { radius = 'auto', variant = 'ghost', ...rest } = Astro.props
---

<Image
  class:list={'avatar'}
  {variant}
  {radius}
  {...rest}
/>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('avatar') {
    display: block;
    border: 1px solid var(--border);
    border-radius: var(--radius-3);
    // width: calc(var(--text-1) + 2 * var(--space-4)) !important;
    // height: calc(var(--text-1) + 2 * var(--space-4)) !important;
    width: calc(4.4 * var(--space-3)) !important;
    height: calc(4.4 * var(--space-3)) !important;
    object-fit: cover;

    &.radius-none {
      border-radius: 0;
    }

    &.radius-auto {
      border-radius: var(--radius-1);
    }

    &.radius-full {
      border-radius: 9999px;
    }
  }
</style>
