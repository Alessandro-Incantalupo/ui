---
import type { HTMLAttributes } from 'astro/types'
import Label from '../../typography/Label.astro'
import InputField from './InputField.astro'

type Props = HTMLAttributes<'input'> & {
  name?: string
  label?: string
  variant?: 'outline'
}

const { name, label, variant = 'outline', ...rest } = Astro.props
---

<Label
  text={label}
  for={name}
/>
<InputField
  name={name}
  variant={variant}
  class:list={['input']}
/>
