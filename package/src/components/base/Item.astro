---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../_Tag.astro'
import Children from '../utility/Children.astro'

type Props<As extends HTMLTag = 'li'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {}

const { as = 'li', ...rest } = Astro.props
---

<Tag
  class:list={['full-item']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-item {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--color-12);
    font-size: var(--text);
    line-height: 1.625;
  }
</style>
