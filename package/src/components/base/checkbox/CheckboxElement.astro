---
import type { HTMLAttributes } from 'astro/types'
import Root from '../../Root.astro'

type Props = Omit<HTMLAttributes<'input'>, 'type'> & {
  color?: 'base' | 'brand'
}

const { name, ...rest } = Astro.props
---

<Component
  class:list={['checkbox-element']}
  as="input"
  type="checkbox"
  id={name}
  if={name}
  {name}
  {...rest}
/>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('checkbox-element') {
    display: block;
    width: var(--text-1);
    height: var(--text-1);
    accent-color: var(--color-9);
  }
</style>
