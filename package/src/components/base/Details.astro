---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'details'> = ComponentProps<typeof Tag<As>> & {
  summary?: string
}

const { as = 'details', summary = 'Details', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-details']}
  {as}
  {...rest}
>
  <summary>{summary}</summary>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .full-details {
    color: var(--color-12);
    font-size: var(--text-2);

    summary {
      color: var(--color-11);
      font-size: var(--text-1);
    }
  }
</style>
