---
import type { HTMLAttributes } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Children from '../_Children.astro'

type Props = Omit<HTMLAttributes<'option'>, 'slot'> &
  Childmorphic<{
    text: string
  }>

const { ...rest } = Astro.props
---

<option
  class:list={['full-option']}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</option>

<style>
  .full-option {
    color: var(--color-foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-element);
    line-height: 1;
    font-family: var(--full-font-family);
  }
</style>
