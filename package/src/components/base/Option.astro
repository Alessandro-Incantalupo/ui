---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { z } from 'astro:content'
import Children from '../_Children.astro'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'option'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'option', ...rest } = Astro.props

const object = z.object({
  test: z.string(),
})
---

<Tag
  class:list={['full-option']}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style>
  .full-option {
    color: var(--color-foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-element);
    line-height: 1;
    font-family: var(--full-font-family);
  }
</style>
