---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'input'> = ComponentProps<typeof Tag<As>>

const { as = 'input', type = 'radio', name, ...rest } = Astro.props
---

<Tag
  class:list={['radio']}
  if={name}
  {name}
  {as}
  {type}
  {...rest}
/>

<style is:global lang="scss">
  .full.radio {
    border-width: var(--border-width);
    border-color: var(--border-color);
    border-radius: var(--radius-2);
    background: var(--background);
    accent-color: var(--10);
    font-size: var(--text-2);

    &:hover {
      border: var(--border-color-hover);
      background: var(--background-hover);
    }

    &:active {
      border: var(--border-color-active);
      background: var(--background-active);
    }
  }
</style>
