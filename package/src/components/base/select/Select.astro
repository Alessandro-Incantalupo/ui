---
import type { ComponentProps, Polymorphic } from 'astro/types'
import Component from '../../_Component.astro'
import SelectOption from '../select/SelectOption.astro'
import SelectField from './SelectField.astro'
import SelectLabel from './SelectLabel.astro'

type Props<As extends 'div'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Component> & {
    placeholder?: string
    label?: string
    options?: (ComponentProps<typeof SelectOption> | string)[]
  }

const { as = 'div', label, placeholder, options, ...rest } = Astro.props
---

<Component
  class:list={['select']}
  as={as}
>
  <SelectLabel text={label} />
  <SelectField
    options={options}
    placeholder={placeholder}
  >
    <slot />
  </SelectField>
</Component>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('select') {
    position: relative;
    width: 100%;
  }
</style>
