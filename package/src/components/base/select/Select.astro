---
import type { ComponentProps, Polymorphic } from 'astro/types'
import Component from '../../_Component.astro'
import SelectField from './SelectField.astro'
import SelectLabel from './SelectLabel.astro'

type Props<As extends 'div'> = Polymorphic<{ as: As }> & {
  label?:
    | ComponentProps<typeof SelectLabel>
    | ComponentProps<typeof SelectLabel>['html']
} & Pick<ComponentProps<typeof SelectField>, 'name' | 'placeholder' | 'options'>

const { as = 'div', label, name, placeholder, options, ...rest } = Astro.props
---

<Component
  class:list={['select']}
  {as}
  {...rest}
>
  <SelectLabel
    for={name}
    {...typeof label === 'string' ? { html: label } : label}
  />
  <SelectField
    {name}
    {placeholder}
    {options}
  >
    <slot />
  </SelectField>
</Component>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('select') {
    display: flex;
    position: relative;
    flex-direction: column;
    gap: var(--space-1);
    width: 100%;
  }
</style>
