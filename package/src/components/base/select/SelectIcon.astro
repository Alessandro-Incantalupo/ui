---
import type { Polymorphic } from 'astro/types'
import Component from '../../_Component.astro'
import Icon from '../Icon.astro'

type Props<As extends 'div'> = Polymorphic<{ as: As }>

const { options, ...rest } = Astro.props
---

<Component
  as="div"
  class:list="select-icon-wrapper"
  {...rest}
>
  <Icon
    class="select-icon"
    name="chevron-down"
  />
</Component>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('select-icon-wrapper') {
    appearance: none;
  }

  .select-icon-wrapper {
    display: flex;
    position: absolute;
    top: 0;
    right: var(--element-2);
    align-items: center;
    margin: 0 !important;
    padding: 0;
    height: 100%;
    pointer-events: none;
  }
</style>
