---
import type { Polymorphic } from 'astro/types'
import Icon from '../Icon.astro'

type Props<As extends 'i'> = Polymorphic<{ as: As }>

const { ...rest } = Astro.props
---

<Icon
  class:list={['select-icon']}
  name="chevron-down"
/>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('select-icon') {
    display: flex;
    position: absolute;
    top: 0;
    right: var(--element-2);
    align-items: center;
    margin: 0 !important;
    padding: 0;
    height: 100%;
    pointer-events: none;
  }
</style>
