---
import type { ComponentProps, Polymorphic } from 'astro/types'
import Component from '../../_Component.astro'
import Icon from '../Icon.astro'
import SelectControl from './SelectControl.astro'

type Props<As extends 'div'> = Polymorphic<{ as: As }> &
  Pick<ComponentProps<typeof SelectControl>, 'placeholder' | 'options' | 'name'>

const { as = 'div', placeholder, options, name, ...rest } = Astro.props
---

<Component
  class:list={['select-field']}
  {as}
  {...rest}
>
  <SelectControl
    id={name}
    {name}
    {placeholder}
    {options}
  >
    <slot />
  </SelectControl>
  <Icon
    class:list={['select-icon']}
    name="chevron-down"
    {...rest}
  /></Component
>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('select-field') {
    position: relative;
  }

  @include component('select-icon') {
    position: absolute;
    top: 50%;
    right: var(--space-2);
    transform: translateY(-50%);
  }
</style>
