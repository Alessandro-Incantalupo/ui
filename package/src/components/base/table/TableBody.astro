---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Component from '../../_Component.astro'

type Props<As extends HTMLTag = 'tbody'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Component> & {}

const { as = 'tbody', ...rest } = Astro.props
---

<Component
  class:list={['TableBody']}
  {as}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('TableBody') {
    &_tr:last-child {
      border: none;
    }
  }
</style>
