---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'img'> = ComponentProps<typeof Tag<As>> & {
  position?: 'background' | 'cover' | 'panel'
  frame?: 'mask' | 'mask-sm'
}

function getAltBySrc(): string {
  const filename = Astro.props.src?.split('/').pop()
  const slug = filename && filename.split('.')[0]
  const unslugged = slug?.replace(/-/g, ' ')
  return unslugged || ''
}

const {
  as = 'img',
  loading = 'lazy',
  alt = getAltBySrc(),
  src,
  position,
  frame,
  ...rest
} = Astro.props

