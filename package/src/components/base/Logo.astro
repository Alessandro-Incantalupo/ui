---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../_Tag.astro'
import Children from '../utility/Children.astro'

type Props<As extends HTMLTag = 'a'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'a', href = '/', src, ...rest } = Astro.props
---

<Tag
  class:list={['full-logo']}
  {href}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-logo {
    .full-image {
      display: block !important;
      width: auto !important;
      height: var(--space-5) !important;
      object-fit: contain !important;
      color: var(--color-12) !important;
    }
  }
</style>
