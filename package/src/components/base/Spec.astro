---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import Tag from '../utilities/Tag.astro'
import Icon, { iconSchema } from './Icon.astro'

type Props = z.infer<typeof specSchema>

export const specSchema = componentSchema({
  icon: iconSchema,
})

const { as = 'li', ...rest } = specSchema.parse(Astro.props)
---

<Tag
class:list={["full-spec"]}

  {as}
  {...rest}
>
  <Icon
    name={'check'}
    {...rest.icon}
  />
</Tag>

<style is:global>
  .full-spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    line-height: 1.625;
    font-family: 'Open Sans';
    font: var(--font);
    font-size: var(--text-2);
  }
</style>
