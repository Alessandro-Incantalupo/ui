---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import Tag from '../utility/Tag.astro'
import Icon, { iconSchema } from './Icon.astro'

type Props = z.infer<typeof specSchema>

export const specSchema = componentSchema({
  icon: iconSchema,
})

const { as = 'li', ...rest } = Astro.props
---

<Tag
  class:list={['full-spec']}
  {as}
  {...rest}
>
  <Icon
    name={'check'}
    {...rest.icon}
  />
</Tag>

<style is:global>
  .full-spec {
    display: flex;
    align-items: center;
    gap: 0.5em;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1.625;
  }
</style>
