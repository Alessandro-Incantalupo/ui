---
import type { ComponentProps } from 'astro/types'
import Tag from '../_Tag.astro'

type Props = ComponentProps<typeof Tag>

const { as = 'input', variant = 'outline', name, ...rest } = Astro.props
---

<Tag
  class:list={['input']}
  if={name}
  {name}
  {as}
  {variant}
  {...rest}
/>

<style is:global lang="scss">
  .full.input,
  .full.textarea,
  .full.select {
    display: flex;
    position: relative;
    align-items: center;
    outline: none;
    box-shadow: inset 0 0 0 var(--full-border-width) var(--border);
    border: 0px;
    border-radius: var(--full-border-radius-2);
    background-color: var(--input-background);
    padding: var(--element-2);
    width: 100%;
    min-width: var(--element-2);
    height: calc(var(--text-1) + 2 * var(--element-3));
    color: var(--foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--text-1);
    line-height: 1.25;
    font-family: var(--full-font-family);

    &:focus {
      outline: none;
      box-shadow: inset 0 0 0 2px var(--focus);
    }

    &:disabled {
      opacity: 50%;
      cursor: not-allowed;
      pointer-events: none;
    }
  }
</style>
