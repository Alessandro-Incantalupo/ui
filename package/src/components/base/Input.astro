---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'input'> = ComponentProps<typeof Tag<As>>

const { as = 'input', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-input']}
  if={name}
  {name}
  {as}
  {...rest}
/>

<style is:global>
  .full-input,
  .full-textarea,
  .full-select {
    display: flex;
    position: relative;
    align-items: center;
    transition: var(--full-transition);
    cursor: default;
    outline: none;
    box-shadow: inset 0 0 0 var(--full-border-width)
      var(--full-color-input-border);
    border: 0px;
    border-radius: var(--full-border-radius-2);
    background-color: var(--full-color-input-background);
    padding-right: var(--full-element-2);
    padding-left: var(--full-element-2);
    width: 100%;
    min-width: var(--element-2);
    height: calc(var(--full-text-1) + 2 * var(--full-element-3));
    color: var(--full-color-input-foreground);
    font-weight: var(--full-font-weight);
    font-size: var(--full-text-1);
    line-height: 1.25;
    font-family: var(--full-font-family);

    &:focus {
      outline: none;
      box-shadow: inset 0 0 0 2px var(--full-color-input-foreground);
    }

    &:disabled {
      opacity: 50%;
      cursor: not-allowed;
      pointer-events: none;
    }
  }
</style>
