---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'input'> = ComponentProps<typeof Tag<As>>

const { as = 'input', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-input']}
  if={name}
  {name}
  {as}
  {...rest}
/>

<style is:global>
  .full-input,
  .full-textarea,
  .full-select {
    display: flex;
    transition: var(--full-input-transition);
    outline: none !important;
    box-shadow: inset 0 0 0 1px var(--full-input-border);
    border-radius: var(--radius-1);
    background-color: var(--full-input-background);
    padding: var(--full-space-2) var(--full-space-3);
    width: 100%;
    min-width: var(--element-2);
    height: var(--element-2);
    color: var(--full-input-foreground);
    font: var(--full-text-1);
    font-weight: var(--font-weight);
    line-height: 1.25;
    font-family: var(--font-family);

    &:focus-visible {
      box-shadow: inset 0 0 0 2px var(--full-input-foreground);
    }

    &:disabled {
      cursor: not-allowed;
    }
  }
</style>
