---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'input'> = ComponentProps<typeof Tag<As>>

const { as = 'input', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-input']}
  if={name}
  {name}
  {as}
  {...rest}
/>

<style is:global>
  .full-input {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--color-7);
    border-radius: var(--radius-1);
    background: var(--color-3);
    padding: var(--space-2);
    width: 100%;
    color: var(--color-12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border-color: var(--color-8);
    }

    &:focus {
      border-color: var(--color-11);
    }
  }
</style>
