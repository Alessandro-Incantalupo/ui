---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import type { Childmorphic } from '../../types/Childmorphic'
import Children from '../_Children.astro'
import Tag from '../_Tag.astro'
import Icon from './Icon.astro'
import type Options from './Options.astro'

type Props<As extends HTMLTag = 'select'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag> &
  Childmorphic<{
    options: ComponentProps<typeof Options>
  }>

const { as = 'select', options, ...rest } = Astro.props
---

<Tag
  as="div"
  class="full-select-wrapper"
  {...rest}
>
  <Tag
    if={options}
    {as}
    class:list={['full-select full-input']}
    {...rest}
  >
    <slot name="before" />
    <Children
      {options}
      {...rest}
    />
    <slot />
  </Tag>
  <div class="full-select-icon-wrapper">
    <Icon
      class="full-select-icon"
      name="chevron-down"
    />
  </div>
</Tag>

<style is:global lang="scss">
  .full-select {
    appearance: none;
  }

  .full-select-wrapper {
    position: relative;
    width: 100%;
  }

  .full-select-icon-wrapper {
    display: flex;
    position: absolute;
    top: 0;
    right: 0;
    right: var(--space-element-2);
    align-items: center;
    height: 100%;
    pointer-events: none;
  }
</style>
