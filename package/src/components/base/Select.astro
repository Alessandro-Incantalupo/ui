---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'select'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'select', options, ...rest } = Astro.props
---

<Tag
  if={options}
  {as}
  class:list={['full-select full-input']}
  {...rest}
>
  <slot name="before" />
  <Children
    {options}
    {...rest}
  />
  <slot />
</Tag>

