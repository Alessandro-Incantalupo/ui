---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'select'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children>

const { as = 'select', options, ...rest } = Astro.props
---

<Tag
  if={options}
  {as}
  class:list={['full-select']}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-select {
    outline: none !important;
    border: 1px solid var(--color-7);
    border-radius: var(--radius-1);
    padding: 0 var(--space-3);
    width: 100%;
    height: var(--space-6);
    color: var(--color-12);
    font-size: var(--text-2);
    line-height: 1;
    line-height: 1;
    shadow: none;

    &:hover,
    &:focus {
      border-color: var(--color-8);
    }

    &:focus,
    &:active {
      box-shadow: 0 0 0 2px inset var(--color-8);
    }
  }
</style>
