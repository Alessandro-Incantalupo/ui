---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'a'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    variant?: 'solid' | 'soft' | 'surface' | 'outline' | 'ghost'
  }

const { as = 'a', variant = 'solid', ...rest } = Astro.props
---

<Tag
  class:list={['full-button', variant]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-button {
    display: inline-flex;
    flex-shrink: 0;
    justify-content: center;
    align-items: center;
    vertical-align: top;
    gap: var(--space-2);
    cursor: pointer;
    outline: none !important;
    border-radius: var(--radius-2);
    padding: 0 var(--space-3);
    min-width: var(--space-6);
    height: var(--space-6);
    font: var(--font-button);
    font-size: var(--text-1);
    line-height: 1;
    user-select: none;
    text-align: center;
    text-decoration: none;
    white-space: nowrap;

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      pointer-events: none;
    }

    &:focus-visible {
      outline: 2px solid var(--color-8) !important;
      outline-offset: 2px;
    }

    &.solid,
    &.subtle,
    &.outline,
    &.surface,
    &.ghost {
      box-shadow: inset 0 0 0 var(--border-width) var(--button-border);
      background-color: var(--button-background);
      color: var(--button-color);

      &:hover {
        box-shadow: inset 0 0 0 var(--border-width)
          var(--button-border-hover, var(--button-border));
        background-color: var(
          --button-background-hover,
          var(--button-background)
        );
      }

      &:active {
        background-color: var(
          --button-background-active,
          var(--button-background-hover, var(--button-background))
        );
      }

      &.contrast {
        --button-color: var(--color-12);
      }
    }

    &.solid {
      --button-background: var(--color-9);
      --button-background-hover: var(--color-10);
      --button-color: var(--color-fg);

      &.contrast {
        --button-background: var(--color-12);
        --button-background-hover: var(--color-12);
        --button-color: var(--color-1);
      }
    }

    &.subtle {
      --button-background: var(--color-3);
      --button-background-hover: var(--color-4);
      --button-background-active: var(--color-5);
      --button-color: var(--color-11);
    }

    &.surface {
      --button-background: var(--color-2);
      --button-background-hover: var(--color-3);
      --button-background-active: var(--color-4);
      --button-color: var(--color-11);
      --button-border: var(--color-a7);
      --button-border-hover: var(--color-a8);
    }

    &.outline {
      --button-background-hover: var(--color-2);
      --button-background-active: var(--color-3);
      --button-color: var(--color-11);
      --button-border: var(--color-a7);
      --button-border-hover: var(--color-a8);
    }

    &.ghost {
      --button-background-hover: var(--color-2);
      --button-background-active: var(--color-3);
      --button-color: var(--color-11);
    }
  }

  button {
    border: inherit;
  }
</style>
