---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'a'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    // variant?: 'solid' | 'soft' | 'surface' | 'outline' | 'ghost'
    variant?: 'primary' | 'secondary' | 'outline' | 'ghost'
  }

const { as = 'a', variant = 'primary', ...rest } = Astro.props
---

<Tag
  class:list={['full-button']}
  {variant}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
  <slot name="after" />
</Tag>

<style is:global>
  .full-button {
    display: inline-flex;
    flex-shrink: 0;
    justify-content: center;
    align-items: center;
    vertical-align: top;
    gap: var(--space-2);
    transition: var(--full-transition);
    cursor: pointer;
    outline: none !important;
    border: 1px solid var(--full-border);
    border-radius: var(--radius-2);
    background-color: var(--full-background);
    padding: 0 var(--element-1);
    min-width: var(--element-2);
    height: var(--element-2);
    color: var(--full-foreground);
    font: var(--text-1);
    font-weight: var(--button-font-weight);
    font-family: var(--button-font-family);
    user-select: none;
    text-align: center;
    text-decoration: none;
    white-space: nowrap;

    &:hover {
      background-color: color-mix(
        in hsl,
        var(--full-background) 40%,
        var(--full-background) 40%
      );
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      pointer-events: none;
    }

    &:focus-visible {
      outline: 2px solid var(--color-8) !important;
      outline-offset: 2px;
    }

    &.variant-primary {
      &:hover {
        background-color: color-mix(
          in hsl,
          var(--full-background) 45%,
          var(--full-background) 45%
        );
      }
    }

    &.variant-bordered,
    &.variant-ghost {
      background: transparent;

      &:hover {
        background-color: color-mix(
          in hsl,
          var(--full-secondary-background) 20%,
          var(--full-secondary-background) 20%
        );
      }
    }

    &.variant-ghost {
      border-color: transparent;
    }
  }
</style>
