---
import tablerIcons from '@iconify-json/tabler/icons.json'
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'i'> = ComponentProps<typeof Tag<As>> & {
  name?: string
}

const { as = 'i', name, ...rest } = Astro.props

const trimmedName = name?.trim() as string | undefined
const icon = trimmedName && (tablerIcons as any)?.icons[trimmedName]?.body
---

<Tag
  class:list={['full-icon']}
  if={icon}
  {as}
  {...rest}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    set:html={icon}
  />
</Tag>

<style is:global lang="scss">
  .full-icon {
    display: inline-flex;
    position: relative;
    justify-content: center;
    align-items: center;
    width: 1em;
    height: 1em;
    color: var(--color-foreground);
    font-size: var(--text);

    &.contrast {
      color: var(--color-12);
    }

    &:is(.full-button > .full-icon),
    &:is(.full-badge > .full-icon),
    &:is(.full-link > .full-icon) {
      color: inherit;
    }

    svg {
      position: absolute;
      width: 120%;
      height: 120%;
    }
  }
</style>
