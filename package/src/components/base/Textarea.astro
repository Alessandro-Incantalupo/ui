---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'textarea'> = ComponentProps<typeof Tag<As>>

const { as = 'textarea', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-textarea']}
  if={name}
  {name}
  {as}
  {...rest}
/>

<style is:global>
  .full-textarea {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
