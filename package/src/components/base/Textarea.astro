---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'textarea'> = ComponentProps<typeof Tag>

const {
  as = 'textarea',
  rows = '5',
  variant = 'outline',
  name,
  ...rest
} = Astro.props
---

<Tag
  class:list={['textarea']}
  if={name}
  {rows}
  {name}
  {variant}
  {as}
  {...rest}
/>

<style is:global lang="scss">
  .full.textarea {
    height: calc((var(--text-element) + 2 * var(--space-element-3)) * 2);
    resize: vertical;
  }
</style>
