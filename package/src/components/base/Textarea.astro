---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'textarea'> = ComponentProps<typeof Tag<As>>

const { as = 'textarea', rows = '5', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-textarea']}
  if={name}
  {rows}
  {name}
  {as}
  {...rest}
/>

<style is:global lang="scss">
  .full-textarea {
    /* Extends .full-input */
    height: auto;
    height: calc((var(--text-element) + 2 * var(--space-element-3)) * 2);
  }
</style>
