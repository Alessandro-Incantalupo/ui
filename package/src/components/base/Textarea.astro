---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'textarea'> = ComponentProps<typeof Tag<As>>

const { as = 'textarea', name, ...rest } = Astro.props
---

<Tag
  class:list={['full-textarea']}
  if={name}
  {name}
  {as}
  {...rest}
/>

<style is:global>
  .full-textarea {
    outline: none;
    border-width: var(--border-width);
    border-color: var(--color-7);
    border-radius: var(--radius-1);
    padding: var(--space-3);
    width: 100%;
    min-height: var(--space-6);
    color: var(--color-12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover,
    &:focus {
      border-color: var(--color-8);
    }

    &:focus,
    &:active {
      box-shadow: 0 0 0 2px inset var(--color-8);
    }
  }
</style>
