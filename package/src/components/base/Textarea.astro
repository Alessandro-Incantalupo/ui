---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Tag from '../_Tag.astro'

type Props<As extends HTMLTag = 'textarea'> = Polymorphic<{ as: As }> &
  ComponentProps<typeof Tag>

const {
  as = 'textarea',
  rows = '5',
  variant = 'outline',
  name,
  ...rest
} = Astro.props
---

<Tag
  class:list={['textarea input']}
  if={true}
  {rows}
  {variant}
  {as}
  {...rest}
/>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('textarea') {
    height: calc((var(--label) + 2 * var(--element-3)) * 2);
    resize: vertical;
  }
</style>
