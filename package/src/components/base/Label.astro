---
import type { ComponentProps, HTMLTag } from 'astro/types'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props<As extends HTMLTag = 'label'> = ComponentProps<typeof Tag<As>> &
  ComponentProps<typeof Children> & {
    variant?: 'lowered' | 'accent'
  }

const { as = 'label', variant, ...rest } = Astro.props
---

<Tag
  class:list={[
    'full-label',
    {
      [`full-variant-${variant}`]: variant,
    },
  ]}
  {as}
  {...rest}
>
  <slot name="before" />
  <Children {...rest} />
  <slot />
</Tag>

<style is:global lang="scss">
  .full-label {
    display: flex;
    flex-direction: column;
    color: var(--full-color-foreground);
    font: var(--full-text-1);
    font-weight: var(--font-weight);
    font-family: var(--font-family);
  }
</style>
