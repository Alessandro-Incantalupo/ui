---
import { z } from 'zod'
import { componentSchema } from '../../schemas/componentSchema'
import Children from '../utility/Children.astro'
import Tag from '../utility/Tag.astro'

type Props = z.infer<typeof labelSchema>

export const labelSchema = componentSchema({})

const { as = 'label', html, ...rest } = labelSchema.parse(Astro.props)
---

<Tag
  class:list={['full-label']}
  for={html}
  {html}
  {as}
  {...rest}
>
  <slot name="before" />
  <slot>
    <Children {...rest} />
  </slot>
  <slot name="after" />
</Tag>

<style is:global>
  .full-label {
    color: var(--hue11);
    font-size: var(--text-1);
  }
</style>
