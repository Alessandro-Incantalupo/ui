---
import { buildProps, type BuildProps } from '../utils'

interface Base {
  select: string | null
  options: (
    | string
    | {
        value: string
        label: string
      }
  )[]
}

type Props = BuildProps<Base, 'select', 'select'>
const props = buildProps(Astro, 'select')

const { select, options, ...rest } = props
---

<select
  id={select}
  name={select}
  {...rest}
>
  <option
    value="Niks geselecteerd"
    disabled
    selected
  >
    Kies een optie
  </option>
  {
    options.map((option) => (
      <option
        value={option}
        {...option}
      >
        {option}
      </option>
    ))
  }
</select>

<style is:global>
  .select {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
