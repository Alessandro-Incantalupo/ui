---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof taglineSchema>;

export const taglineSchema = componentSchema({});

const {
  tag = 'p',
  color = 'accent',
  ...rest
} = taglineSchema.parse(Astro.props);
---

<Component
  class:list={['tagline']}
  {tag}
  {color}
  {...rest}
>
  <slot />
</Component>

<style is:global>
  .tagline {
    color: var(--hue11);
    font: var(--font);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
