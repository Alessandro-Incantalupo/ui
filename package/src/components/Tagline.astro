---
import { z } from 'astro:content'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof tagline>

export const tagline = tag.extend({})

const { as = 'p', color = 'accent', ...rest } = tagline.parse(Astro.props)
---

<Tag
  class:list={['tagline']}
  {as}
  {color}
  {...rest}
>
  <Fragment set:html={tagline} />
  <slot />
</Tag>

<style is:global>
  .tagline {
    color: var(--hue11);
    font: var(--font);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
