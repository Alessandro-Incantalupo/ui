---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils'
import Tag from './Tag.astro'

type Props = z.infer<typeof tagline>

export const tagline = buildProps({})

const { as = 'p', color = 'accent', ...rest } = parseProps(tagline, Astro.props)
---

<Tag
  class:list={['tagline']}
  {as}
  {color}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .tagline {
    color: var(--hue11);
    font: var(--font);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
