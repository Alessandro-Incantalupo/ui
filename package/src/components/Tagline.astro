---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'p'> = BuildProps<
  'tagline',
  ComponentProps<typeof Tag<As>> & {
    tagline?: string | null
  }
>

const {
  as = 'p',
  color = 'accent',
  tagline,
  ...rest
} = buildProps('tagline', Astro)
---

<Tag
  {as}
  {color}
  {...rest}
>
  <Fragment set:html={tagline} />
  <slot />
</Tag>

<style is:global>
  /* FIXME */
  .tagline {
    --font-size: var(--text-1);
    --font-weight: 600;
    --color: var(--hue11);
    color: var(--color);
    font: var(--font);
  }
</style>
