---
import { z } from 'zod'
import { Dynamic } from '..'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof taglineSchema>

export const taglineSchema = componentSchema({})

const { as = 'p', color = 'accent', ...rest } = taglineSchema.parse(Astro.props)
---

<Tag
  class:list={['tagline']}
  {as}
  {color}
  {...rest}
>
  <Dynamic {...rest} />
  <slot />
</Tag>

<style is:global>
  .tagline {
    color: var(--hue11);
    font: var(--font);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
