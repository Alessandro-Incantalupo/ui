---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof taglineSchema>

export const taglineSchema = buildProps({})

const {
  as = 'p',
  color = 'accent',
  ...rest
} = parseProps(taglineSchema, Astro.props)
---

<Tag
  class:list={['tagline']}
  {as}
  {color}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .tagline {
    color: var(--hue11);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
