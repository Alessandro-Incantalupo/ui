---
import { z } from 'astro:content'
import { morph } from '../utils'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('tagline', {
  tagline: z.string().nullish(),
})

const { as = 'p', tagline, ...rest } = meso(Astro.props)
---

<Tag
  class:list={['tagline']}
  {as}
  {...rest}
>
  <Fragment set:html={tagline} />
  <slot />
</Tag>

<style is:global>
  .tagline {
    color: var(--hue11);
    font: var(--font);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
