---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

// type Props<As extends HTMLTag = 'p'> = BuildProps<
//   'tagline',
//   ComponentProps<typeof Tag<As>> & {
//     tagline?: string | null
//   }
// >

interface Props
  extends BuildProps<'tagline', Props, string>,
    ComponentProps<typeof Tag> {}

const { as = 'p', tagline, ...rest } = buildProps('tagline', Astro.props)
---

<Tag
  class:list={['tagline']}
  {as}
  {...rest}
>
  <Fragment set:html={tagline} />
  <slot />
</Tag>

<style is:global>
  .tagline {
    color: var(--hue11);
    font: var(--font);
    font-size: var(--text-1);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
