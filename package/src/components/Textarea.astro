---
import { z } from 'astro:content';
import { buildProps, parseProps } from '../utils';

type Props = z.infer<typeof textarea>;

export const textarea = buildProps({
  name: z.string().nullable(),
  rows: z.number().nullish(),
});

const { name, rows = 5 } = parseProps(textarea, Astro.props);
---

{
  name && (
    <textarea
      class="textarea"
      id={name}
      {name}
      {rows}
    />
  )
}

<style is:global>
  .textarea {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
