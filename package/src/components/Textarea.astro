---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

// type Props<As extends HTMLTag = 'textarea'> = BuildProps<
//   'textarea',
//   ComponentProps<typeof Tag<As>> & {
//     textarea?: string | null
//   }
// >

interface Props
  extends BuildProps<'textarea', Props, string>,
    ComponentProps<typeof Tag> {}

const {
  as = 'textarea',
  textarea,
  rows = 5,
  ...rest
} = buildProps('textarea', Astro.props)
---

{
  textarea && (
    <textarea
      class="textarea"
      name={textarea}
      id={textarea}
      rows={rows}
      {...rest}
    />
  )
}

<style is:global>
  .textarea {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
