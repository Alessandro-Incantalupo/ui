---
import { z } from 'zod'
import { componentSchema } from '../schemas/componentSchema'
import Parent from './misc/Parent.astro'

type Props = z.infer<typeof textareaSchema>

export const textareaSchema = componentSchema({
  name: z.string().nullable(),
  rows: z.number().or(z.string()),
})

const { tag = 'textarea', name, ...rest } = textareaSchema.parse(Astro.props)
---

<Parent
  if={name}
  {tag}
  class:list={['textarea']}
  name={name}
  {...rest}
/>

<style is:global>
  .textarea {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
