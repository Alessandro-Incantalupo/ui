---
import { z } from 'astro:content'
import { morph } from '../utils'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('textarea', {
  textarea: z.string().nullish(),
  rows: z.number().nullish(),
})

const { as = 'textarea', textarea, rows = 5, ...rest } = meso(Astro.props)
---

{
  textarea && (
    <textarea
      class="textarea"
      name={textarea}
      id={textarea}
      {rows}
      {...rest}
    />
  )
}

<style is:global>
  .textarea {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
