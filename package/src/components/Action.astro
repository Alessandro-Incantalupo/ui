---
import type { ComponentProps } from 'astro/types'
import { endomorphic, getChildProps, type Endomorphic } from '../utils'
import Buttons from './Buttons.astro'
import Form from './Form.astro'
import Product from './Product.astro'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'action'>,
    ComponentProps<typeof Tag>,
    Pick<ComponentProps<typeof Form>, 'form' | '_form'>,
    // ComponentProps<typeof Product>,
    Pick<ComponentProps<typeof Buttons>, 'buttons' | '_buttons'> {
  align?: 'start' | 'center' | null
}

const { ...rest } = endomorphic(Astro.props, 'action')
const child = getChildProps(rest)
---

<Tag
  class="action"
  {...rest}
>
  <!-- {props.price ? <Product {...rest} /> : <Form {...(rest as any)} />} -->
  <Buttons {...child} />
  <slot />
</Tag>

<style is:global>
  .action {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
