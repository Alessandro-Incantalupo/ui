---
import { z } from 'astro:content'
import Buttons, { buttons } from './Buttons.astro'
import Form, { form } from './Form.astro'
import Tag, { tag } from './Tag.astro'

type Props = z.infer<typeof action>

export const action = tag.extend({
  buttons,
  form,
  align: z.enum(['start', 'center']).nullish(),
})

const { align, ...rest } = action.parse(Astro.props)
---

<Tag
  class:list={['action, align']}
  {...rest}
>
  <!-- {props.price ? <Product {...rest} /> : <Form {...(rest as any)} />} -->
  <Form {...rest.form} />
  <Buttons {...rest.buttons} />
  <slot />
</Tag>

<style is:global>
  .action {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
