---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof actionSchema>;

export const actionSchema = componentSchema({
  align: z.enum(['start', 'center']),
});

const { align, ...rest } = actionSchema.parse(Astro.props);
---

<Component
  class:list={['action', align]}
  {...rest}
/>

<style is:global>
  .action {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
