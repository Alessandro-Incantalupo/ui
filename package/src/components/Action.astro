---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils'
import Buttons, { buttons } from './Buttons.astro'
import Form, { form } from './Form.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof action>

export const action = buildProps({
  form,
  buttons,
  align: z.enum(['start', 'center']).nullish(),
})

const { align, ...rest } = parseProps(action, Astro.props)
---

<Tag
  class:list={['action, align']}
  {...rest}
>
  <!-- {props.price ? <Product {...rest} /> : <Form {...(rest as any)} />} -->
  <Form {...rest.form} />
  <Buttons {...rest.buttons} />
  <slot />
</Tag>

<style is:global>
  .action {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
