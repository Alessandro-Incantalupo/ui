---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, getChildProps, type BuildProps } from '../utils'
import Buttons from './Buttons.astro'
import Form from './Form.astro'
import Product from './Product.astro'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'div'> = BuildProps<
  'action',
  ComponentProps<typeof Tag<As>> &
    Pick<ComponentProps<typeof Form>, 'form' | '_form'> &
    ComponentProps<typeof Product> &
    Pick<ComponentProps<typeof Buttons>, 'buttons' | '_buttons'> & {
      align?: 'start' | 'center' | null
    }
>

const { ...rest } = buildProps('action', Astro.props)
const child = getChildProps(rest)
---

<Tag
  class="action"
  {...rest}
>
  <!-- {props.price ? <Product {...rest} /> : <Form {...(rest as any)} />} -->
  <Buttons {...child} />
  <slot />
</Tag>

<style is:global>
  .action {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
