---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Buttons, { buttonsSchema } from './Buttons.astro'
import Form, { formSchema } from './Form.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof actionSchema>

export const actionSchema = buildProps({
  form: formSchema,
  buttons: buttonsSchema,
  align: z.enum(['start', 'center']).nullish(),
})

const { align, ...rest } = parseProps(actionSchema, Astro.props)
---

<Tag
  class:list={['action, align']}
  {...rest}
>
  <!-- {props.price ? <Product {...rest} /> : <Form {...(rest as any)} />} -->
  <Form {...rest.form} />
  <Buttons {...rest.buttons} />
  <slot />
</Tag>

<style is:global>
  .action {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
</style>
