---
import { z } from 'astro:content'
import { morph } from '../utils'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('title', {
  title: z.string().nullish(),
})

const { title = 'h2', ...rest } = meso(Astro.props)
---

<Tag
  class:list={['title']}
  {...rest}
>
  <Fragment set:html={title} />
  <slot />
</Tag>

<style is:global>
  .title {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
