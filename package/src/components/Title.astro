---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

type Props<As extends HTMLTag = 'h2'> = BuildProps<
  'title',
  ComponentProps<typeof Tag<As>> & {
    title?: string | null
    contrast?: boolean | null
  }
>

const {
  as = 'h2',
  contrast = true,
  title,
  ...rest
} = buildProps('title', Astro.props)
---

<Tag
  class:list={['title', { contrast }]}
  {...rest}
>
  <Fragment set:html={title} />
  <slot />
</Tag>

<style is:global>
  .title {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
