---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof title>

export const title = buildProps({})

const { as = 'h2', contrast = true, ...rest } = parseProps(title, Astro.props)
---

<Tag
  class:list={['title']}
  {as}
  {contrast}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .title {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
