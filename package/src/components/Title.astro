---
import { z } from 'zod'
import { Dynamic } from '..'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof titleSchema>

export const titleSchema = componentSchema({})

const { as = 'h2', contrast = true, ...rest } = titleSchema.parse(Astro.props)
---

<Tag
  class:list={['title']}
  {as}
  {contrast}
  {...rest}
>
  <Dynamic {...rest} />
  <slot />
</Tag>

<style is:global>
  .title {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
