---
import { z } from 'zod'
import { DynamicTag } from '..'
import { componentSchema } from '../schemas/componentSchema'

type Props = z.infer<typeof titleSchema>

export const titleSchema = componentSchema({})

const { as = 'h2', contrast = true, ...rest } = titleSchema.parse(Astro.props)
---

<DynamicTag
  class:list={['title']}
  {as}
  {contrast}
  {...rest}
/>

<style is:global>
  .title {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
