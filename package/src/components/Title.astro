---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Tag from './Tag.astro'

interface Base extends ComponentProps<typeof Tag> {
  title?: string | null
}

type Props = BuildProps<Base, 'title'>
const props = buildProps(Astro, 'title')

const { title, contrast = true, ...rest } = props
---

<Tag
  {contrast}
  {...rest}
>
  <Fragment set:html={title} />
  <slot />
</Tag>

<style is:global>
  .title {
    /* FIXME */
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
