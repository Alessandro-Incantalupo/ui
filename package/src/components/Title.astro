---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof titleSchema>

export const titleSchema = buildProps({})

const {
  as = 'h2',
  contrast = true,
  ...rest
} = parseProps(titleSchema, Astro.props)
---

<Tag
  class:list={['title font-title']}
  {as}
  {contrast}
  {...rest}
>
  <slot />
</Tag>

<style is:global>
  .title {
    @apply font-title;

    color: var(--hue11);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }

    &:is(.compact .title) {
      @apply font-subtitle;
    }
  }
</style>
