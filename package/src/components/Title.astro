---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Component from './misc/Component.astro';

type Props = z.infer<typeof titleSchema>;

export const titleSchema = componentSchema({});

const { tag = 'h2', contrast = true, ...rest } = titleSchema.parse(Astro.props);
---

<Component
  class:list={['title']}
  {tag}
  {contrast}
  {...rest}
/>

<style is:global>
  .title {
    color: var(--hue11);
    font: var(--font);
    font-weight: 700;
    font-size: var(--text-3);
    line-height: 1.25;

    &.contrast {
      color: var(--hue12);
    }
  }
</style>
