---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Tag from './Tag.astro'

type Props = z.infer<typeof proseSchema>

export const proseSchema = buildProps({
  render: z.any(),
})

const { render, ...rest } = parseProps(proseSchema, Astro.props)
const response = render ? await render() : null
const Content = response?.Content
---

<Tag
  class="prose"
  {...rest}
>
  {Content && <Content />}
</Tag>

<style is:global>
  .prose {
    column-gap: var(--space-5);
    order: 3;
    column-width: 500px;
    column-count: auto;
    text-align: left;

    * {
      align-items: flex-start;

      margin-bottom: 0.5em;
      color: var(--sand12);
      font-size: var(--text-2);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      /* FIXME */
      color: var(--hue12);
      font-weight: 700;
      font-size: var(--text-3);
      line-height: 1.25;
    }

    h1 {
      font-size: var(--text-3);
    }
    h2 {
      font-size: var(--text-3);
    }
    h3 {
      font-size: var(--text-4);
    }
    h4 {
      font-size: var(--text-3);
    }
    h5 {
      font-size: var(--text-2);
    }
    h6 {
      font-size: var(--text-1);
    }

    :is(h1, h2, h3, h4, h5, h6) {
      --color: var(--hue12);

      margin-top: 2em;
      margin-bottom: 0.5em;
      color: var(--color);
    }

    :is(h1, h2, h3, h4, h5, h6):first-child {
      margin-top: 0;
    }

    * {
      break-inside: avoid-column;
    }

    ul {
      padding-left: 1.5em;
      list-style: disc;
    }
  }
</style>
