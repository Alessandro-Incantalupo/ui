---
import { z } from 'zod';
import { componentSchema } from '../schemas/componentSchema';
import Button, { buttonSchema } from './Button.astro';
import FieldGroup, { fieldGroupSchema } from './FieldGroup.astro';
import Component from './misc/Component.astro';

type Props = z.infer<typeof formSchema>;

export const formSchema = componentSchema({
  fieldGroup: fieldGroupSchema,
  button: buttonSchema,
  method: z.string(),
});

const {
  tag = 'form',
  method = 'POST',
  ...rest
} = formSchema.parse(Astro.props);
---

<Component
  class="form"
  {tag}
  {method}
  {...rest}
>
  <FieldGroup {...rest.fieldGroup} />
  <Button
    as="button"
    type="submit"
    {...rest.button}
  />
</Component>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
