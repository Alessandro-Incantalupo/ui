---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Button, { button } from './Button.astro'
import Fields, { fields } from './Fields.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof form>

export const form = buildProps({
  fields,
  button,
})

const { as = 'form', method = 'POST', ...rest } = parseProps(form, Astro.props)
---

<Tag
  class="form"
  {as}
  {method}
  {...rest}
>
  <Fields {...rest.fields} />
  <Button
    as="button"
    type="submit"
    {...rest.button}
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
