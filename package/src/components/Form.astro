---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Button, { buttonSchema } from './Button.astro'
import FieldGroup, { fieldGroupSchema } from './FieldGroup.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof formSchema>

export const formSchema = buildProps({
  fieldGroup: fieldGroupSchema,
  button: buttonSchema,
  method: z.string().nullish(),
  action: z.any(),
  key: z.any(),
  replyTo: z.any(),
  gotcha: z.any(),
})

const {
  as = 'form',
  method = 'POST',
  action = '/bedankt',
  replyTo,
  key,
  gotcha,
  ...rest
} = parseProps(formSchema, Astro.props)
---

<Tag
  class="form"
  {action}
  {as}
  {method}
  {...rest}
>
  {
    key && (
      <input
        type="hidden"
        name="inbox_key"
        value={key}
      />
    )
  }
  {
    gotcha && (
      <input
        type="text"
        name="_gotcha"
        style="display: none;"
      />
    )
  }
  <FieldGroup {...rest.fieldGroup} />
  <slot />
  <Button
    as="button"
    type="submit"
    {...rest.button}
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;

    .button {
      border: none;
    }
  }
</style>
