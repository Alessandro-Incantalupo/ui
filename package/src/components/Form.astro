---
import { z } from 'astro:content'
import { morph } from '../utils'
import Button from './Button.astro'
import Fields, { macro as fields } from './Fields.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof macro>

export const { macro, meso, micro } = morph('form', {
  ...fields,
  ...Button,
})

const { as = 'form', method = 'POST', ...rest } = meso(Astro.props)
---

<Tag
  class="form"
  {as}
  {method}
  {...rest}
>
  <Fields {...micro(rest)} />
  <Button
    as="button"
    type="submit"
    {...micro(rest)}
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
