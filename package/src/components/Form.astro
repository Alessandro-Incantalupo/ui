---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Button from './Button.astro'
import Fields from './Fields.astro'
import Tag from './Tag.astro'

interface Base
  extends Pick<ComponentProps<typeof Fields>, 'fields' | '_fields'>,
    Pick<ComponentProps<typeof Button>, 'button' | '_button'> {}

type Props = BuildProps<Base, 'form', 'form'>
const props = buildProps(Astro, 'form')

const { button, _button, fields, _fields, method = 'POST', ...rest } = props
---

<Tag
  {method}
  {...rest}
>
  <Fields
    {fields}
    {_fields}
  />
  <Button
    {button}
    {_button}
    type="submit"
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
