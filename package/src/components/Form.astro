---
import type { ComponentProps } from 'astro/types'
import { getChildProps, macromorphic, type Endomorphic } from '../utils'
import Button from './Button.astro'
import Fields from './Fields.astro'
import Tag from './Tag.astro'

interface Props
  extends Endomorphic<Props, 'form'>,
    ComponentProps<typeof Tag>,
    ComponentProps<typeof Fields>,
    ComponentProps<typeof Button> {}

const {
  as = 'form',
  method = 'POST',
  ...rest
} = macromorphic(Astro.props, 'form')
const child = getChildProps(rest)
---

<Tag
  class="form"
  {as}
  {method}
  {...rest}
>
  <Fields {...child} />
  <Button
    as="button"
    type="submit"
    {...rest}
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
