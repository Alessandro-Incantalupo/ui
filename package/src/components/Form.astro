---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Button, { buttonSchema } from './Button.astro'
import FieldGroup from './FieldGroup.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof formSchema>

export const formSchema = buildProps({
  fields: fieldsSchema,
  button: buttonSchema,
})

const {
  as = 'form',
  method = 'POST',
  ...rest
} = parseProps(formSchema, Astro.props)
---

<Tag
  class="form"
  {as}
  {method}
  {...rest}
>
  <FieldGroup {...rest.fields} />
  <Button
    as="button"
    type="submit"
    {...rest.button}
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
