---
import type { ComponentProps } from 'astro/types'
import { buildProps, getChildProps, type BuildProps } from '../utils'
import Button from './Button.astro'
import Fields from './Fields.astro'
import Tag from './Tag.astro'

interface Props
  extends BuildProps<'form', Props>,
    ComponentProps<typeof Tag>,
    ComponentProps<typeof Fields>,
    ComponentProps<typeof Button> {}

const {
  as = 'form',
  method = 'POST',
  ...rest
} = buildProps('form', Astro.props)
const child = getChildProps(rest)
---

<Tag
  class="form"
  {as}
  {method}
  {...rest}
>
  <Fields {...child} />
  <Button
    as="button"
    type="submit"
    {...rest}
  />
</Tag>

<style is:global>
  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
    min-width: min(500px, 85vw);
    max-width: max(calc(var(--space-6) * 3), 500px);
    text-align: left;
  }
</style>
