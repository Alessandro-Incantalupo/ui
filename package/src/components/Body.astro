---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Header, { headerSchema } from './Header.astro'
import Section, { sectionSchema } from './Section.astro'
import Sections, { sectionsSchema } from './Sections.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof bodySchema>

export const bodySchema = buildProps({
  header: headerSchema,
  section: sectionSchema,
  sections: sectionsSchema,
  hero: sectionSchema,
  cta: sectionSchema,
})

const { as = 'body', ...rest } = parseProps(bodySchema, Astro.props)
---

<Tag
  class="body hue-base hue-accent"
  {as}
  {...rest}
>
  <!-- <Banner></Banner> -->
  <Header {...rest.header} />
  <Sections {...rest.sections}>
    <Section
      class="hero"
      slot="before"
      {...rest.hero}
      {...rest}
    />
    <Section
      class="cta"
      slot="after"
      {...rest.cta}
    />
  </Sections>
  <slot />
  <!-- <Footer {...rest} /> -->
  <!-- <Legal {...rest} /> -->

  <style is:global>
    .body {
      transition: var(--transition);
      background: var(--hue1);
      height: 100%;
      min-height: 100vh;
      color: var(----hue11);
      font: var(--font);

      &.dark {
        color-scheme: dark;
      }
      &.light {
        color-scheme: light;
      }
    }
  </style>
</Tag>
