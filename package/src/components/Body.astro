---
import { z } from 'astro:content'
import { buildProps, parseProps } from '../utils'
import Section, { section } from './Section.astro'
import Sections, { sections } from './Sections.astro'
import Tag from './Tag.astro'

type Props = z.infer<typeof body>

export const body = buildProps({
  section,
  sections,
  hero: section,
  cta: section,
})

const { as = 'body', ...rest } = parseProps(body, Astro.props)
---

<Tag
  class="body hue-base hue-accent"
  {as}
  {...rest}
>
  <!-- <Banner></Banner> -->
  <!-- <Header {...rest} /> -->

  <Sections {...rest.sections}>
    <Section
      class="hero"
      slot="before"
      {...rest.hero}
      {...rest}
    />
    <Section
      class="cta"
      slot="after"
      {...rest.cta}
    />
  </Sections>
  <slot />
  <!-- <Footer {...rest} /> -->
  <!-- <Legal {...rest} /> -->

  <style is:global>
    .body {
      transition: var(--transition);
      background: var(--hue1);
      height: 100%;
      min-height: 100vh;
      color: var(----hue11);
      font: var(--font);

      &.dark {
        color-scheme: dark;
      }
      &.light {
        color-scheme: light;
      }
    }
  </style>
</Tag>
