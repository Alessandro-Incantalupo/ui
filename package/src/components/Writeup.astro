---
import type { ComponentProps, HTMLTag } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Description from './Description.astro'
import Tag from './Tag.astro'
import Tagline from './Tagline.astro'
import Title from './Title.astro'

type Props<As extends HTMLTag> = BuildProps<
  'writeup',
  ComponentProps<typeof Tag<As>> &
    Pick<ComponentProps<typeof Tagline>, 'tagline' | '_tagline'> &
    Pick<ComponentProps<typeof Title>, 'title' | '_title'> &
    Pick<ComponentProps<typeof Description>, 'description' | '_description'> & {
      writeup?: string | null
      align?: 'start' | 'center' | 'stretch' | null
    }
>

const { writeup, ...rest } = buildProps('writeup', Astro)
---

<Tag {...rest}>
  <Tagline
    child
    {...rest}
  />
  <Title
    child
    {...rest}
  />
  <Description
    child
    {...rest}
  />
  <Fragment set:html={writeup} />
</Tag>

<style is:global>
  .writeup {
    display: flex;
    row-gap: var(--space-3);
    flex-direction: column;
    align-items: flex-start;
    max-width: max(calc(var(--space-6) * 4), 500px);
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    &:is(.split &.center) {
      align-items: start;
      text-align: left;
    }
  }
</style>
