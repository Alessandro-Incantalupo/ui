---
import { z } from 'zod'
import { buildProps, parseProps } from '../utils/props'
import Description, { description } from './Description.astro'
import Tag from './Tag.astro'
import Tagline, { tagline } from './Tagline.astro'
import Title, { title } from './Title.astro'

type Props = z.infer<typeof writeup>

export const writeup = buildProps({
  tagline,
  title,
  description,
  align: z.enum(['start', 'center']).nullish(),
})

const { align, ...rest } = parseProps(writeup, Astro.props)
---

<Tag
  class:list={['writeup', align]}
  {...rest}
>
  <slot>
    <Tagline {...rest.tagline} />
    <Title {...rest.title} />
    <Description {...rest.description} />
  </slot>
</Tag>

<style is:global>
  .writeup {
    display: flex;
    row-gap: var(--space-3);
    flex-direction: column;
    align-items: flex-start;
    max-width: max(calc(var(--space-6) * 4), 700px);
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    &:is(.split &.center) {
      align-items: start;
      text-align: left;
    }
  }
</style>
