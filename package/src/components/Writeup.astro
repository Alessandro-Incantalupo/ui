---
import { z } from 'zod'
import { Children } from '..'
import { componentSchema } from '../schemas/componentSchema'
import Tag from './Tag.astro'

type Props = z.infer<typeof writeupSchema>

export const writeupSchema = componentSchema({
  align: z.enum(['start', 'center']),
})

const { align, ...rest } = writeupSchema.parse(Astro.props)
---

<Tag
  class:list={['writeup', align]}
  {...rest}
>
  <Children {...rest} />
</Tag>

<style is:global>
  .writeup {
    display: flex;
    row-gap: var(--space-3);
    flex-direction: column;
    align-items: flex-start;
    text-align: left;

    &.center {
      align-items: center;
      text-align: center;
    }

    &:is(.split &.center) {
      align-items: start;
      text-align: left;
    }
  }
</style>
