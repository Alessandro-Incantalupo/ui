---
import type { ComponentProps } from 'astro/types'
import { buildProps, type BuildProps } from '../utils'
import Option from './Option.astro'
import Tag from './Tag.astro'

// type Props<As extends HTMLTag = 'div'> = BuildProps<
//   'options',
//   ComponentProps<typeof Tag<As>> & {
//     options?: ComponentProps<typeof Option>['option'][]
//   }
// >

interface Props
  extends BuildProps<
      'options',
      Props,
      ComponentProps<typeof Option>['option'][]
    >,
    ComponentProps<typeof Tag> {}

const { options, ...rest } = buildProps('options', Astro.props)
---

{
  options && (
    <select
      class="options"
      {...rest}
    >
      {options?.map((option) => (
        <Option {option} />
      ))}
    </select>
  )
}

<style is:global>
  .options {
    transition: var(--transition);
    outline: none;
    border-width: var(--border-width);
    border-color: var(--hue7);
    border-radius: var(--radius-1);
    background: var(--hue3);
    padding: var(--space-2);
    width: 100%;
    color: var(--hue12);
    font-size: var(--text-2);
    line-height: 1;

    &:hover {
      border-color: var(--hue8);
    }

    &:focus {
      border-color: var(--hue11);
    }
  }
</style>
